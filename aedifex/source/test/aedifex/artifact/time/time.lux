(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]]
   [error
    ["[0]" try (.use "[1]:[0]" functor)]]
   [data
    ["[0]" text
     ["<[1]>" \\projection]]]
   [math
    ["[0]" random (.only Random)]
    [number
     [/64
      ["n" natural]
      ["i" integer]]]]
   ["[0]" time]
   [test
    ["_" property (.only Test)]]]]
 [\\program
  ["[0]" /]])

(the .public random
  (Random /.Time)
  (random.one (|>> time.clock
                   (has time.:milli_second 0)
                   time.time)
              time.random))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Time])
      (all _.and
           (monad.let random.monad
             [expected ..random]
             (_.coverage [/.as_text /.of_text]
               (|> expected
                   /.as_text
                   (<text>.value /.of_text)
                   (try:each (by time.equivalence = expected))
                   (try.else false))))
           )))
