(.using
 [library
  [lux (.except)
   [abstract
    ["<>" projection (.only)]
    ["[0]" monad]]
   [data
    ["[0]" text (.only)
     ["%" \\injection]
     ["<[1]>" \\projection (.only Projection)]]]
   [math
    [number
     [/64
      ["n" natural]]]]
   ["[0]" time]]]
 ["[0]" //
  ["[1]" date]])

(every .public Time
  time.Time)

(the .public (as_text value)
  (text.Injection Time)
  (let [(open "_[0]") (time.clock value)]
    (text (//.pad _#hour)
          (//.pad _#minute)
          (//.pad _#second))))

(the .public of_text
  (<text>.Projection Time)
  (monad.let <>.monad
    [hour (<>.of n.base_10 (<text>.exactly 2 <text>.base_10))
     minute (<>.of n.base_10 (<text>.exactly 2 <text>.base_10))
     second (<>.of n.base_10 (<text>.exactly 2 <text>.base_10))]
    (<>.of_try (time.time
                [time.#hour hour
                 time.#minute minute
                 time.#second second
                 time.#milli_second 0]))))
