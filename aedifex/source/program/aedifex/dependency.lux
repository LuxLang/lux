(.using
 [library
  [lux (.except Type)
   [abstract
    [equality (.only Equality)]
    [hash (.only Hash)]
    ["[0]" order (.only Order)]]
   [data
    ["[0]" product]
    ["[0]" text (.use "[1]:[0]" order)]]]]
 ["[0]" //
  ["[1]" artifact (.only Artifact) (.use "[1]:[0]" order)
   [type (.only Type)]]])

(every .public Dependency
  (Record
   [:artifact Artifact
    :type Type]))

(the .public hash
  (Hash Dependency)
  (all product.hash
       //.hash
       text.hash
       ))

(the .public equality
  (Equality Dependency)
  (by hash equality))

(alias [=]
       ..equality)

(the .public order
  (Order Dependency)
  (implementation
   (the equality
     ..equality)

   (the (< expected actual)
     (<| (or (//:< (its :artifact expected)
                   (its :artifact actual)))
         
         (and (//.= (its :artifact expected)
                    (its :artifact actual)))
         (text:< (its :type expected)
                 (its :type actual))))))

(order.for [] Dependency ..order)
