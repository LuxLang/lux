(.using
 [library
  [lux "*"
   ["_" test {"+" Test}]
   [abstract
    [monad {"+" do}]
    ["[0]" order]]
   [math
    ["[0]" random {"+" Random}]]]]
 [\\library
  ["[0]" /]])

(def: .public (spec (open "@//[0]") gen_sample)
  (All (_ a) (-> (/.Interval a) (Random a) Test))
  (<| (_.for [/.Interval])
      (do random.monad
        [sample gen_sample]
        (all _.and
             (_.property "No value is bigger than the top."
               (@//< @//top sample))
             (_.property "No value is smaller than the bottom."
               (order.> @//order @//bottom sample))
             ))))
