    (#Cons [[_ (#TupleS bindings)] (#Cons [[_ (#TupleS templates)] data])])
    (_lux_case [(mapM Monad<Maybe> get-name bindings)
                (mapM Monad<Maybe> tuple->list data)]
      [(#Some bindings') (#Some data')]
