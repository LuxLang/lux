(def: (Char/encode x)
  (-> Char Text)
  (let [as-text (case x
                  #"\t" "\\t"
                  #"\b" "\\b"
                  #"\n" "\\n"
                  #"\r" "\\r"
                  #"\f" "\\f"
                  #"\"" "\\\""
                  #"\\" "\\\\"
                  _     (_lux_proc ["jvm" "invokevirtual:java.lang.Object:toString:"] [x]))]
    ($_ Text/append "#\"" as-text "\"")))

(def: (Text/encode original)
  (-> Text Text)
  (let [escaped (|> original
                    (replace "\t" "\\t")
                    (replace "\b" "\\b")
                    (replace "\n" "\\n")
                    (replace "\r" "\\r")
                    (replace "\f" "\\f")
                    (replace "\"" "\\\"")
                    (replace "\\" "\\\\")
                    )]
    ($_ Text/append "\"" escaped "\"")))

