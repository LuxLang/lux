## (type: #rec Type
##   (#Host Text (List Type))
##   #Void
##   #Unit
##   (#Sum Type Type)
##   (#Product Type Type)
##   (#Function Type Type)
##   (#Bound Nat)
##   (#Var Nat)
##   (#Ex Nat)
##   (#UnivQ (List Type) Type)
##   (#ExQ (List Type) Type)
##   (#App Type Type)
##   (#Named Ident Type)
##   )
(_lux_def Type
  (+12 ["lux" "Type"]
       (_lux_case (+11 (+6 +0) (+6 +1))
         Type
         (_lux_case (+11 List Type)
           TypeList
           (_lux_case (+4 Type Type)
             TypePair
             (+11 (+9 #Nil
                      (+3 ## "lux;Host"
                       (+4 Text TypeList)
                       (+3 ## "lux;Void"
                        (+2)
                        (+3 ## "lux;Unit"
                         (+2)
                         (+3 ## "lux;Sum"
                          TypePair
                          (+3 ## "lux;Product"
                           TypePair
                           (+3 ## "lux;Function"
                            TypePair
                            (+3 ## "lux;Bound"
                             Nat
                             (+3 ## "lux;Var"
                              Nat
                              (+3 ## "lux;Ex"
                               Nat
                               (+3 ## "lux;UnivQ"
                                (+4 TypeList Type)
                                (+3 ## "lux;ExQ"
                                 (+4 TypeList Type)
                                 (+3 ## "lux;App"
                                  TypePair
                                  ## "lux;Named"
                                  (+4 Ident Type))))))))))))))
                  Void)))))
  (#Cons [["lux" "type?"] (+0 true)]
         (#Cons [["lux" "export?"] (+0 true)]
                (#Cons [["lux" "tags"] (+8 (#Cons (+6 "Host")
                                                  (#Cons (+6 "Void")
                                                         (#Cons (+6 "Unit")
                                                                (#Cons (+6 "Sum")
                                                                       (#Cons (+6 "Product")
                                                                              (#Cons (+6 "Function")
                                                                                     (#Cons (+6 "Bound")
                                                                                            (#Cons (+6 "Var")
                                                                                                   (#Cons (+6 "Ex")
                                                                                                          (#Cons (+6 "UnivQ")
                                                                                                                 (#Cons (+6 "ExQ")
                                                                                                                        (#Cons (+6 "App")
                                                                                                                               (#Cons (+6 "Named")
                                                                                                                                      #Nil))))))))))))))]
                       (#Cons [["lux" "doc"] (+6 "This type represents the data-structures that are used to specify types themselves.")]
                              (#Cons [["lux" "type-rec?"] (+0 true)]
                                     #Nil))))))

