    [target target]
    (case tokens
      (^ (list [_ (#Record options)]))
      (case (pick-for-target target options)
        (#;Some pick)
        (wrap (list pick))

        #;None
        (wrap (list)))
      
      (^ (list [_ (#Record options)] default))
      (wrap (list (;;default default (pick-for-target target options))))

      _
      (fail "Wrong syntax for 'for'"))))

