           [_ (#Form (#Cons type-fn args))]
           (list@fold ("lux check" (-> Code Code Code)
                       (function' [arg type-fn] (` (#.Apply (~ arg) (~ type-fn)))))
                      (walk-type type-fn)
                      (list@map walk-type args))
           
           _
           type}
          type))

