        (wrap (list pick))

        #None
        (fail ($_ text/compose "No code for target platform: " target)))
      
      (^ (list [_ (#Record options)] default))
      (wrap (list (..default default (pick-for-target target options))))

      _
      (fail "Wrong syntax for 'for'"))))

