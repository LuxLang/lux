(def: (split-text splitter input)
  (-> Text Text (List Text))
  (case (index-of splitter input)
    #;None
    (#Cons input #Nil)

    (#;Some idx)
    (#Cons (default (error! "UNDEFINED")
             (clip2 +0 idx input))
           (split-text splitter
                       (default (error! "UNDEFINED")
                         (clip1 (n.+ +1 idx) input))))))

