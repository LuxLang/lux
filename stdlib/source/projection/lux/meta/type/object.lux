(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [control
    [try (.only Try)]
    ["//" projection]
    ["[0]" exception]]]]
 [\\library
  ["[0]" /]]
 [////
  [data
   [collection
    ["[0]" list]]]])

(every .public (Projection interface)
  (list.Projection (/.Object interface)))

(exception.the .public wrong_class)

(the .public (any class)
  (for_any (_ interface state)
    (-> (interface state)
        (Projection interface (/.Object interface state))))
  (do //.monad
    [it list.any]
    (when (/.as class it)
      {.#Some it}
      (in it)

      {.#None}
      (//.of_try (exception.except ..wrong_class [])))))

(the .public value
  (for_any (_ interface of)
    (-> (Projection interface of) (List (/.Object interface))
        (Try of)))
  list.value)
