(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" text]
    [collection
     ["[0]" list]
     ["[0]" set]]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" nat]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(with_expansions [<tags> (with_template [<name>]
                           [<name>]

                           [/.left_to_right]
                           [/.right_to_left]
                           [/.automatic]
                           )]
  (the .public test
    Test
    (<| (_.covering /._)
        (do [! random.monad]
          [])
        (_.for [/.Text_Direction])
        (all _.and
             (_.coverage [<tags>]
               (let [all (is (List /.Text_Direction)
                             (list <tags>))
                     uniques (set.of_list text.hash all)]
                 (n.= (list.size all)
                      (set.size uniques))))
             ))))
