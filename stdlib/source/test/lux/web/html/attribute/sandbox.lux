(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" text]
    [collection
     ["[0]" list]
     ["[0]" set]]]
   [math
    ["[0]" random (.only Random)]
    [number
     [/64
      ["n" natural]]]]
   [macro
    ["[0]" expansion]
    ["[0]" template]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(expansion.let [<tags> (template.with [<name>]
                         [<name>]

                         [/.allow_downloads]
                         [/.allow_downloads_without_user_activation]
                         [/.allow_forms]
                         [/.allow_modals]
                         [/.allow_orientation_lock]
                         [/.allow_pointer_lock]
                         [/.allow_popups]
                         [/.allow_popups_to_escape_sandbox]
                         [/.allow_presentation]
                         [/.allow_same_origin]
                         [/.allow_scripts]
                         [/.allow_storage_access_by_user_activation]
                         [/.allow_top_navigation]
                         [/.allow_top_navigation_by_user_activation]
                         [/.allow_top_navigation_to_custom_protocols]
                         )]
  (the .public test
    Test
    (<| (_.covering /._)
        (do [! random.monad]
          [])
        (_.for [/.Sandbox])
        (all _.and
             (_.coverage [<tags>]
               (let [all (is (List /.Sandbox)
                             (list <tags>))
                     uniques (set.of_list text.hash all)]
                 (n.= (list.size all)
                      (set.size uniques))))
             (_.coverage [/.fully_restricted]
               (n.= 0 (list.size /.fully_restricted)))
             ))))
