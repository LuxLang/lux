(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" text]
    [collection
     ["[0]" stack]
     ["[0]" set]]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" natural]]]
   [macro
    ["[0]" expansion]
    ["[0]" template]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(expansion.let [<tags> (template.with [<name>]
                         [<name>]

                         [/.button]
                         [/.check_box]
                         [/.color]
                         [/.date]
                         [/.local_date_time]
                         [/.email]
                         [/.file]
                         [/.hidden]
                         [/.image]
                         [/.month]
                         [/.number]
                         [/.password]
                         [/.radio]
                         [/.range]
                         [/.reset]
                         [/.search]
                         [/.submit]
                         [/.telephone]
                         [/.text]
                         [/.time]
                         [/.url]
                         [/.week]
                         )]
  (the .public test
    Test
    (<| (_.covering /._)
        (do [! random.monad]
          [])
        (_.for [/.Type])
        (all _.and
             (_.coverage [<tags>]
               (let [all (is (Stack /.Type)
                             (stack <tags>))
                     uniques (set.of_stack text.hash all)]
                 (n.= (stack.size all)
                      (set.size uniques))))
             ))))
