(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [data
    [collection
     ["[0]" list
      ["?[1]" \\projection]]]]
   [error
    ["[0]" try (.use "[1]#[0]" functor)]]
   [math
    ["[0]" random (.only Random)]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   [/////
    [meta
     ["[0]" code
      ["<[1]>" \\projection]]]]]])

(the .public random
  (Random /.Variable)
  (random.alphabetic 10))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Variable])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (same? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence ..random)))

           (do random.monad
             [expected ..random]
             (_.coverage [/.as_code /.of_code]
               (|> /.of_code
                   (?list.value (list (/.as_code expected)))
                   (try#each (by /.equivalence = expected))
                   (try.else false))))
           )))
