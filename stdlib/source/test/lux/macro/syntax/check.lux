(.using
 [library
  [lux (.except)
   [abstract
    ["<>" projection]
    ["[0]" monad]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [error
    ["[0]" try]]
   [data
    [collection
     ["[0]" list
      ["?[1]" \\projection]]]]
   [math
    ["[0]" random (.only Random)]]
   [meta
    ["[0]" static]
    ["[0]" code (.only)
     ["<[1]>" \\projection]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]]
 ["$[0]" ////
  [meta
   ["[1][0]" code]]])

(the .public random
  (Random /.Check)
  (all random.and
       $////code.random
       $////code.random
       ))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Check
              /.:type /.:value])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (identical? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence ..random)))

           (monad.let random.monad
             [[type value] ..random]
             (_.coverage [/.as_code /.of_code]
               (when (?list.value (list (/.as_code [/.:type type
                                                    /.:value value]))
                                  /.of_code)
                 {try.:Failure _}
                 false
                 
                 {try.:Success check}
                 (and (code.= type (its /.:type check))
                      (code.= value (its /.:value check)))))))))
