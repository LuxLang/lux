(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [control
    ["[0]" try]]
   [data
    [collection
     ["[0]" list]]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" natural]]]
   [meta
    ["[0]" static]
    ["[0]" code
     ["<[1]>" \\projection]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]]
 ["$[0]" ////
  [meta
   ["[1][0]" code]]])

(the .public random
  (Random /.Input)
  (all random.and
       $////code.random
       $////code.random
       ))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Input
              /.#binding /.#type])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (same? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence ..random)))

           (do random.monad
             [expected ..random]
             (_.coverage [/.injection /.projection]
               (when (<code>.value /.projection (list (/.injection (list expected))))
                 {try.#Failure _}
                 false
                 
                 {try.#Success actual}
                 (by (list.equivalence /.equivalence) = (list expected) actual)))))))
