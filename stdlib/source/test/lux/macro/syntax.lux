(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]
    ["[0]" projection (.use "[1]:[0]" monad)]]
   [error
    ["[0]" try]]
   [data
    ["[0]" text]
    [collection
     ["[0]" list
      ["?[1]" \\projection]]]]
   [math
    ["[0]" random]
    [number
     [/64
      ["n" natural (.use "[1]:[0]" base_10)]]]]
   [macro
    ["^" pattern]]
   [meta
    ["[0]" code (.only)
     ["<[1]>" \\projection]
     ["[1]T" \\test]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]]
 ["[0]" /
  ["[1][0]" check]
