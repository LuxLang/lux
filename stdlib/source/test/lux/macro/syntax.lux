   ["[1]/[0]" variable]]])

(the +/3
  (/.macro (_ [a ?list.any
               b ?list.any
               c ?list.any])
    (pure (list (` (all n.+ (, a) (, b) (, c)))))))

(the .public test
  Test
  (<| (_.covering /._)
      (all _.and
           (monad.let random.monad
             [x random.natural
              y random.natural
              z random.natural]
             (_.coverage [/.macro]
               (n.= (all n.+ x y z)
                    (+/3 x y z))))
           (monad.let [! random.monad]
             [expected_code codeT.random
              expected_error (by ! each n:as random.natural)]
             (_.coverage [/.self_documenting]
               (|> (/.self_documenting expected_code (projection.failure expected_error))
                   (?list.value (list))
                   (match? (^.multi {try.#Failure actual_error}
                                    (and (text.contains? (code.as_text expected_code)
                                                         actual_error)
                                         (text.contains? expected_error
                                                         actual_error)))))))

           /check.test
           /declaration.test
           /definition.test
           /export.test
           /input.test
           /type/variable.test
           )))
