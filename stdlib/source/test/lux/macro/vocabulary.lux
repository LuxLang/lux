(.using
 [library
  [lux (.except macro)
   [abstract
    [monad (.only do)]]
   [error
    ["[0]" try]
    ["[0]" exception]]
   [data
    ["[0]" text]]
   [math
    [number
     ["n" natural]]]
   ["[0]" meta (.only)
    ["[0]" static]
    ["[0]" code]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(/.def
 [.private Micro]
 [.private micro]
 [.private macro]
 [.private by_name])

(the .public pass_through
  (.macro (_ inputs lux)
    {.#Right [lux inputs]}))

(the .public pass_through'
  (..micro pass_through))

(the .public test
  Test
  (<| (_.covering /._)
      (all _.and
           (_.coverage [/.def]
             (exec
               (|> pass_through
                   (is Macro)
                   ..micro
                   (is ..Micro)
                   ..macro
                   (is Macro))
               (<| static.expansion
                   (do meta.monad
                     [_ (by_name (name ..pass_through'))]
                     (pure (list (code.bit true)))))))
           (_.coverage [/.invalid_type]
             (<| static.expansion
                 (do meta.monad
                   [? (meta.try (by_name (name ..pass_through)))]
                   (pure (list (code.bit (when ?
                                           {try.#Failure it}
                                           (text.contains? (its exception.#label /.invalid_type) it)
                                           
                                           {try.#Success _}
                                           false)))))))
           )))
