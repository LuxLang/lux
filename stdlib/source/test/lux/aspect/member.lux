(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]]
   [math
    ["[0]" random]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(every (Tree it)
  (Variant
   {:Leaf}
   {:Branch (Tree it) it (Tree it)}))

(the (in_order it)
  (for_any (_ it)
    (/.Member (Tree it) it))
  (<| (with /.application)
      (when it
        {:Leaf}
        (pure {:Leaf})
        
        {:Branch left it right}
        (per with
             (pure (function (_ left it right)
                     {:Branch left it right}))
             (in_order left)
             (/.one it)
             (in_order right)))))

(the .public test
  Test
  (<| (_.covering /._)
      (monad.let [! random.monad]
        [])
      (all _.and
           (_.coverage [/.Member]
             true)
           )))
