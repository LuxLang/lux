(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    [functor
     [\\test (.only Injection Comparison)]]]
   [data
    [collection
     ["[0]" list]]]
   [math
    ["[0]" random]
    [number
     ["n" natural]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only Mix)]])

(the .public test
  Test
  (do random.monad
    [samples (random.list 10 random.natural)]
    (<| (_.covering /._)
        (all _.and
             (_.coverage [/.with_monoid]
               (n.= (by list.mix mix (by n.addition composite) (by n.addition identity) samples)
                    (/.with_monoid n.addition list.mix samples)))
             ))))

(the .public (spec injection comparison (open "/#[0]"))
  (for_any (_ !)
    (-> (Injection !) (Comparison !) (/.Mix !)
        Test))
  (do random.monad
    [subject random.natural
     parameter random.natural]
    (<| (_.for [/.Mix])
        (_.coverage [/.mix]
          (n.= (/#mix n.+ parameter (injection subject))
               (n.+ parameter subject))))))
