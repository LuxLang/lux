(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    [collection
     ["[0]" stack]]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" natural]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   ["/[1]" //]]])

(the size
  (/.Algorithm Stack)
  (is (/.Algorithm (//.Recursive
                    (for_any (_ recursion)
                      (//.Sum (//.Constant [])
                              (//.Product //.Variable recursion)))))
      (/.recursive
       (function (_ it)
         (/.sum /.constant
                (/.product /.variable
                           it))))))

(the .public test
  Test
  (do [! random.monad]
    [expected (by ! each (n.% 10) random.natural)
     sample (random.stack expected random.natural)]
    (<| (_.covering /._)
        (_.for [/.Algorithm])
        (all _.and
             (_.coverage [/.constant /.variable
                          /.sum /.product
                          /.recursive]
               (n.= (stack.size sample)
                    (..size sample)))
             ))))
