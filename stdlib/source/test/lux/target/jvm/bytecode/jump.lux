(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [data
    ["[0]" binary (.only)
     ["![1]" \\injection]]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" natural]
     ["i" integer]
     ["[0]" /32
      ["[1]" integer]]]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   [///
    [encoding
     ["[0]" signed]]]]]
 [///
  [encoding
   ["[0]T" signed]]])

(the .public random
  (Random /.Jump)
  signedT.random_s2)

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [expected ..random])
      (_.for [/.Jump])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (same? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence ..random)))
           
           (_.coverage [/.as_binary /.length]
             (n.= /.length
                  (binary.size (!binary.value /.as_binary expected))))

           (_.for [/.Big]
                  (_.coverage [/.big]
                    (i.= (signed.value expected)
                         (/32.as (/.big expected)))))
           )))
