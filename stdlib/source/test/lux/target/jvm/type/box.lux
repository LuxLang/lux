(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]]
   [data
    ["[0]" text]
    [collection
     ["[0]" list]
     ["[0]" set]]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" functor)]
    [number
     [/64
      ["n" natural]]]]
   [macro
    ["[0]" expansion]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   [///
    [encoding
     [name
      ["[0]" external]]]]]])

(expansion.let [,*options (these /.boolean
                                 /.byte
                                 /.short
                                 /.int
                                 /.long
                                 /.float
                                 /.double
                                 /.char)]
  (the .public test
    Test
    (<| (_.covering /._)
        (monad.let [! random.monad]
          [expected /.random])
        (all _.and
             (_.coverage [,*options]
               (let [options (list ,*options)
                     uniques (set.of_list text.hash options)]
                 (n.= (list.size options)
                      (set.size uniques))))
             (_.coverage [/.random]
               (list.any? (identical? expected)
                          (list ,*options)))
             ))))
