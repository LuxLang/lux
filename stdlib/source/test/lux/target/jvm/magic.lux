(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" binary (.only)
     ["![1]" \\injection]]]
   [math
    ["[0]" random (.only Random)]
    [number (.only hex)
     ["n" natural]
     [natural
      ["[0]" /32]]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (_.for [/.Magic])
      (all _.and
           (_.coverage [/.code]
             (when (/32.as /.code)
               (hex "CAFEBABE")
               true
               
               _
               false))
           (_.coverage [/.as_binary]
             (n.= 4 (binary.size (!binary.instance (/.as_binary /.code)))))
           )))
