(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [data
    ["[0]" text]]
   [math
    ["[0]" random (.only Random)]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   [////
    [type
     ["[0]" box]]]]])

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Name
              /.random])
      (monad.let [! random.monad]
        [expected box.random])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (identical? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence /.random)))
           
           (_.coverage [/.external /.name]
             (|> expected
                 /.name
                 /.external
                 (text.= expected)))
           (_.coverage [/.value]
             (|> expected
                 /.name
                 /.value
                 (text.= expected)
                 not))
           (_.coverage [/.safe]
             (|> expected
                 /.safe
                 (text.= expected)))
           (_.coverage [/.delimiter]
             (and (|> expected
                      /.safe
                      (text.contains? /.delimiter)
                      not)
                  (|> expected
                      /.name
                      /.value
                      (text.contains? /.delimiter))))
           )))
