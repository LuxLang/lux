(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]
    ["[0]" order
     ["[1]T" \\test]]
    ["[0]" hash
     ["[1]T" \\test]]]
   [error
    ["[0]" try (.use "[1]#[0]" functor)]
    ["[0]" exception]]
   [data
    ["[0]" binary (.only)
     ["![1]" \\injection]]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" functor)]
    [number
     ["n" natural]]]
   [macro
    ["[0]" template]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(template.with [,name ,type ,constructor ,maximum]
  [(the .public ,name
     (Random ,type)
     (|> random.natural
         (random#each (n.% (++ (/.value ,maximum))))
         (random.one ,constructor)))]

  [random_u1 /.U1 /.u1 /.maximum/1]
  [random_u2 /.U2 /.u2 /.maximum/2]
  [random_u4 /.U4 /.u4 /.maximum/4]
  )

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Unsigned])
      (do [! random.monad]
        [expected_u1 ..random_u1
         expected_u2 ..random_u2
         expected_u4 ..random_u4])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (same? /.equivalence /.=)
                    (all _.and
                         (equivalenceT.spec /.equivalence ..random_u1)
                         (equivalenceT.spec /.equivalence ..random_u2)
                         (equivalenceT.spec /.equivalence ..random_u4)
                         )))
           (_.for [/.hash]
                  (all _.and
                       (hashT.spec /.hash ..random_u1)
                       (hashT.spec /.hash ..random_u2)
                       (hashT.spec /.hash ..random_u4)
                       ))
           (_.for [/.order
                   /.< /.<= /.> /.>=
                   /.minor /.major]
                  (all _.and
                       (orderT.spec /.order ..random_u1)
                       (orderT.spec /.order ..random_u2)
                       (orderT.spec /.order ..random_u4)
                       ))
           
           (<| (_.for [/.U1])
               (all _.and
                    (_.coverage [/.maximum/1]
                      (or (by /.order < /.maximum/1 expected_u1)
                          (/.= /.maximum/1 expected_u1)))
                    (_.coverage [/.u1 /.value]
                      (|> expected_u1
                          /.value
                          /.u1
                          (try#each (/.= expected_u1))
                          (try.else false)))
                    (_.coverage [/.-/1]
                      (let [zero (/.-/1 expected_u1 expected_u1)]
                        (|> zero
                            (try#each (|>> /.value
                                           (n.= 0)))
                            (try.else false))))
                    (_.coverage [/.+/1]
                      (<| (try.else false)
                          (do try.monad
                            [zero (/.-/1 expected_u1 expected_u1)
                             left (/.+/1 expected_u1 zero)
                             right (/.+/1 zero expected_u1)]
                            (in (/.= left right)))))
                    (_.coverage [/.major/1]
                      (and (/.= /.maximum/1 (/.major/1 /.maximum/1 expected_u1))
                           (/.= /.maximum/1 (/.major/1 expected_u1 /.maximum/1))
                           (/.= expected_u1 (/.major/1 expected_u1 expected_u1))))
                    ))
           (<| (_.for [/.U2])
               (all _.and
                    (_.coverage [/.maximum/2]
                      (or (by /.order < /.maximum/2 expected_u2)
                          (/.= /.maximum/2 expected_u2)))
                    (_.coverage [/.u2 /.value]
                      (|> expected_u2
                          /.value
                          /.u2
                          (try#each (/.= expected_u2))
                          (try.else false)))
                    (_.coverage [/.-/2]
                      (let [zero (/.-/2 expected_u2 expected_u2)]
                        (|> zero
                            (try#each (|>> /.value
                                           (n.= 0)))
                            (try.else false))))
                    (_.coverage [/.+/2]
                      (<| (try.else false)
                          (do try.monad
                            [zero (/.-/2 expected_u2 expected_u2)
                             left (/.+/2 expected_u2 zero)
                             right (/.+/2 zero expected_u2)]
                            (in (/.= left right)))))
                    (_.coverage [/.major/2]
                      (and (/.= /.maximum/2 (/.major/2 /.maximum/2 expected_u2))
                           (/.= /.maximum/2 (/.major/2 expected_u2 /.maximum/2))
                           (/.= expected_u2 (/.major/2 expected_u2 expected_u2))))
                    ))
           (<| (_.for [/.U4])
               (all _.and
                    (_.coverage [/.maximum/4]
                      (or (by /.order < /.maximum/4 expected_u4)
                          (/.= /.maximum/4 expected_u4)))
                    (_.coverage [/.u4 /.value]
                      (|> expected_u4
                          /.value
                          /.u4
                          (try#each (/.= expected_u4))
                          (try.else false)))
                    (_.coverage [/.-/4]
                      (let [zero (/.-/4 expected_u4 expected_u4)]
                        (|> zero
                            (try#each (|>> /.value
                                           (n.= 0)))
                            (try.else false))))
                    (_.coverage [/.+/4]
                      (<| (try.else false)
                          (do try.monad
                            [zero (/.-/4 expected_u4 expected_u4)
                             left (/.+/4 expected_u4 zero)
                             right (/.+/4 zero expected_u4)]
                            (in (/.= left right)))))
                    (_.coverage [/.major/4]
                      (and (/.= /.maximum/4 (/.major/4 /.maximum/4 expected_u4))
                           (/.= /.maximum/4 (/.major/4 expected_u4 /.maximum/4))
                           (/.= expected_u4 (/.major/4 expected_u4 expected_u4))))
                    ))

           (_.coverage [/.value_exceeds_the_maximum]
             (and (exception.failure? /.value_exceeds_the_maximum (/.+/1 /.maximum/1 /.maximum/1))
                  (exception.failure? /.value_exceeds_the_maximum (/.+/2 /.maximum/2 /.maximum/2))
                  (exception.failure? /.value_exceeds_the_maximum (/.+/4 /.maximum/4 /.maximum/4))))
           (_.coverage [/.subtraction_cannot_yield_negative_value]
             (and (or (exception.failure? /.subtraction_cannot_yield_negative_value (/.-/1 /.maximum/1 expected_u1))
                      (/.= /.maximum/1 expected_u1))
                  (or (exception.failure? /.subtraction_cannot_yield_negative_value (/.-/2 /.maximum/2 expected_u2))
                      (/.= /.maximum/2 expected_u2))
                  (or (exception.failure? /.subtraction_cannot_yield_negative_value (/.-/4 /.maximum/4 expected_u4))
                      (/.= /.maximum/4 expected_u4))))

           (_.coverage [/.lifted/2]
             (|> expected_u1
                 /.lifted/2
                 /.value
                 (n.= (/.value expected_u1))))
           (_.coverage [/.lifted/4]
             (|> expected_u2
                 /.lifted/4
                 /.value
                 (n.= (/.value expected_u2))))

           (_.coverage [/.bytes/1 /.bytes/2 /.bytes/4]
             (and (n.= /.bytes/2 (n.+ /.bytes/1 /.bytes/1))
                  (n.= /.bytes/4 (n.+ /.bytes/2 /.bytes/2))))
           (_.coverage [/.as_binary/1 /.as_binary/2 /.as_binary/4]
             (and (n.= /.bytes/1 (binary.size (!binary.value /.as_binary/1 expected_u1)))
                  (n.= /.bytes/2 (binary.size (!binary.value /.as_binary/2 expected_u2)))
                  (n.= /.bytes/4 (binary.size (!binary.value /.as_binary/4 expected_u4)))))
           )))
