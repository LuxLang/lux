(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]
    ["[0]" equality
     ["[1]T" \\test]]]
   [data
    ["[0]" text]
    ["[0]" binary (.only)
     ["![1]" \\injection]]]
   [logic
    ["[0]" bit]]
   [math
    ["[0]" random (.only Random)]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public test
  Test
  (<| (_.covering /._)
      (monad.let [! random.monad]
        [sample_0 /.random
         sample_1 /.random])
      (_.for [/.UTF8 /.random])
      (all _.and
           (_.for [/.equality /.=]
                  (static.when (identical? /.equality /.=)
                    (equalityT.spec /.equality /.random)))
           
           (_.coverage [/.as_binary]
             (bit.= (text.= sample_0
                            sample_1)
                    (binary.= (!binary.value /.as_binary sample_0)
                              (!binary.value /.as_binary sample_1))))
           )))
