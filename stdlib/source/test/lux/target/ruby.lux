(def: test|label
  Test
  (do [! random.monad]
    [input (# ! each ..int_16 random.int)

     full_inner_iterations (# ! each (|>> (n.% 20) ++) random.nat)
     expected_inner_iterations (# ! each (n.% full_inner_iterations) random.nat)

