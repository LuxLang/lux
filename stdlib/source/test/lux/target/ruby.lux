(ffi.import: (eval [Text] "try" "?" Any))

(def: (expression ??? it)
  (-> (-> Any Bit) /.Expression Bit)
  (|> it
      /.code
      ..eval
      (try#each (|>> (maybe#each ???)
                     (maybe.else false)))
      (try.else false)))

(def: nil
  (-> /.Expression Bit)
  (|>> /.code
       ..eval
       (try#each (|>> (pipe.case
                        {.#None} true
                        {.#Some _} false)))
       (try.else false)))

