(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]
    ["[0]" equivalence
     ["[1]T" \\test]]
    ["[0]" monoid
     ["[1]T" \\test]]]
   [math
    ["[0]" random (.only Random)]
    [number
     [/64
      ["n" natural]]]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   [///
    ["[0]" money (.only Money)
     ["[1]T" \\test]
     ["[0]" currency (.only Currency)]]]]])

(the .public (random $ max_sub_units)
  (for_any (_ $)
    (-> (Currency $) Natural
        (Random (/.Volume $))))
  (all random.and
       (by random.monad each (n.% max_sub_units) random.natural)
       (moneyT.random $ max_sub_units)))

(the .public test
  Test
  (<| (_.covering /._)
      (monad.let [! random.monad]
        [])
      (_.for [/.Volume
              /.#in /.#out])
      (let [random (..random currency.usd 1000,00)])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (identical? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence random)))
           (_.for [/.monoid]
                  (monoidT.spec /.equivalence (/.monoid currency.usd) random))
           )))
