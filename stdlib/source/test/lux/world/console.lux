(.module:
  [lux #*
   ["_" test (#+ Test)]
   [abstract
    [monad (#+ do)]]
   [control
    ["." io]
    ["." try (#+ Try)]
    ["." exception (#+ exception:)]]]
  {1
   ["." /]}
  {[1 #spec]
   ["$." /]})

(exception: dead)

(def: simulation
  (/.Simulation Bit)
  (structure
   (def: (on_read dead?)
     (if dead?
       (exception.throw ..dead [])
       (#try.Success [dead? (char "a")])))

   (def: (on_read_line dead?)
     (if dead?
       (exception.throw ..dead [])
       (#try.Success [dead? "YOLO"])))

   (def: (on_write message dead?)
     (if dead?
       (exception.throw ..dead [])
       (#try.Success dead?)))

   (def: (on_close dead?)
     (if dead?
       (exception.throw ..dead [])
       (#try.Success true)))))

(def: #export test
  Test
  (<| (_.covering /._)
      (_.for [/.mock /.Simulation]
             ($/.spec (io.io (/.mock ..simulation false))))))
