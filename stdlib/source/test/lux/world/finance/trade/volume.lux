(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" natural]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   [///
    ["[0]" money (.only Money)
     ["[1]T" \\test]
     ["[0]" currency (.only Currency)]]]]])

(the .public (random $ max_sub_units)
  (for_any (_ $)
    (-> (Currency $) Natural
        (Random (/.Volume $))))
  (all random.and
       (of random.monad each (n.% max_sub_units) random.natural)
       (moneyT.random $ max_sub_units)))

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (_.for [/.Volume
              /.#in /.#out])
      (all _.and
           (_.for [/.equivalence]
                  (equivalenceT.spec /.equivalence (..random currency.usd 1000,00)))
           )))
