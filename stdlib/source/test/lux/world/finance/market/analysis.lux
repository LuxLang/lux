(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" natural]]]
   [world
    [time
     ["[0]" instant]
     ["[0]" duration]
     ["[0]" series (.only)
      ["[1]T" \\test]]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]]
 ["[0]" /
  ["[1][0]" accumulation_distribution]
  ["[1][0]" pivot_point]])

(the .public (spec random it)
  (for_any (_ from to)
    (-> (Random from) (/.Analysis from to)
        Test))
  (do random.monad
    [.let [expected_events 10]
     input (seriesT.random expected_events random)
     .let [output (it input)]]
    (all _.and
         (_.coverage [/.Analysis]
           (and (instant.= (its series.#start input)
                           (its series.#start output))
                (duration.= (its series.#interval input)
                            (its series.#interval output))
                (n.= (series.size input)
                     (series.size output))))
         )))

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (all _.and
           /accumulation_distribution.test
           (/pivot_point.test spec)
           )))
