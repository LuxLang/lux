(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["d" dec]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   [////
    [money
     ["[0]" currency]]]]]
 [////
  [trade
   ["[0]T" session]]])

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [session (sessionT.random currency.usd 1000,00)])
      (all _.and
           (_.coverage [/.oscillation]
             (let [it (/.oscillation session)]
               (and (d.<= +1.0 it)
                    (d.>= -1.0 it))))
           )))
