(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]
    ["[0]" format
     ["[1]T" \\test]]]
   [data
    [collection
     ["[0]" dictionary]]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" monad)]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public (random size)
  (-> Natural
      (Random /.Query))
  (when size
    0 (random#in /.empty)
    _ (do random.monad
        [key (random.upper_cased size)
         value (random.lower_cased size)
         query (random (-- size))]
        (in (dictionary.has key value query)))))

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (_.for [/.Query])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (same? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence (..random 2))))
           (_.for [/.format]
                  (formatT.spec /.equivalence /.format (..random 3)))

           (_.coverage [/.empty]
             (dictionary.empty? /.empty))
           )))
