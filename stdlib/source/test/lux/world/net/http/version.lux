(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]
    ["[0]" hash
     ["[1]T" \\test]]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [data
    [collection
     ["[0]" list]
     ["[0]" set]]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" monad)]
    [number
     [/64
      ["n" natural]]]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random /.Version)
  (random.either (random.either (random#pure /.v0_9)
                                (random#pure /.v1_0))
                 (random.either (random#pure /.v1_1)
                                (random#pure /.v2_0))))

(the .public test
  Test
  (<| (_.covering /._)
      (monad.let [! random.monad]
        [])
      (_.for [/.Version])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (identical? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence ..random)))
           (_.for [/.hash]
                  (hashT.spec /.hash ..random))

           (_.coverage [/.v0_9 /.v1_0 /.v1_1 /.v2_0]
             (let [options (list /.v0_9 /.v1_0 /.v1_1 /.v2_0)
                   uniques (set.of_list /.hash options)]
               (n.= (list.size options)
                    (set.size uniques))))
           )))
