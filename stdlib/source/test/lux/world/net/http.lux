(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]]
 ["[0]" /
  ["[1][0]" client]
  ["[1][0]" cookie]
  ["[1][0]" header]
  ["[1][0]" status]
  ["[1][0]" version]
  ["[1][0]" response]
  ["[1][0]" request]
  ["[1][0]" server]])

(the .public test
  Test
  (<| (_.covering /._)
      (monad.let [! random.monad]
        [])
      (all _.and
           (_.coverage [/.Method
                        /.#Post /.#Get /.#Put /.#Patch /.#Delete /.#Head /.#Connect /.#Options /.#Trace]
             true)
           (_.coverage [/.Body]
             true)
           (_.coverage [/.Message
                        /.#headers /.#body]
             true)

           /client.test
           /cookie.test
           /header.test
           /status.test
           /version.test
           /response.test
           /request.test
           /server.test
           )))
