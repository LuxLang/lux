(.module:
  [lux #*
   ["_" test (#+ Test)]
   [abstract
    [monad (#+ do)]]
   [control
    [parser
     [environment (#+ Environment)]]]
   [data
    ["." text]]
   [math
    ["." random (#+ Random)]]]
  {1
   ["." /
    [//
     [file (#+ Path)]]]}
  {[1 #spec]
   ["$." /]})

(def: environment
  (Random Environment)
  (random.dictionary text.hash 5
                     (random.ascii/alpha 5)
                     (random.ascii/alpha 5)))

(def: directory
  (Random Path)
  (random.ascii/alpha 5))

(def: #export test
  Test
  (<| (_.covering /._)
      (do random.monad
        [environment ..environment
         directory ..directory]
        ($_ _.and
            (_.with-cover [/.mock /.async]
              ($/.spec (/.async (/.mock environment directory))))
            ))))
