(.module:
  [lux #*
   ["_" test (#+ Test)]
   [abstract
    [monad (#+ do)]]
   [control
    [parser
     [environment (#+ Environment)]]]
   [data
    ["." text]]
   [math
    ["." random (#+ Random)]]]
  [\\
   ["." /
    [//
     [file (#+ Path)]]]]
  [\\spec
   ["$." /]])

(def: environment
  (Random Environment)
  (random.dictionary text.hash 5
                     (random.ascii/alpha 5)
                     (random.ascii/alpha 5)))

(def: path
  (Random Path)
  (random.ascii/alpha 5))

(def: #export test
  Test
  (<| (_.covering /._)
      (do random.monad
        [environment ..environment
         home ..path
         directory ..path]
        ($_ _.and
            (_.for [/.mock /.async]
                   ($/.spec (/.async (/.mock environment home directory))))
            ))))
