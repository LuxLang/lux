(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]]
 ["[0]" /
  ["[1][0]" http
   ["[1]/[0]" client]
   ["[1]/[0]" status]
   ["[1]/[0]" version]]
  ["[1][0]" uri
   ["[1]/[0]" scheme]]])

(def .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (all _.and
           (_.coverage [/.Host]
             true)
           (_.coverage [/.Port]
             true)
           (_.coverage [/.URL]
             true)
           (_.coverage [/.Address]
             true)

           /http/client.test
           /http/status.test
           /http/version.test

           /uri/scheme.test
           )))
