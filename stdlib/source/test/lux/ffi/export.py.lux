(.using
 [library
  [lux (.except)
   [math
    [number
     ["n" natural]]]
   [meta
    ["[0]" static]
    [macro
     ["[0]" expansion]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   ["/[1]" //]]])

(expansion.let [<natural> (static.random_natural)]
  (these (/.export
           (the constant
             Natural
             <natural>)
           (the shift
             (-> Natural Natural)
             (|>> (n.+ <natural>))))

         (//.import (constant Natural))
         (//.import (shift (-> Natural Natural)))

         (the .public test
           Test
           (<| (_.covering /._)
               (all _.and
                    (_.coverage [/.export]
                      (and (n.= <natural> ..constant)
                           (n.= (n.+ <natural> <natural>) (..shift <natural>))))
                    ))))
  )
