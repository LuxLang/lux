(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [control
    ["[0]" try (.use "[1]#[0]" functor)]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   [/////
    ["[0]" code
     ["<[1]>" \\projection]]]]])

(the .public random
  (Random /.Variable)
  (random.alphabetic 10))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Variable])
      (all _.and
           (_.for [/.equivalence]
                  (equivalenceT.spec /.equivalence ..random))

           (do random.monad
             [expected ..random]
             (_.coverage [/.format /.projection]
               (|> (list (/.format expected))
                   (<code>.value /.projection)
                   (try#each (of /.equivalence = expected))
                   (try.else false))))
           )))
