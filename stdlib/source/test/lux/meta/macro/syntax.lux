(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [math
    ["[0]" random]
    [number
     ["n" natural]]]
   [meta
    ["[0]" code
     ["<[1]>" \\projection]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]]
 ["[0]" /
  ["[1][0]" check]
  ["[1][0]" declaration]
  ["[1][0]" definition]
  ["[1][0]" export]
  ["[1][0]" input]
  ["[1][0]" type
   ["[1]/[0]" variable]]])

(the +/3
  (/.macro (_ [a <code>.any
               b <code>.any
               c <code>.any])
    (in (list (` (all n.+ (, a) (, b) (, c)))))))

(the .public test
  Test
  (<| (_.covering /._)
      (all _.and
           (do random.monad
             [x random.natural
              y random.natural
              z random.natural]
             (_.coverage [/.macro]
               (n.= (all n.+ x y z)
                    (+/3 x y z)))) 

           /check.test
           /declaration.test
           /definition.test
           /export.test
           /input.test
           /type/variable.test
           )))
