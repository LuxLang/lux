(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [control
    ["[0]" try]
    ["[0]" exception]]
   [data
    ["[0]" text (.only)
     ["%" \\injection]]]
   [math
    ["[0]" random]
    [number
     ["n" natural]]]
   ["[0]" meta (.only)
    ["[0]" symbol]
    ["[0]" code (.only)
     ["<[1]>" \\projection]]
    ["[0]" macro (.only)
     ["[0]" syntax]
     ["[0]" template]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(template.with_locals ['Foo 'Bar]
  (these (template.with [<syntax> <meta>]
           [(the <syntax>
              (syntax.macro (_ [])
                (do meta.monad
                  [frame <meta>]
                  (in (list (` (symbol (, (code.symbol (its /.#name frame))))))))))]

           [current /.current]
           [specific (/.specific (`` (symbol (,, (template.symbol [.._] ['Foo])))))]
           )

         (/.every ('Foo a)
           Text

           (/.every ('Bar a)
             Natural

             (the .public test
               Test
               (<| (_.covering /._)
                   (_.for [/.every])
                   (do random.monad
                     [expected_foo (random.lower_cased 5)
                      expected_bar random.natural]
                     (all _.and
                          (_.coverage [/.abstraction]
                            (and (exec (is ('Foo Text)
                                           (/.abstraction 'Foo expected_foo))
                                   true)
                                 (exec (is ('Bar Text)
                                           (/.abstraction expected_bar))
                                   true)))
                          (_.coverage [/.representation]
                            (and (|> expected_foo
                                     (/.abstraction 'Foo)
                                     (is ('Foo Bit))
                                     (/.representation 'Foo)
                                     (text.= expected_foo))
                                 (|> (/.abstraction expected_bar)
                                     (is ('Bar Bit))
                                     /.representation
                                     (n.= expected_bar))))
                          (_.coverage [/.transmutation]
                            (and (exec (|> expected_foo
                                           (/.abstraction 'Foo)
                                           (is ('Foo .Macro))
                                           (/.transmutation 'Foo)
                                           (is ('Foo .Lux)))
                                   true)
                                 (exec (|> (/.abstraction expected_bar)
                                           (is ('Bar .Macro))
                                           /.transmutation
                                           (is ('Bar .Lux)))
                                   true)))
                          (_.for [/.Frame
                                  /.#name /.#type_vars /.#abstraction /.#representation]
                                 (all _.and
                                      (_.coverage [/.current]
                                        (symbol.= (`` (symbol (,, (template.symbol [.._] ['Bar]))))
                                                  (..current)))
                                      (_.coverage [/.specific]
                                        (symbol.= (`` (symbol (,, (template.symbol [.._] ['Foo]))))
                                                  (..specific)))
                                      ))
                          ))))))))
