(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [control
    ["?" projection]]
   [data
    ["[0]" bit (.use "[1]#[0]" equivalence)]]
   [math
    ["[0]" random]
    [number
     ["[0]" nat (.use "[1]#[0]" equivalence)]]]
   [meta
    ["[0]" static]
    ["[0]" type
     ["?[1]" \\projection]]
    [macro
     ["[0]" expansion]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(expansion.let [<bit> (static.random_bit)
                <nat> (static.random_nat)]
  (these ... (the constant
   ...   (/.polytypic constant
   ...     (`` (all ?.either
   ...              (,, (with_template [<type> <constant>]
   ...                    [(do ?.monad
   ...                       [_ (?type.sub <type>)]
   ...                       (in (` (is <type>
   ...                                  <constant>))))]

   ...                    [Bit <bit>]
   ...                    [Nat <nat>]))
   ...              ))))

   (the .public test
     Test
     (<| (_.covering /._)
         (do [! random.monad]
           [])
         (all _.and
              (_.coverage [/.polytypic]
                false
                ... (and (bit#= <bit> (constant Bit))
                ...      (nat#= <nat> (constant Nat)))
                )
              ))))
  )
