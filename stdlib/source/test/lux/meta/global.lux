(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" natural]]]
   [macro
    ["[0]" expansion]]
   [meta
    ["[0]" static]
    ["[0]" code]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(expansion.let [<before> (static.random_natural)
                <after> (static.random code.natural
                                       (random.only (|>> (n.= <before>) not) random.natural))]
  (these (the my_global
           Natural
           <before>)

         (/.with [..my_global <after>]
           (the my_local
             Natural
             (n.+ my_global my_global)))

         (the .public test
           Test
           (<| (_.covering /._)
               (do [! random.monad]
                 [])
               (all _.and
                    (_.coverage [/.with]
                      (and (n.= (n.+ <after> <after>) my_local)
                           (not (n.= (n.+ <before> <before>) my_local))))
                    )))
         ))
