              (of ! each /.int)
              (random.list arity))
     keys (|> (random.lower_cased 1)
              (random.set text.hash arity)
              (of ! each (|>> set.list (list#each /.string))))]
    (all _.and
         (<| (_.for [/.LVar*])
             (all _.and
                  (_.coverage [/.variadic]
                    (expression (|>> (as Integer) .natural (n.= arity))
                                (|> (/.return (/.its "length" $inputs))
