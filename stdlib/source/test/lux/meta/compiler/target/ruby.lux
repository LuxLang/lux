(ffi.import (eval [Text] "try" "?" Any))

(the (expression ??? it)
  (-> (-> Any Bit) /.Expression Bit)
  (|> it
      /.code
      ..eval
      (try#each (|>> (maybe#each ???)
                     (maybe.else false)))
      (try.else false)))

(the nil
  (-> /.Expression Bit)
  (|>> /.code
       ..eval
       (try#each (|>> (pipe.when
                        {.#None} true
                        {.#Some _} false)))
       (try.else false)))

(the test|literal
  Test
  (do [! random.monad]
    [bool random.bit
     float random.decimal
     int random.integer
     string (random.upper_cased 5)]
    (all _.and
         (_.coverage [/.nil]
           (..nil /.nil))
         (_.coverage [/.bool]
           (expression (|>> (as Bit) (bit.= bool))
                       (/.bool bool)))
         (_.coverage [/.int]
           (expression (|>> (as Integer) (i.= int))
                       (/.int int)))
         (_.coverage [/.float]
           (expression (|>> (as Decimal) (d.= float))
                       (/.float float)))
         (_.coverage [/.string]
           (expression (|>> (as Text) (text.= string))
                       (/.string string)))
         (_.coverage [/.symbol]
           (expression (|>> (as Text) (text.= string))
                       (/.do "id2name" (list) {.#None} (/.symbol string))))
         )))

