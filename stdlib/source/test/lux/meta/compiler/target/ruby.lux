(the test|object
  Test
  (do [! random.monad]
    [size (of ! each (|>> (n.% 10) ++) random.natural)
     index (of ! each (n.% size) random.natural)
     items (random.list size random.unit_decimal)
     $class (of ! each (|>> %.natural (%.message "class_") /.local)
                random.natural)
     $sub_class (of ! each (|>> %.natural (%.message "sub_class_") /.local)
                    random.natural)
     $method/0 (of ! each (|>> %.natural (%.message "method_") /.local)
                   random.natural)
     $method/1 (|> random.natural
                   (of ! each (|>> %.natural (%.message "method_") /.local))
                   (random.only (|>> (/#= $method/0) not)))
     $arg/0 (of ! each (|>> %.natural (%.message "arg_") /.local)
                random.natural)
     $state (of ! each (|>> %.natural (%.message "instance_") /.instance)
                random.natural)
     single random.unit_decimal
     .let [double (/.function $method/0 (list $arg/0)
                    (/.return (/.+ $arg/0 $arg/0)))]]
    (all _.and
         (_.coverage [/.its]
           (expression (|>> (as Integer) (i.= (.integer size)))
                       (|> (/.array (list#each /.float items))
                           (/.its "length"))))
         (_.coverage [/.do]
           (expression (let [expected (|> items
                                          (list.item index)
                                          (try.else d.not_a_number))]
                         (|>> (as Decimal) (d.= expected)))
                       (|> (/.array (list#each /.float items))
                           (/.do "at" (list (/.int (.integer index))) {.#None}))))
         (_.coverage [/.class]
           (expression (|>> (as Decimal) (d.= (d.+ single single)))
                       (|> (all /.then
                                (/.; (/.set (list $class) (/.class [/.#parameters (list)
                                                                    /.#body double])))
                                (/.return (|> $class
                                              (/.new (list) {.#None})
                                              (/.do (/.code $method/0) (list (/.float single)) {.#None}))))
                           [(list)] (/.lambda {.#None})
                           (/.apply_lambda (list)))))
         (_.coverage [/.new /.initialize]
           (expression (|>> (as Decimal) (d.= single))
                       (|> (all /.then
                                (/.; (/.set (list $class) (/.class [/.#parameters (list)
                                                                    /.#body (all /.then
                                                                                 (/.function /.initialize (list $arg/0)
                                                                                   (/.; (/.set (list $state) $arg/0)))
                                                                                 (/.function $method/0 (list)
                                                                                   (/.return $state))
                                                                                 )])))
                                (/.return (|> $class
                                              (/.new (list (/.float single)) {.#None})
                                              (/.do (/.code $method/0) (list) {.#None}))))
                           [(list)] (/.lambda {.#None})
                           (/.apply_lambda (list)))))
         (_.coverage [/.alias_method/2]
           (expression (|>> (as Decimal) (d.= (d.+ single single)))
                       (|> (all /.then
                                (/.; (/.set (list $class) (/.class [/.#parameters (list)
                                                                    /.#body (all /.then
                                                                                 double
                                                                                 (/.; (/.alias_method/2 (/.string (/.code $method/1))
                                                                                                        (/.string (/.code $method/0)))))])))
                                (/.return (|> $class
                                              (/.new (list) {.#None})
                                              (/.do (/.code $method/1) (list (/.float single)) {.#None}))))
                           [(list)] (/.lambda {.#None})
                           (/.apply_lambda (list)))))
         (_.for [/.module]
                (all _.and
                     (_.coverage [/.include/1]
                       (expression (|>> (as Decimal) (d.= (d.+ single single)))
                                   (|> (all /.then
                                            (/.; (/.set (list $class) (/.module [/.#parameters (list)
                                                                                 /.#body double])))
                                            (/.; (/.set (list $sub_class) (/.class [/.#parameters (list)
                                                                                    /.#body (/.; (/.include/1 $class))])))
                                            (/.return (|> $sub_class
                                                          (/.new (list) {.#None})
                                                          (/.do (/.code $method/0) (list (/.float single)) {.#None}))))
                                       [(list)] (/.lambda {.#None})
                                       (/.apply_lambda (list)))))
                     (_.coverage [/.extend/1]
                       (expression (|>> (as Decimal) (d.= (d.+ single single)))
                                   (|> (all /.then
                                            (/.; (/.set (list $class) (/.module [/.#parameters (list)
                                                                                 /.#body double])))
                                            (/.; (/.set (list $sub_class) (/.class [/.#parameters (list)
                                                                                    /.#body (/.; (/.extend/1 $class))])))
                                            (/.return (|> $sub_class
                                                          (/.do (/.code $method/0) (list (/.float single)) {.#None}))))
                                       [(list)] (/.lambda {.#None})
                                       (/.apply_lambda (list)))))
                     ))
         )))

