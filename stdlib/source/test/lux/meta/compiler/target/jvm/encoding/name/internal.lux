(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" text]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]]
 [////
  [type
   ["[0]" box]]])

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Name])
      (do [! random.monad]
        [expected box.random])
      (all _.and
           (_.coverage [/.external /.name]
             (|> expected
                 /.name
                 /.external
                 (text.= expected)))
           (_.coverage [/.value]
             (|> expected
                 /.name
                 /.value
                 (text.= expected)
                 not))
           (_.coverage [/.safe]
             (|> expected
                 /.safe
                 (text.= expected)))
           (_.coverage [/.delimiter]
             (and (|> expected
                      /.safe
                      (text.contains? /.delimiter)
                      not)
                  (|> expected
                      /.name
                      /.value
                      (text.contains? /.delimiter))))
           )))
