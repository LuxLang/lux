(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" bit]
    ["[0]" text]
    ["[0]" binary (.only)
     ["![1]" \\injection]]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random /.UTF8)
  (random.unicode 3))

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [sample_0 ..random
         sample_1 ..random])
      (_.for [/.UTF8])
      (all _.and
           (_.coverage [/.injection]
             (bit.= (text.= sample_0
                            sample_1)
                    (binary.= (!binary.value /.injection sample_0)
                              (!binary.value /.injection sample_1))))
           )))
