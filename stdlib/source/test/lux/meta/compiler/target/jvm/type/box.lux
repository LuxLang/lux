(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" text]
    [collection
     ["[0]" list]
     ["[0]" set]]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" natural]]]
   [meta
    [macro
     ["[0]" expansion]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (all _.and
           (expansion.let [,*options (these /.boolean
                                            /.byte
                                            /.short
                                            /.int
                                            /.long
                                            /.float
                                            /.double
                                            /.char)]
             (_.coverage [,*options]
               (let [options (list ,*options)
                     uniques (set.of_list text.hash options)]
                 (n.= (list.size options)
                      (set.size uniques)))))
           )))
