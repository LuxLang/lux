(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" text]
    [collection
     ["[0]" list]
     ["[0]" set]]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" functor)]
    [number
     ["n" natural]]]
   [meta
    [macro
     ["[0]" expansion]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   [///
    [encoding
     [name
      ["[0]" external]]]]]])

(expansion.let [,*options (these /.boolean
                                 /.byte
                                 /.short
                                 /.int
                                 /.long
                                 /.float
                                 /.double
                                 /.char)]
  (these (the .public random
           (Random external.Name)
           (let [options (list ,*options)
                 amount (list.size options)]
             (|> random.natural
                 (random#each (n.% amount))
                 (random.one (function (_ index)
                               (list.item index options))))))
         
         (the .public test
           Test
           (<| (_.covering /._)
               (do [! random.monad]
                 [])
               (all _.and
                    (_.coverage [,*options]
                      (let [options (list ,*options)
                            uniques (set.of_list text.hash options)]
                        (n.= (list.size options)
                             (set.size uniques))))
                    )))))
