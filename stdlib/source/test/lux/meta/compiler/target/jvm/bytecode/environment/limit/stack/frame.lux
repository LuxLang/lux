(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [math
    ["[0]" random]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (_.for [/.Frame /.random])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (same? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence /.random)))
           
           (_.coverage [/.small /.double]
             (and (/.= /.small /.small)
                  (/.= /.big /.big)
                  (not (/.= /.small /.big))))
           (_.coverage [/.boolean /.byte /.short /.int
                        /.char
                        /.float
                        /.object]
             (and (alias? /.boolean /.small)
                  (alias? /.byte /.small)
                  (alias? /.short /.small)
                  (alias? /.int /.small)
                  (alias? /.char /.small)
                  (alias? /.float /.small)
                  (alias? /.object /.small)))
           (_.coverage [/.long /.double]
             (and (alias? /.long /.big)
                  (alias? /.double /.big)))
           )))
