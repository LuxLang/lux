(.require
 [library
  [lux (.except all)
   [data
    ["[0]" text]
    [collection
     ["[0]" list]
     ["[0]" set (.only Set)]]]
   [math
    [number
     ["n" nat]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(with_expansions [<targets> (these /.old
                                   /.js
                                   /.jvm
                                   /.lua
                                   /.python
                                   /.ruby
                                   /.common_lisp
                                   /.php
                                   /.r
                                   /.scheme)]
  (def all
    (List /.Target)
    (list <targets>))
  
  (def unique
    (Set /.Target)
    (set.of_list text.hash ..all))

  (def verdict
    (n.= (list.size ..all)
         (set.size ..unique)))

  (def .public test
    Test
    (<| (_.covering /._)
        (_.for [/.Target])
        (.all _.and
              (_.coverage [<targets>]
                ..verdict)
              )))
  )
