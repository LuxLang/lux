(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" bit (.use "[1]#[0]" equivalence)]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" nat]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Arity])
      (do [! random.monad]
        [arity (of ! each (n.% 3) random.nat)]
        (all _.and
             (_.coverage [/.nullary?]
               (bit#= (n.= 0 arity) (/.nullary? arity)))
             (_.coverage [/.unary?]
               (bit#= (n.= 1 arity) (/.unary? arity)))
             (_.coverage [/.multiary?]
               (bit#= (n.>= 2 arity) (/.multiary? arity)))
             ))))
