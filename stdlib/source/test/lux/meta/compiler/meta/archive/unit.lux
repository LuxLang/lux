(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]
    ["[0]" hash
     ["[1]T" \\test]]]
   [data
    ["[0]" bit]
    ["[0]" text]
    [collection
     ["[0]" set]]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random /.ID)
  (all random.and
       random.nat
       random.nat
       ))

(the .public test
  Test
  (<| (_.covering /._)
      (do random.monad
        [left ..random
         right ..random])
      (_.for [/.ID
              /.#module /.#artifact])
      (all _.and
           (_.for [/.equivalence]
                  (equivalenceT.spec /.equivalence ..random))
           (_.for [/.hash]
                  (hashT.spec /.hash ..random))
           
           (_.coverage [/.none]
             (set.empty? /.none))
           (_.coverage [/.injection]
             (bit.= (of /.equivalence = left right)
                    (text.= (/.injection left) (/.injection right))))
           )))
