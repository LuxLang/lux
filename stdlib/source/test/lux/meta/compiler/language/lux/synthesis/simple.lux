(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]
    ["[0]" hash
     ["[1]T" \\test]]]
   [data
    ["[0]" bit (.use "[1]#[0]" equivalence)]
    ["[0]" text (.use "[1]#[0]" equivalence)]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" nat]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random /.Simple)
  (all random.or
       random.bit
       random.i64
       random.frac
       (random.lower_cased 1)
       ))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Simple])
      (do [! random.monad]
        [left ..random
         right ..random]
        (all _.and
             (_.for [/.equivalence]
                    (equivalenceT.spec /.equivalence ..random))
             (_.for [/.hash]
                    (hashT.spec /.hash ..random))

             (_.coverage [/.format]
               (bit#= (text#= (/.format left) (/.format right))
                      (of /.equivalence = left right)))
             ))))
