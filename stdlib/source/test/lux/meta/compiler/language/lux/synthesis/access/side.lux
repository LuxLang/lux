(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]
    ["[0]" hash
     ["[1]T" \\test]]]
   [data
    ["[0]" bit]
    ["[0]" text]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random /.Side)
  (all random.and
       random.nat
       random.bit
       ))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Side])
      (do [! random.monad]
        [left ..random
         right  ..random]
        (all _.and
             (_.for [/.equivalence]
                    (equivalenceT.spec /.equivalence ..random))
             (_.for [/.hash]
                    (hashT.spec /.hash ..random))
             
             (_.coverage [/.injection]
               (bit.= (of /.equivalence = left right)
                      (text.= (/.injection left) (/.injection right))))
             ))))
