(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    [\\specification
     ["$[0]" equivalence]
     ["$[0]" hash]]]
   [data
    ["[0]" bit (.use "[1]#[0]" equivalence)]
    ["[0]" text (.use "[1]#[0]" equivalence)]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(def .public random
  (Random /.Side)
  (all random.and
       random.nat
       random.bit
       ))

(def .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Side])
      (do [! random.monad]
        [left ..random
         right  ..random]
        (all _.and
             (_.for [/.equivalence]
                    ($equivalence.spec /.equivalence ..random))
             (_.for [/.hash]
                    ($hash.spec /.hash ..random))
             
             (_.coverage [/.format]
               (bit#= (of /.equivalence = left right)
                      (text#= (/.format left) (/.format right))))
             ))))
