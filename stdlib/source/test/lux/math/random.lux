(.require
 [library
  [lux (.except)
   [abstract
    [equivalence (.only Equivalence)]
    ["[0]" monad (.only do)
     ["[1]T" \\test]]
    ["[0]" functor
     ["[1]T" \\test (.only Injection Comparison)]]
    ["[0]" apply
     ["[1]T" \\test]]]
   [control
    ["[0]" maybe]]
   [data
    ["[0]" sum]
    ["[0]" product]
    ["[0]" bit]
    ["[0]" text (.only)
     ["[0]" unicode
      ["[1]" set]]]
    [collection
     ["[0]" list]
     ["[0]" array]
     ["[0]" queue]
     ["[0]" stack]
     ["[0]" set]
     ["[0]" dictionary]]]
   [math
    [number
     ["[0]" i64]
     ["[0]" natural]
     ["[0]" int]
     ["[0]" rev]
     ["[0]" dec]
     ["[0]" frac]
     ["[0]" complex]]]
   [meta
    [type
     ["[0]" refinement]]
    [macro
     ["[0]" template]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only Random)]])

(the injection
  (Injection Random)
  (of /.monad in))

(the (comparison increase,seed)
  (-> /.PCG_32
      (Comparison Random))
  (function (_ == left right)
    (|> (do /.monad
          [left left
           right right]
          (in (== left right)))
        (/.value /.pcg_32 increase,seed)
        product.right)))

(the (distinct equivalence random)
  (for_any (_ a)
    (-> (Equivalence a) (Random a)
        (Random Bit)))
  (do /.monad
    [reference random
     example (/.only (|>> (of equivalence = reference) not)
                     random)]
    (in (not (of equivalence = reference example)))))

(the .public test
  Test
  (<| (_.covering /._)
      (do /.monad
        [increase,seed (is (Random /.PCG_32)
                           (/.and /.natural /.natural))
         .let [[increase seed] increase,seed]])
      (_.for [/.Random])
      (`` (all _.and
               (_.for [/.functor]
                      (functorT.spec ..injection (..comparison increase,seed) /.functor))
               (_.for [/.apply]
                      (applyT.spec ..injection (..comparison increase,seed) /.apply))
               (_.for [/.monad]
                      (monadT.spec ..injection (..comparison increase,seed) /.monad))

               (_.coverage [/.value]
                 (|> (in true)
                     (/.value /.pcg_32 increase,seed)
                     product.right))
               
               (do /.monad
                 [? (distinct (maybe.equivalence natural.equivalence) (/.maybe /.natural))]
                 (_.coverage [/.maybe]
                   ?))

               (do /.monad
                 [predicate (/.either (in natural.even?)
                                      (in natural.odd?))
                  sample (/.only predicate /.natural)]
                 (_.coverage [/.only]
                   (predicate sample)))

               (do /.monad
                 [predicate (/.either (in natural.even?)
                                      (in natural.odd?))
                  sample (/.one (function (_ it)
                                  (if (predicate it)
                                    {.#Some it}
                                    {.#None}))
                                /.natural)]
                 (_.coverage [/.one]
                   (predicate sample)))
               
               (,, (template.with [<random> <equivalence>]
                     [(do /.monad
                        [? (distinct <equivalence> <random>)]
                        (_.coverage [<random>]
                          ?))]

                     [/.bit bit.equivalence]
                     [/.i64 i64.equivalence]
                     [/.natural natural.equivalence]
                     [/.int int.equivalence]
                     [/.rev rev.equivalence]
                     [/.safe_dec dec.equivalence]

                     [/.frac frac.equivalence]
                     [/.complex complex.equivalence]
                     ))
               (do /.monad
                 [? (distinct dec.equivalence (/.only dec.number? /.dec))]
                 (_.coverage [/.dec]
                   ?))
               
               (,, (template.with [<random>]
                     [(do /.monad
                        [? (distinct text.equivalence (<random> 1))]
                        (_.coverage [<random>]
                          ?))]

                     [/.unicode]
                     [/.ascii]
                     [/.alphabetic]
                     [/.alpha_numeric]
                     [/.numeric]
                     [/.upper_cased]
                     [/.lower_cased]
                     ))
               (do /.monad
                 [? (distinct natural.equivalence (/.char unicode.character))]
                 (_.coverage [/.char]
                   ?))
               (do /.monad
                 [? (distinct text.equivalence (/.text (/.char unicode.character) 1))]
                 (_.coverage [/.text]
                   ?))

               (,, (template.with [<random> <equivalence>]
                     [(do /.monad
                        [? (distinct (<equivalence> natural.equivalence)
                                     (<random> 2 /.natural))]
                        (_.coverage [<random>]
                          ?))]

                     [/.list list.equivalence]
                     [/.array array.equivalence]
                     [/.queue queue.equivalence]
                     [/.stack stack.equivalence]
                     ))
               (do /.monad
                 [? (distinct set.equivalence
                              (/.set natural.hash 2 /.natural))]
                 (_.coverage [/.set]
                   ?))
               (do /.monad
                 [? (distinct (dictionary.equivalence natural.equivalence)
                              (/.dictionary natural.hash 2 /.natural /.natural))]
                 (_.coverage [/.dictionary]
                   ?))
               (do /.monad
                 [? (distinct (list.equivalence natural.equivalence)
                              (is (Random (List Natural))
                                  (/.rec (function (_ it)
                                           (/.or (in [])
                                                 (/.and /.natural
                                                        it))))))]
                 (_.coverage [/.rec]
                   ?))
               
               (,, (template.with [<random> <equivalence>]
                     [(do /.monad
                        [? (distinct (<equivalence> natural.equivalence natural.equivalence)
                                     (<random> /.natural /.natural))]
                        (_.coverage [<random>]
                          ?))]

                     [/.or sum.equivalence]
                     [/.and product.equivalence]
                     ))
               (do /.monad
                 [? (distinct natural.equivalence
                              (/.either /.natural /.natural))]
                 (_.coverage [/.either]
                   ?))

               (_.for [/.PRNG]
                      (all _.and
                           (,, (template.with [<prng> <seed>]
                                 [(_.coverage [<prng>]
                                    (|> (distinct natural.equivalence /.natural)
                                        (/.value <prng> <seed>)
                                        product.right))]

                                 [/.pcg_32 increase,seed]
                                 [/.xoroshiro_128+ increase,seed]
                                 [/.split_mix_64 (.natural seed)]
                                 ))
                           (_.coverage [/.prng]
                             (|> (distinct natural.equivalence /.natural)
                                 (/.value (/.prng ++ (|>> .i64)) seed)
                                 product.right))
                           ))
               ))))
