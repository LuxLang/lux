                                duplication
                                (all /.and
                                     (/.+ identity_of_multiplication
                                          identity_of_multiplication)
                                     (/.of (equation.in_reverse /.distributivity_of_multiplication))
                                     (/.of /.commutativity_of_multiplication)
                                     (/.x /.addition_of_constants (/.of /.identity))
                                     (/.of /.cancellation_of_division))]
                            (/.+ duplication
                                 duplication))
                          (all /.and
                               ..binomial_2
                               (/.of /.commutativity_of_addition)
                               (/.of /.associativity_of_addition)
                               (/.+ (/.of /.identity)
                                    (all /.and
