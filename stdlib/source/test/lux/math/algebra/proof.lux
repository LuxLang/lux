      (all /.and
           (/.= (/.of /.identity)
                (all /.and
                     (/.- (let [identity_of_multiplication
                                (all /.and
                                     (/.of (equation.in_reverse /.identity_of_multiplication))
                                     (/.of /.commutativity_of_multiplication)
