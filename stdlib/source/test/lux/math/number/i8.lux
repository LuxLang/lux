(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    [\\specification
     ["$[0]" equivalence]]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   ["/[1]" //
    ["i" int]
    ["[1][0]" i64]]]])

(def .public random
  (Random /.I8)
  (of random.functor each /.i8 random.i64))

(def .public test
  Test
  (<| (_.covering /._)
      (_.for [/.I8])
      (do [! random.monad]
        [.let [limit (|> (-- /.width)
                         //i64.mask
                         .int
                         ++)]
         expected (of ! each (i.% limit) random.int)]
        (all _.and
             (_.for [/.equivalence]
                    ($equivalence.spec /.equivalence ..random))
             
             (_.coverage [/.i8 /.i64 /.width]
               (let [actual (|> expected .i64 /.i8 /.i64)]
                 (of //i64.equivalence = expected actual)))
             ))))
