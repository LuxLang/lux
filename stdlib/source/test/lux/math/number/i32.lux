(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [math
    ["[0]" random (.only Random)]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   ["/[1]" //
    ["i" integer]
    ["[1][0]" i64]]]])

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.I32 /.random])
      (do [! random.monad]
        [.let [limit (|> (-- /.width)
                         //i64.mask
                         .integer
                         ++)]
         expected (by ! each (i.% limit) random.integer)]
        (all _.and
             (_.for [/.equivalence /.=]
                    (static.when (same? /.equivalence /.=)
                      (equivalenceT.spec /.equivalence /.random)))
             
             (_.coverage [/.Number]
               (alias? /.I32 /.Number))
             (_.coverage [/.i32 /.i64 /.width]
               (let [actual (|> expected .i64 /.i32 /.i64)]
                 (by //i64.equivalence = expected actual)))
             ))))
