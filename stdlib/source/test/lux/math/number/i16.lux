(.module:
  [library
   [lux #*
    ["_" test (#+ Test)]
    [abstract
     [monad (#+ do)]
     [\\specification
      ["$." equivalence]]]
    [math
     ["." random (#+ Random)]]]]
  [\\library
   ["." /
    ["/#" // #_
     ["i" int]
     ["#." i64]]]])

(def: .public random
  (Random /.I16)
  (\ random.functor map /.i16 random.i64))

(def: .public test
  Test
  (<| (_.covering /._)
      (_.for [/.I16])
      (do {! random.monad}
        [.let [limit (|> (-- /.width)
                         //i64.mask
                         .int
                         ++)]
         expected (\ ! map (i.% limit) random.int)]
        ($_ _.and
            (_.for [/.equivalence]
                   ($equivalence.spec /.equivalence ..random))
            
            (_.cover [/.i16 /.i64 /.width]
                     (let [actual (|> expected .i64 /.i16 /.i64)]
                       (\ //i64.equivalence = expected actual)))
            ))))
