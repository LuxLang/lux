(.using
 [library
  [lux (.except)
   ["_" test (.only Test)]
   [abstract
    [monad (.only do)]
    [\\specification
     ["$[0]" equivalence]]]
   [math
    ["[0]" random (.only Random)]]]]
 [\\library
  ["[0]" / (.only)
   ["/[1]" //
    ["i" int]
    ["[1][0]" i64]]]])

(def .public random
  (Random /.I16)
  (at random.functor each /.i16 random.i64))

(def .public test
  Test
  (<| (_.covering /._)
      (_.for [/.I16])
      (do [! random.monad]
        [.let [limit (|> (-- /.width)
                         //i64.mask
                         .int
                         ++)]
         expected (at ! each (i.% limit) random.int)]
        (all _.and
             (_.for [/.equivalence]
                    ($equivalence.spec /.equivalence ..random))
             
             (_.coverage [/.i16 /.i64 /.width]
               (let [actual (|> expected .i64 /.i16 /.i64)]
                 (at //i64.equivalence = expected actual)))
             ))))
