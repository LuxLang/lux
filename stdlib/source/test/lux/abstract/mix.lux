(.require
 [library
  [lux (.except)
   ["_" test (.only Test)]
   [abstract
    [monad (.only do)]]
   [data
    [collection
     ["[0]" list]]]
   [math
    ["[0]" random]
    [number
     ["n" nat]]]]]
 [\\library
  ["[0]" / (.only Mix)]])

(def .public test
  Test
  (do random.monad
    [samples (random.list 10 random.nat)]
    (<| (_.covering /._)
        (all _.and
             (_.coverage [/.with_monoid]
               (n.= (at list.mix mix (at n.addition composite) (at n.addition identity) samples)
                    (/.with_monoid n.addition list.mix samples)))
             ))))
