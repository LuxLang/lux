(.module:
  [lux #*
   ["_" test (#+ Test)]
   [abstract
    [monad (#+ do)]]
   [data
    [number
     ["n" nat]]
    [collection
     ["." list]]]
   [math
    ["." random]]]
  {1
   ["." / (#+ Fold)]})

(def: #export test
  Test
  (do random.monad
    [samples (random.list 10 random.nat)]
    (<| (_.covering /._)
        ($_ _.and
            (_.cover [/.with-monoid]
                     (n.= (\ list.fold fold (\ n.addition compose) (\ n.addition identity) samples)
                          (/.with-monoid n.addition list.fold samples)))
            ))))
