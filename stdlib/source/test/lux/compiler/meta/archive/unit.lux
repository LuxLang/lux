(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]
    ["[0]" equivalence
     ["[1]T" \\test]]
    ["[0]" hash
     ["[1]T" \\test]]]
   [data
    ["[0]" text]
    [collection
     ["[0]" set]]]
   [logic
    ["[0]" bit]]
   [math
    ["[0]" random (.only Random)]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random /.ID)
  (all random.and
       random.natural
       random.natural
       ))

(the .public test
  Test
  (<| (_.covering /._)
      (monad.let random.monad
        [left ..random
         right ..random])
      (_.for [/.ID
              /.#module /.#artifact])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (same? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence ..random)))
           (_.for [/.hash]
                  (hashT.spec /.hash ..random))
           
           (_.coverage [/.none]
             (set.empty? /.none))
           (_.coverage [/.as_text]
             (bit.= (by /.equivalence = left right)
                    (text.= (/.as_text left) (/.as_text right))))
           )))
