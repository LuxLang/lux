(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" monad)]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]]
 [//
  ["[0]T" definition]])

(the .public random
  (Random /.Category)
  (all random.or
       (random#pure [])
       definitionT.random
       (random.lower_cased 2)
       ))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Category
              /.#Anonymous /.#Definition /.#Custom])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (same? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence ..random)))
           )))
