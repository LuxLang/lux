(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" bit]
    ["[0]" text (.only)
     ["%" \\injection]]]
   [math
    ["[0]" random (.only Random)]
    [number
     [/64
      ["[0]" natural]]]]
   [macro
    ["[0]" template]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random /.Version)
  random.natural)

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Version])
      (do [! random.monad]
        [this ..random
         that ..random]
        (`` (all _.and
                 (_.coverage [/.as_text]
                   (bit.= (natural.= this that)
                          (text.= (/.as_text this) (/.as_text that))))
                 (,, (template.with [<level>]
                       [(_.coverage [<level>]
                          (text.contains? (%.natural (<level> this))
                                          (/.as_text this)))]

                       [/.patch]
                       [/.minor]
                       [/.major]))
                 )))))
