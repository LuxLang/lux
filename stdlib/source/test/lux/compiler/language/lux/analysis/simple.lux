(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [data
    ["[0]" bit]
    ["[0]" text]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" monad)]
    [number
     ["d" decimal]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random /.Simple)
  (all random.or
       (random#pure [])
       random.bit
       random.nat
       random.integer
       random.revolution
       (random.only (|>> d.not_a_number? not) random.decimal)
       (random.lower_cased 5)
       ))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Simple])
      (all _.and
           (_.for [/.equivalence]
                  (equivalenceT.spec /.equivalence ..random))
           
           (do random.monad
             [left ..random
              right ..random]
             (_.coverage [/.as_text]
               (bit.= (by /.equivalence = left right)
                      (text.= (/.as_text left) (/.as_text right)))))
           )))
