(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [data
    ["[0]" text]]
   [logic
    ["[0]" bit]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" monad)]
    [number
     [/64
      ["d" decimal]]]]
   [test
    ["_" property (.only Test)]]
   [compiler
    ["@[0]" type]]
   [meta
    ["[0]" static]]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random @type.Simple)
  (all random.or
       (random#pure [])
       random.bit
       random.natural
       random.integer
       random.revolution
       (random.only (|>> d.not_a_number? not) random.decimal)
       (random.lower_cased 5)
       ))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [@type.Simple
              @type.#Simple_Unit
              @type.#Simple_Bit
              @type.#Simple_Natural
              @type.#Simple_Integer
              @type.#Simple_Revolution
              @type.#Simple_Decimal
              @type.#Simple_Text])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (identical? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence ..random)))
           
           (monad.let random.monad
             [left ..random
              right ..random]
             (_.coverage [/.as_text]
               (bit.= (by /.equivalence = left right)
                      (text.= (/.as_text left) (/.as_text right)))))
           )))
