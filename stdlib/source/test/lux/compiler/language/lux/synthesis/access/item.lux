(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]
    ["[0]" equivalence
     ["[1]T" \\test]]
    ["[0]" hash
     ["[1]T" \\test]]]
   [data
    ["[0]" text]]
   [logic
    ["[0]" bit]]
   [meta
    ["[0]" static]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random /.Item)
  random.natural)

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Item])
      (monad.let [! random.monad]
        [left ..random
         right  ..random]
        (all _.and
             (_.for [/.equivalence /.=]
                    (static.when (same? /.equivalence /.=)
                      (equivalenceT.spec /.equivalence ..random)))
             (_.for [/.hash]
                    (hashT.spec /.hash ..random))
             
             (_.coverage [/.as_text]
               (bit.= (by /.equivalence = left right)
                      (text.= (/.as_text left) (/.as_text right))))
             ))))
