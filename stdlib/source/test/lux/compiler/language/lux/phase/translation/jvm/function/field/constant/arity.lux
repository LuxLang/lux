(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" natural]]]
   [compiler
    [target
     [jvm
      [type
       ["[0]" projection]]]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (all _.and
           (_.coverage [/.minimum /.maximum]
             (and (n.< /.maximum /.minimum)
                  (n.> 0 /.maximum)
                  (n.> 0 /.minimum)))
           (_.coverage [/.type]
             (when (projection.primitive? /.type)
               {.#Some _} true
               {.#None} false))
           )))
