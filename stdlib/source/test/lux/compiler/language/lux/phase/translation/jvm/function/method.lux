(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [math
    ["[0]" random (.only Random)]]
   [target
    [jvm
     ["[0]" modifier (.only Modifier)]
     ["[0]" method (.only Method)]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]]
 ["[0]" /
  ["[1][0]" implementation]
  ["[1][0]" reset]
  ["[1][0]" apply]
  ["[1][0]" init]])

(the (valid_modifier? it)
  (-> (Modifier Method)
      Bit)
  (and (modifier.has? method.public it)
       (modifier.has? method.strict it)))

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (all _.and
           (_.coverage [/.modifier]
             (and (modifier.has? method.public /.modifier)
                  (modifier.has? method.strict /.modifier)))

           (/implementation.test valid_modifier?)
           /reset.test
           /apply.test
           /init.test
           )))
