(the test_of_its
  Test
  (monad.let [! random.monad]
    [module (random.lower_cased 1)
     expected_i64 random.i64
     dummy_i64 (random.only (|>> (/64.= expected_i64) not)
                            random.i64)

     .let [extender (is extension.Extender
                        (function (_ _)
                          (undefined)))
           next (//.translate extender complexT.lux)
           @ [module 0 0]]

     .let [siblings (by ! each (|>> (n.% 5) ++) random.natural)]
     left_siblings siblings
     right_siblings siblings
     .let [inner_size (++ (all n.+ left_siblings right_siblings))]
     inner_member (by ! each (n.% inner_size) random.natural)
     nested_choice random.bit]
    (_.coverage [/.its]
      (|> (monad.let try.monad
            [[_ archive] (archive.reserve "" archive.empty)
             [_ archive] (archive.reserve module archive)
             .let [[_ host] (io.value host.host)
                   state (is runtime.State
                             (translation.state host module))]
             .let [middle_tuple (all list:composite
                                     (list.repeated left_siblings (synthesis.i64 @ dummy_i64))
                                     (list (synthesis.i64 @ expected_i64))
                                     (list.repeated right_siblings (synthesis.i64 @ dummy_i64)))
                   middle_access (is Member
                                     [left_siblings 0b])
                   
                   right_tuple (all list:composite
                                    (list.repeated left_siblings (synthesis.i64 @ dummy_i64))
                                    (list (synthesis.i64 @ expected_i64)))
                   right_access (is Member
                                    [(-- left_siblings) 1b])

                   [nested_tuple nested_access] (is [(List synthesis.Term) Member]
                                                    (if nested_choice
                                                        [middle_tuple middle_access]
                                                        [right_tuple right_access]))
                   nested_tuple (is (List synthesis.Term)
                                    (all list:composite
                                         (list.repeated right_siblings (synthesis.i64 @ dummy_i64))
                                         (list (synthesis.tuple @ nested_tuple))))]
             middle! (<| (phase.value state)
                         (monad.let phase.monad
                           [_ (translation.set_buffer translation.empty_buffer)
                            _ runtime.translation
                            it (/.its next archive
                                      [(list middle_access)
                                       (synthesis.tuple @ middle_tuple)])]
                           (pure (|> it
                                     [{.:None}]
                                     (by host evaluate)
                                     (try:each (|>> (as (-> Any I64))
                                                    (/64.= expected_i64)))
                                     (try.else false)))))
             right! (<| (phase.value state)
                        (monad.let phase.monad
                          [_ (translation.set_buffer translation.empty_buffer)
                           _ runtime.translation
                           it (/.its next archive
                                     [(list right_access)
                                      (synthesis.tuple @ right_tuple)])]
                          (pure (|> it
                                    [{.:None}]
                                    (by host evaluate)
                                    (try:each (|>> (as (-> Any I64))
                                                   (/64.= expected_i64)))
                                    (try.else false)))))
             nested! (<| (phase.value state)
                         (monad.let phase.monad
                           [_ (translation.set_buffer translation.empty_buffer)
                            _ runtime.translation
                            it (/.its next archive
                                      [(list [(-- right_siblings) 1b]
                                             nested_access)
                                       (synthesis.tuple @ nested_tuple)])]
                           (pure (|> it
                                     [{.:None}]
                                     (by host evaluate)
                                     (try:each (|>> (as (-> Any I64))
                                                    (/64.= expected_i64)))
                                     (try.else false)))))]
            (pure (and middle!
                       right!
                       nested!)))
          (try.else false)))))

(the test_of_when
  Test
  (monad.let [! random.monad]
    [module (random.lower_cased 1)
     expected_i64 random.i64
     dummy_i64 (random.only (|>> (/64.= expected_i64) not)
                            random.i64)

     .let [extender (is extension.Extender
                        (function (_ _)
                          (undefined)))
           next (//.translate extender complexT.lux)
           @ [module 0 0]]

     register (by ! each (n.% 10) random.natural)
     expected_bit random.bit
     expected_f64 random.unit_decimal
     expected_text (random.lower_cased 1)

     lefts (by ! each (n.% 10) random.natural)]
    (_.coverage [/.when]
      (|> (monad.let try.monad
            [[_ archive] (archive.reserve "" archive.empty)
             [_ archive] (archive.reserve module archive)
             .let [[_ host] (io.value host.host)
                   state (is runtime.State
                             (translation.state host module))]
             then! (<| (phase.value state)
                       (monad.let phase.monad
                         [_ (translation.set_buffer translation.empty_buffer)
                          _ runtime.translation
                          it (/.when next archive
                               [(synthesis.i64 @ dummy_i64)
                                {path.:Then (synthesis.i64 @ expected_i64)}])]
                         (pure (|> it
                                   [{.:None}]
                                   (by host evaluate)
                                   (try:each (|>> (as (-> Any I64))
                                                  (/64.= expected_i64)))
                                   (try.else false)))))
             pop! (<| (phase.value state)
                      (monad.let phase.monad
                        [_ (translation.set_buffer translation.empty_buffer)
                         _ runtime.translation
                         it (/.when next archive
                              [(synthesis.i64 @ dummy_i64)
                               {path.:And {path.:Pop}
                                          {path.:Then (synthesis.i64 @ expected_i64)}}])]
                        (pure (|> it
                                  [{.:None}]
                                  (by host evaluate)
                                  (try:each (|>> (as (-> Any I64))
                                                 (/64.= expected_i64)))
                                  (try.else false)))))
             bind! (<| (phase.value state)
                       (monad.let phase.monad
                         [_ (translation.set_buffer translation.empty_buffer)
                          _ runtime.translation
                          it (/.when next archive
                               [(synthesis.i64 @ expected_i64)
                                {path.:And {path.:Bind register}
                                           {path.:Then (synthesis.local @ register)}}])]
                         (pure (|> it
                                   [{.:None}]
                                   (by host evaluate)
                                   (try:each (|>> (as (-> Any I64))
                                                  (/64.= expected_i64)))
                                   (try.else false)))))
             bit! (<| (phase.value state)
                      (monad.let phase.monad
                        [_ (translation.set_buffer translation.empty_buffer)
                         _ runtime.translation
                         it (/.when next archive
                              [(synthesis.bit @ expected_bit)
                               {path.:Bit_Fork expected_bit
                                               {path.:Then (synthesis.i64 @ expected_i64)}
                                               {.:Some {path.:Then (synthesis.i64 @ dummy_i64)}}}])]
                        (pure (|> it
                                  [{.:None}]
                                  (by host evaluate)
                                  (try:each (|>> (as (-> Any I64))
                                                 (/64.= expected_i64)))
                                  (try.else false)))))
             i64! (<| (phase.value state)
                      (monad.let phase.monad
                        [_ (translation.set_buffer translation.empty_buffer)
                         _ runtime.translation
                         it (/.when next archive
                              [(synthesis.i64 @ dummy_i64)
                               {path.:I64_Fork [[dummy_i64 {path.:Then (synthesis.i64 @ expected_i64)}]
                                                (list)]}])]
                        (pure (|> it
                                  [{.:None}]
                                  (by host evaluate)
                                  (try:each (|>> (as (-> Any I64))
                                                 (/64.= expected_i64)))
                                  (try.else false)))))
             f64! (<| (phase.value state)
                      (monad.let phase.monad
                        [_ (translation.set_buffer translation.empty_buffer)
                         _ runtime.translation
                         it (/.when next archive
                              [(synthesis.f64 @ expected_f64)
                               {path.:F64_Fork [[expected_f64 {path.:Then (synthesis.i64 @ expected_i64)}]
                                                (list)]}])]
                        (pure (|> it
                                  [{.:None}]
                                  (by host evaluate)
                                  (try:each (|>> (as (-> Any I64))
                                                 (/64.= expected_i64)))
                                  (try.else false)))))
             text! (<| (phase.value state)
                       (monad.let phase.monad
                         [_ (translation.set_buffer translation.empty_buffer)
                          _ runtime.translation
                          it (/.when next archive
                               [(synthesis.text @ expected_text)
                                {path.:Text_Fork [[expected_text {path.:Then (synthesis.i64 @ expected_i64)}]
                                                  (list)]}])]
                         (pure (|> it
                                   [{.:None}]
                                   (by host evaluate)
                                   (try:each (|>> (as (-> Any I64))
                                                  (/64.= expected_i64)))
                                   (try.else false)))))
             alt! (<| (phase.value state)
                      (monad.let phase.monad
                        [_ (translation.set_buffer translation.empty_buffer)
                         _ runtime.translation
                         it (/.when next archive
                              [(synthesis.i64 @ dummy_i64)
                               {path.:Or {path.:I64_Fork [[expected_i64 {path.:Then (synthesis.i64 @ expected_i64)}]
                                                          (list)]}
                                         {path.:Then (synthesis.i64 @ expected_i64)}}])]
                        (pure (|> it
                                  [{.:None}]
                                  (by host evaluate)
                                  (try:each (|>> (as (-> Any I64))
                                                 (/64.= expected_i64)))
                                  (try.else false)))))
             .let [access!|member (is (-> Member (List I64)
                                          Bit)
                                      (function (_ member tuple)
                                        (<| (try.else false)
                                            (phase.value state)
                                            (monad.let phase.monad
                                              [_ (translation.set_buffer translation.empty_buffer)
                                               _ runtime.translation
                                               it (/.when next archive
                                                    [(synthesis.tuple @ (list:each (|>> (synthesis.i64 @)) tuple))
                                                     {path.:And {path.:Access {access.:Member member}}
                                                                {path.:And {path.:Bind register}
                                                                           {path.:Then (synthesis.local @ register)}}}])]
                                              (pure (|> it
                                                        [{.:None}]
                                                        (by host evaluate)
                                                        (try:each (|>> (as (-> Any I64))
                                                                       (/64.= expected_i64)))
                                                        (try.else false)))))))
                   access!|side (is (-> Side
                                        Bit)
                                    (function (_ [lefts right?])
                                      (<| (try.else false)
                                          (phase.value state)
                                          (monad.let phase.monad
                                            [_ (translation.set_buffer translation.empty_buffer)
                                             _ runtime.translation
                                             it (/.when next archive
                                                  [(synthesis.variant @ [lefts right? (synthesis.i64 @ expected_i64)])
                                                   {path.:And {path.:Access {access.:Side [lefts right?]}}
                                                              {path.:And {path.:Bind register}
                                                                         {path.:Then (synthesis.local @ register)}}}])]
                                            (pure (|> it
                                                      [{.:None}]
                                                      (by host evaluate)
                                                      (try:each (|>> (as (-> Any I64))
                                                                     (/64.= expected_i64)))
                                                      (try.else false)))))))
                   access! (and (access!|member [lefts false] (list:composite (list.repeated lefts dummy_i64)
                                                                              (list expected_i64 dummy_i64)))
                                (access!|member [lefts true] (list:composite (list.repeated lefts dummy_i64)
                                                                             (list dummy_i64 expected_i64)))

                                (access!|side [lefts false])
                                (access!|side [lefts true]))]]
            (pure (and then!
                       pop!
                       bind!
                       bit!
                       i64!
                       f64!
                       text!
                       alt!
                       access!)))
          (try.else false)))))

(the test_of_stack
  Test
  (monad.let [! random.monad]
    [module (random.lower_cased 1)

     expected_bit random.bit
     expected_i64 random.i64]
    (_.coverage [runtime.stack
                 runtime.item
                 runtime.head_of_stack
                 runtime.tail_of_stack]
      (and (|> (monad.let try.monad
                 [.let [[_ host] (io.value host.host)]]
                 (<| (phase.value (translation.state host module))
                     (monad.let phase.monad
                       [_ (translation.set_buffer translation.empty_buffer)]
                       (pure (|> (all jvm.composite
                                      (primitive.bit expected_bit)
                                      (primitive.i64 expected_i64)
                                      runtime.stack
                                      (runtime.item runtime.head_of_stack))
                                 [{.:None}]
                                 (by host evaluate)
                                 (try:each (|>> (as (-> Any I64))
                                                (/64.= expected_i64)))
                                 (try.else false))))))
               (try.else false))
           (|> (monad.let try.monad
                 [.let [[_ host] (io.value host.host)]]
                 (<| (phase.value (translation.state host module))
                     (monad.let phase.monad
                       [_ (translation.set_buffer translation.empty_buffer)]
                       (pure (|> (all jvm.composite
                                      (primitive.bit expected_bit)
                                      (primitive.i64 expected_i64)
                                      runtime.stack
                                      (runtime.item runtime.tail_of_stack))
                                 [{.:None}]
                                 (by host evaluate)
                                 (try:each (|>> (as (-> Any Bit))
                                                (bit.= expected_bit)))
                                 (try.else false))))))
               (try.else false))
           ))))

(the (any_test it)
  (-> (Expression [I64 Register Provenance])
      (Random Bit))
  (monad.let [! random.monad]
    [module (random.lower_cased 1)

     expectation random.i64
     register (by ! each (n.% 10) random.natural)

     .let [extender (is extension.Extender
                        (function (_ _)
                          (undefined)))
           expression (//.translate extender complexT.lux)
           @ [module 0 0]]]
    (pure (|> (monad.let try.monad
                [[_ archive] (archive.reserve "" archive.empty)
                 [_ archive] (archive.reserve module archive)
                 .let [[_ host] (io.value host.host)
                       state (is runtime.State
                                 (translation.state host module))]]
                (<| (phase.value state)
                    (monad.let phase.monad
                      [_ (translation.set_buffer translation.empty_buffer)
                       _ runtime.translation
                       it (it expression archive [expectation register @])]
                      (pure (|> it
                                [{.:None}]
                                (by host evaluate)
                                (try:each (|>> (as (-> Any I64))
                                               (/64.= expectation)))
                                (try.else false))))))
              (try.else false)))))

(the test_of_super_specialization
  Test
  (all _.and
       (monad.let [! random.monad]
         [before (by ! each (n.% 10) random.natural)
          after (by ! each (n.% 10) random.natural)
          ? (any_test (function (_ expression archive [expectation register @])
                        (let [other (is I64 (++ expectation))
                              other_register (++ register)]
                          (/.multi_let expression archive
                                       [(synthesis.tuple @ (all list:composite
                                                                (list.repeated before (synthesis.i64 @ other))
                                                                (list (synthesis.i64 @ expectation))
                                                                (list.repeated after (synthesis.i64 @ other))))
                                        (all list:composite
                                             (list:each (function (_ lefts)
                                                          [other_register [lefts 0b]])
                                                        (list.domain before))
                                             (list [register (if (n.= 0 after)
                                                                 [(-- before) 1b]
                                                                 [before 0b])])
                                             (list:each (function (_ lefts)
                                                          [other_register (if (n.= (-- after) lefts)
                                                                              [(n.+ before lefts) 1b]
                                                                              [(n.+ (++ before) lefts) 0b])])
                                                        (list.domain after)))
                                        (synthesis.local @ register)]))))]
         (_.coverage [/.multi_let]
           ?))
       (monad.let [! random.monad]
         [lefts (by ! each (n.% 2) random.natural)
          right? random.bit

          otherwise? random.bit

          ? (any_test (function (_ expression archive [expectation register @])
                        (let [other_register (++ register)
                              otherwise (if otherwise?
                                            [{.:Some other_register} (synthesis.local @ other_register)]
                                            [{.:None} (synthesis.i64 @ (/64.not expectation))])]
                          (/.variant_if expression archive
                                        [(synthesis.variant @ [lefts right? (synthesis.i64 @ expectation)])
                                         (when lefts
                                           0
                                           (if right?
                                               [otherwise
                                                [{.:Some register} (synthesis.local @ register)]]
                                               [[{.:Some register} (synthesis.local @ register)]
                                                otherwise])

                                           else
                                           [otherwise
                                            [{.:None} (synthesis.i64 @ expectation)]])]))))]
         (_.coverage [/.variant_if]
           ?))
       (monad.let random.monad
         [? (any_test (function (_ expression archive [expectation register @])
                        (/.when_i64 expression archive
                                    [(synthesis.i64 @ expectation)
                                     (list [(-- expectation) (synthesis.i64 @ (-- expectation))]
                                           [expectation (synthesis.i64 @ expectation)]
                                           [(++ expectation) (synthesis.i64 @ (++ expectation))])
                                     (synthesis.i64 @ (/64.not expectation))])))]
         (_.coverage [/.when_i64]
           ?))
       (monad.let random.monad
         [? (any_test (function (_ expression archive [expectation register @])
                        (let [expectation' (i.decimal (.integer (/64.>> 32 expectation)))]
                          (/.when_f64 expression archive
                                      [(synthesis.f64 @ expectation')
                                       (list [(d.+ -1.0 expectation') (synthesis.i64 @ (-- expectation))]
                                             [(d.+ +0.0 expectation') (synthesis.i64 @ expectation)]
                                             [(d.+ +1.0 expectation') (synthesis.i64 @ (++ expectation))])
                                       (synthesis.i64 @ (/64.not expectation))]))))]
         (_.coverage [/.when_f64]
           ?))
       (monad.let random.monad
         [? (any_test (function (_ expression archive [expectation register @])
                        (let [as_text (|>> .natural (by n.base_10 as))]
                          (/.when_text expression archive
                                       [(synthesis.text @ (as_text expectation))
                                        (list [(as_text (-- expectation)) (synthesis.i64 @ (-- expectation))]
                                              [(as_text expectation) (synthesis.i64 @ expectation)]
                                              [(as_text (++ expectation)) (synthesis.i64 @ (++ expectation))])
                                        (synthesis.i64 @ (/64.not expectation))]))))]
         (_.coverage [/.when_text]
           ?))
       ))

(the .public test
  Test
  (<| (_.covering /._)
      (all _.and
           test_of_if
           test_of_exec
           test_of_let
           test_of_its
           test_of_when
           test_of_stack

           test_of_super_specialization
           )))
