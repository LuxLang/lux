(the (injection value)
  (for_any (_ it)
    (Injection (/.Operation it)))
  (function (_ state)
    {try.#Success [state value]}))

(the (comparison init)
  (for_any (_ it)
    (-> it
        (Comparison (/.Operation it))))
  (function (_ == left right)
    (when [(/.value init left)
           (/.value init right)]
      [{try.#Success left}
       {try.#Success right}]
      (== left right)

      _
      false)))

(exception.the oops)

(the test|error
  Test
  (monad.let [! random.monad]
    [state random.natural
     expected random.integer
     expected_error (random.lower_cased 1)]
    (all _.and
         (_.coverage [/.failure]
           (|> (/.failure expected_error)
               (/.value state)
               (pipe.when {try.#Failure actual_error}
                 (same? expected_error actual_error)

                 _
                 false)))
         (_.coverage [/.of_try]
           (and (|> (/.of_try {try.#Failure expected_error})
                    (/.value state)
                    (pipe.when {try.#Failure actual_error}
                      (same? expected_error actual_error)

                      _
                      false))
                (|> (/.of_try {try.#Success expected})
                    (by /.functor each (same? expected))
                    (/.value state)
                    (try.else false))))
         (_.coverage [/.except]
           (|> (/.except ..oops [])
               (/.value state)
               (pipe.when {try.#Failure error}
                 (exception.is? ..oops error)

                 _
                 false)))
         (_.coverage [/.assertion]
           (and (|> (/.assertion ..oops [] false)
                    (/.value state)
                    (pipe.when {try.#Failure error}
                      (exception.is? ..oops error)

                      _
                      false))
                (|> (/.assertion ..oops [] true)
                    (/.value state)
                    (pipe.when {try.#Success _}
                      true

                      _
                      false))))
         )))

(the test|state
  Test
  (monad.let [! random.monad]
    [state random.natural
     dummy random.natural
     expected random.integer]
    (all _.and
         (_.coverage [/.state]
           (|> /.state
               (by /.functor each (same? state))
               (/.value state)
               (try.else false)))
         (_.coverage [/.with]
           (|> (monad.let /.monad
                 [_ (/.with state)]
                 /.state)
               (by /.functor each (same? state))
               (/.value dummy)
               (try.else false)))
         (_.coverage [/.sub]
           (|> (/.sub [(by n.base_16 as)
                       (function (_ new old)
                         (|> new (by n.base_16 of) (try.else dummy)))]
                      (monad.let /.monad
                        [state/hex /.state]
                        (pure (|> state
                                  (by n.base_16 as)
                                  (text.= state/hex)))))
               (/.value' state)
               (pipe.when {try.#Success [state' verdict]}
                 (and verdict
                      (n.= state state'))

                 _
                 false)))
         )))

(the test|operation
  Test
  (monad.let [! random.monad]
    [state random.natural
     expected random.integer]
    (all _.and
         (_.for [/.functor]
                (functorT.spec ..injection (..comparison state) /.functor))
         (_.for [/.monad]
                (monadT.spec ..injection (..comparison state) /.monad))

         (_.coverage [/.value]
           (|> (by /.monad pure expected)
               (/.value state)
               (pipe.when {try.#Success actual}
                 (same? expected actual)

                 _
                 false)))
         (_.coverage [/.value']
           (|> (by /.monad pure expected)
               (/.value' state)
               (pipe.when {try.#Success [state' actual]}
                 (and (same? state state')
                      (same? expected actual))

                 _
                 false)))
         ..test|state
         ..test|error
         )))

(the test|phase
  Test
  (monad.let [! random.monad]
    [state/0 random.natural
     state/1 random.revolution
     expected random.integer]
    (all _.and
         (_.coverage [/.identity]
           (|> (/.identity archive.empty expected)
               (/.value state/0)
               (try#each (same? expected))
               (try.else false)))
         (_.coverage [/.composite]
           (let [phase (/.composite (is (/.Phase Natural Integer Decimal)
                                        (function (_ archive input)
                                          (by /.monad pure (i.decimal input))))
                                    (is (/.Phase Revolution Decimal Text)
                                        (function (_ archive input)
                                          (by /.monad pure (%.decimal input)))))]
             (|> (phase archive.empty expected)
                 (/.value' [state/0 state/1])
                 (pipe.when {try.#Success [[state/0' state/1'] actual]}
                   (and (text.= (%.decimal (i.decimal expected)) actual)
                        (same? state/0 state/0')
                        (same? state/1 state/1'))

                   _
                   false))))
         )))

