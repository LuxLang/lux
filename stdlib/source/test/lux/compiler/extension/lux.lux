(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" text]
    [collection
     ["[0]" list]
     ["[0]" set]]]
   [macro
    ["[0]" expansion]]
   [math
    ["[0]" random]
    [number
     [/64
      ["n" natural]]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (all _.and
           (expansion.let [,*options (these /.text_composite

                                            /.type
                                            /.type_name

                                            /.array
                                            /.array_has
                                            /.array_its
                                            /.array_lacks
                                            /.array_lacks?
                                            /.array_size

                                            /.list
                                            /.list_composite
                                            /.list_item
                                            /.list_size)]
             (_.coverage [,*options]
               (let [options (list ,*options)
                     uniques (set.of_list text.hash options)]
                 (n.= (list.size options)
                      (set.size uniques)))))
           )))
