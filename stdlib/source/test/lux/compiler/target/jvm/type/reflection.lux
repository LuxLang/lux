(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]
    ["[0]" hash
     ["[1]T" \\test]]]
   [function
    ["?" predicate]]
   [data
    ["[0]" text]
    [collection
     ["[0]" stack (.use "[1]#[0]" functor)]
     ["[0]" set]]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" natural]]]
   [macro
    ["[0]" expansion]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   [//
    ["[0]" category]
    ["[0]" box]]]])

(<| (expansion.let [,*primitives (these /.boolean
                                        /.byte
                                        /.short
                                        /.int
                                        /.long
                                        /.float
                                        /.double
                                        /.char)
                    ,*simple (these /.void
                                    ,*primitives)
                    ,*objects (these /.var
                                     /.wildcard)
                    ,*boxes (these box.boolean
                                   box.byte
                                   box.short
                                   box.int
                                   box.long
                                   box.float
                                   box.double
                                   box.char)])
    (these (the .public random
             (Random (/.Reflection category.Value))
             (let [primitives (is (Stack (/.Reflection category.Primitive))
                                  (stack ,*primitives))
                   primitives_amount (stack.size primitives)

                   boxes (stack ,*boxes)
                   boxes_amount (stack.size boxes)]
               (all random.either
                    (do [! random.monad]
                      [choice (by ! each (n.% primitives_amount) random.natural)]
                      (random.try (in (stack.item choice primitives))))
                    (do [! random.monad]
                      [choice (by ! each (n.% boxes_amount) random.natural)
                       choice (random.try (in (stack.item choice boxes)))]
                      (in (/.class choice)))))))
    (the .public test
      Test
      (<| (_.covering /._)
          (do [! random.monad]
            [argument_0 ..random
             argument_1 ..random
             return (is (Random (/.Reflection category.Return))
                        (all random.either
                             (in /.void)
                             ..random))])
          (_.for [/.Reflection])
          (all _.and
               (_.for [/.equivalence /.=]
                      (static.when (same? /.equivalence /.=)
                        (equivalenceT.spec /.equivalence ..random)))
               (_.for [/.hash]
                      (hashT.spec /.hash ..random))

               (_.coverage [,*simple]
                 (let [options (is (Stack (/.Reflection category.Return))
                                   (stack ,*simple))
                       uniques (set.of_stack /.hash options)]
                   (n.= (stack.size options)
                        (set.size uniques))))
               (_.coverage [,*objects]
                 (let [options (is (Stack (/.Reflection category.Return))
                                   (stack ,*objects))
                       uniques (set.of_stack /.hash options)]
                   (n.= 1
                        (set.size uniques))))
               (_.coverage [/.reflection]
                 (let [options (<| (stack#each /.reflection)
                                   (is (Stack (/.Reflection category.Return)))
                                   (stack ,*simple))
                       uniques (set.of_stack text.hash options)]
                   (n.= (stack.size options)
                        (set.size uniques))))
               
               (_.coverage [/.class]
                 (let [options (is (Stack (/.Reflection category.Class))
                                   (stack#each /.class (stack ,*boxes)))
                       uniques (set.of_stack /.hash options)]
                   (n.= (stack.size options)
                        (set.size uniques))))
               (_.coverage [/.declaration /.as_class]
                 (let [expected (is (Stack (/.Reflection category.Class))
                                    (stack#each (|>> /.declaration /.as_class) (stack ,*boxes)))
                       actual (is (Stack (/.Reflection category.Class))
                                  (stack#each /.class (stack ,*boxes)))]
                   (by (stack.equivalence /.equivalence) =
                       expected
                       actual)))
               (_.coverage [/.lower]
                 (let [options (is (Stack (/.Reflection category.Parameter))
                                   (stack#each (|>> /.class /.lower) (stack ,*boxes)))
                       uniques (set.of_stack /.hash options)]
                   (n.= 1
                        (set.size uniques))))
               (_.coverage [/.upper]
                 (let [options (is (Stack (/.Reflection category.Parameter))
                                   (stack#each (|>> /.class /.upper) (stack ,*boxes)))
                       uniques (set.of_stack /.hash options)]
                   (n.= (stack.size options)
                        (set.size uniques))))
               (_.coverage [/.array]
                 (and (let [options (is (Stack (/.Reflection category.Array))
                                        (stack#each (|>> /.class /.array) (stack ,*boxes)))
                            uniques (set.of_stack /.hash options)]
                        (n.= (stack.size options)
                             (set.size uniques)))
                      (let [single (stack#each (|>> /.class /.array) (stack ,*boxes))
                            double (stack#each /.array single)]
                        (not (by (stack.equivalence /.equivalence) =
                                 single
                                 double)))))
               ))))
