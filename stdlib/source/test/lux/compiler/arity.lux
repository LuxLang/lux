(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [logic
    ["[0]" bit]]
   [math
    ["[0]" random (.only Random)]
    [number
     [/64
      ["n" natural]]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Arity])
      (do [! random.monad]
        [arity (by ! each (n.% 3) random.natural)]
        (all _.and
             (_.coverage [/.nullary?]
               (bit.= (n.= 0 arity) (/.nullary? arity)))
             (_.coverage [/.unary?]
               (bit.= (n.= 1 arity) (/.unary? arity)))
             (_.coverage [/.multiary?]
               (bit.= (n.>= 2 arity) (/.multiary? arity)))
             ))))
