(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [error
    ["[0]" try]]
   [math
    ["[0]" random]
    [number
     ["n" natural]]]
   [test
    ["_" property (.only Test)]
    ["[0]" unit]]]]
 [\\library
  ["[0]" / (.only)
   [//
    ["[0]" atom (.only Atom)]
    ["[0]" future (.only Future Resolver) (.use "[1]#[0]" monad)]
    ["[0]" frp]
    ["[0]" actor]]]])

(the .public test
  Test
  (do [! random.monad]
    [left random.natural
     right random.natural]
    (<| (_.covering /._)
        (_.for [/.Agent])
        (all _.and
             (in (do future.monad
                   [agent (future.soon
                           (actor.spawn! actor.default 0))
                    _ (future.soon
                       (/.react! (frp.sequential 0 (list left right))
                                 (function (_ next current)
                                   (future#in {try.#Success (n.+ next current)}))
                                 agent))
                    _ (future.delay 1)
                    ?state (actor.request! actor.state agent)]
                   (unit.coverage [/.react!]
                     (when ?state
                       {try.#Success actual}
                       (n.= (n.+ left right)
                            actual)
                       
                       failure
                       false))))
             ))))
