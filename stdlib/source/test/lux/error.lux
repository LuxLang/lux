(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [math
    ["[0]" random (.only Random)]
    [number
     [/64
      ["n" natural]]]]
   [macro
    ["[0]" template]
    ["[0]" expansion]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]
   [data
    ["[0]" text]
    [collection
     ["[0]" list]
     ["[0]" set]]]]]
 [\\library
  ["[0]" /]]
 ["[0]" /
  ["[1][0]" exception]
  ["[1][0]" try]
  ["[1][0]" condition]])

(expansion.let [,id (static.random_natural)
                ,local (template.name ["error_" ,id])
                ,global (template.name [.._] [,local])

                ,standard (these /.not_valid
                                 /.not_known
                                 /.empty)]
  (these (the ,local
           (/.error (template.text [,id])))

         (the .public test
           Test
           (<| (_.covering /._)
               (_.for [.Error])
               (all _.and
                    (_.coverage [/.error]
                      (when ,global
                        ,global
                        true

                        _
                        false))
                    (<| (_.for [/.the])
                        (_.coverage [,standard]
                          (let [options (list ,standard)
                                unique (set.of_list text.hash options)]
                            (n.= (list.size options)
                                 (set.size unique)))))

                    /exception.test
                    /try.test
                    /condition.test
                    )))
         ))
