(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]]
   [math
    ["[0]" random]]
   [test
    ["_" property (.only Test)]]
   [data
    ["[0]" product]]
   [error
    ["[0]" try]]]]
 [\\library
  ["[0]" / (.only)
   ["?" proposition]]]
 ["[0]" /
  ["[1][0]" proposition]])

(/.the _
  (?.let [any_left any_right]
    [left any_left
     right any_right]
    (?.= (product.left [left right])
         left))
  (all /.and
       (/.= (all /.and
                 (/.of /.by_definition (list /.as_is))
                 (/.by_when /.as_is
                            (/.with /.left_of_pair /.by)))
            /.as_is)
       /.qed))

(the .public test
  Test
  (<| (_.covering /._)
      (monad.let [! random.monad]
        [])
      (all _.and
           (_.coverage [/.the]
             false)

           /proposition.test
           )))
