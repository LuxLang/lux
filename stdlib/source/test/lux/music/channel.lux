(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    [collection
     ["[0]" list]
     ["[0]" set]]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" functor)]
    [number
     ["[0]" nat]]]
   [meta
    [macro
     ["[0]" expansion]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random /.Channel)
  (random#each (nat.% (++ /.maximum))
               random.nat))

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [example ..random])
      (_.for [/.Channel])
      (all _.and
           (expansion.let [<options> (these /.minimum
                                            /.maximum

                                            /.percussion)]
             (_.coverage [<options>]
               (let [options (is (List /.Channel)
                                 (list <options>))
                     uniques (set.of_list nat.hash options)]
                 (nat.= (list.size options)
                        (set.size uniques)))))
           (_.coverage [/.tonal?]
             (or (/.tonal? example)
                 (nat.= /.percussion example)))
           )))
