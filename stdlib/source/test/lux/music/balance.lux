(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    [collection
     ["[0]" list]
     ["[0]" set]]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" functor)]
    [number
     ["[0]" natural]]]
   [macro
    ["[0]" expansion]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (_.for [/.Balance])
      (all _.and
           (expansion.let [<options> (these /.left
                                            /.right
                                            /.center)]
             (_.coverage [<options>]
               (let [options (is (List /.Balance)
                                 (list <options>))
                     uniques (set.of_list natural.hash options)]
                 (natural.= (list.size options)
                            (set.size uniques)))))
           )))
