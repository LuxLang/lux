(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" hash
     ["[1]T" \\test]]
    ["[0]" equivalence
     ["[1]T" \\test]]
    ["[0]" format
     ["[1]T" \\test]]
    ["[0]" monoid
     ["[1]T" \\test]]]
   [control
    ["[0]" function]]
   [math
    ["[0]" random]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public test
  Test
  (<| (_.covering /._)
      (do random.monad
        [value random.bit]
        (all _.and
             (_.for [/.equivalence]
                    (equivalenceT.spec /.equivalence random.bit))
             (_.for [/.hash]
                    (hashT.spec /.hash random.bit))
             (_.for [/.disjunction]
                    (monoidT.spec /.equivalence /.disjunction random.bit))
             (_.for [/.conjunction]
                    (monoidT.spec /.equivalence /.conjunction random.bit))
             (_.for [/.format]
                    (formatT.spec /.equivalence /.format random.bit))
             
             (_.coverage [/.no /.yes]
               (and (of /.equivalence = false /.no)
                    (of /.equivalence = true /.yes)))
             (_.coverage [/.off /.on]
               (and (of /.equivalence = false /.off)
                    (of /.equivalence = true /.on)))
             (_.coverage [/.falsum /.verum]
               (and (of /.equivalence = false /.falsum)
                    (of /.equivalence = true /.verum)))
             ))))
