(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]
    ["[0]" equivalence
     ["[1]T" \\test]]
    ["[0]" hash
     ["[1]T" \\test]]]
   [math
    ["[0]" random (.only Random) (.use "[1]:[0]" monad)]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]
   ["[0]" target]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random Any)
  (random:pure /.any))

(the .public test
  Test
  (<| (_.covering /._)
      (monad.let [! random.monad]
        [])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (identical? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence ..random)))
           (_.for [/.hash]
                  (hashT.spec /.hash ..random))
           
           (_.coverage [/.any]
             (target.for target.ruby
                         true
                         ... else
                         (identical? [] /.any)))
           )))
