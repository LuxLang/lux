(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]
    ["[0]" hash
     ["[1]T" \\test]]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" monad)]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the .public random
  (Random Any)
  (random#pure /.any))

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (all _.and
           (_.for [/.equivalence /.=]
                  (static.when (same? /.equivalence /.=)
                    (equivalenceT.spec /.equivalence ..random)))
           (_.for [/.hash]
                  (hashT.spec /.hash ..random))
           
           (_.coverage [/.any]
             (for .ruby
                  true
                  ... else
                  (same? [] /.any)))
           )))
