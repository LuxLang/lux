(.module:
  [lux #*
   ["_" test (#+ Test)]
   [abstract
    [monad (#+ do)]
    {[0 #spec]
     [/
      ["$." equivalence]]}]
   [data
    [number
     ["i" int]]]
   [math
    ["." random (#+ Random)]]]
  {1
   ["." /
    ["/#" // #_
     ["#." i64]]]})

(def: #export random
  (Random /.I16)
  (\ random.functor map /.i16 random.i64))

(def: #export test
  Test
  (<| (_.covering /._)
      (_.for [/.I16])
      (do {! random.monad}
        [#let [limit (|> (dec /.width)
                         //i64.mask
                         .int
                         inc)]
         expected (\ ! map (i.% limit) random.int)]
        ($_ _.and
            (_.for [/.equivalence]
                   ($equivalence.spec /.equivalence ..random))
            
            (_.cover [/.i16 /.i64 /.width]
                     (let [actual (|> expected .i64 /.i16 /.i64)]
                       (\ //i64.equivalence = expected actual)))
            ))))
