(the !expect
  (template (_ <expectation> <computation>)
    [(when <computation>
       <expectation>
       true

       _
       false)]))

(the segment_size 10)

(the (utf8_conversion_does_not_alter? value)
  (Predicate Text)
  (|> value
      (of utf8.codec injection)
      (of utf8.codec projection)
      (pipe.when
        {try.#Success converted}
        (text#= value converted)
        
        {try.#Failure error}
        false)))

(the random_text
  (Random Text)
  (random.only ..utf8_conversion_does_not_alter?
               (random.unicode ..segment_size)))

(the random_symbol
  (Random Symbol)
  (random.and ..random_text ..random_text))

(the location_equivalence
  (Equivalence Location)
  (implementation
   (the (= [expected_module expected_line expected_column]
           [sample_module sample_line sample_column])
     (and (text#= expected_module sample_module)
          (n.= expected_line sample_line)
          (n.= expected_column sample_column)))))

(the random_location
  (Random Location)
  (all random.and
       ..random_text
       random.nat
       random.nat))

(the random_code
  (Random Code)
  (random.rec
   (function (_ again)
     (let [random_sequence (is (Random (List Code))
                               (do [! random.monad]
                                 [size (of ! each (n.% 2) random.nat)]
                                 (random.list size again)))]
       (all random.and
            ..random_location
            (is (Random (Code' (Ann Location)))
                (all random.or
                     random.bit
                     random.nat
                     random.int
                     random.rev
                     random.safe_dec
                     ..random_text
                     ..random_symbol
                     random_sequence
                     random_sequence
                     random_sequence
                     )))))))

(the random_type
  (Random Type)
  (let [(open "[0]") random.monad]
    (all random.either
         (in .Nat)
         (in .List)
         (in .Code)
         (in .Type))))

