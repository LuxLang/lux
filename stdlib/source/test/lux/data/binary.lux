(the equivalence
  (Equivalence \\format.Specification)
  (implementation
   (the (= expected actual)
     (/#= (\\format.instance expected)
          (\\format.instance actual)))))

(the random_specification
  (Random \\format.Specification)
  (of random.monad each \\format.nat random.nat))

