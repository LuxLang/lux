(.module:
  [lux #*
   ["_" test (#+ Test)]]
  ["." / #_
   ["#." bit]
   ["#." color]
   ["#." error]
   ["#." identity]
   ["#." lazy]
   ["#." maybe]
   ["#." name]
   ["#." product]
   ["#." sum]
   [number
    ["#." i64]
    ["#." nat]
    ["#." int]
    ["#." rev]
    ["#." frac]
    ["#." ratio]
    ["#." complex]]
   ["#." text
    ["#/." lexer]
    ["#/." regex]]
   [format
    ["#." json]
    ["#." xml]]
   ["#." collection]])

(def: number
  Test
  ($_ _.and
      /i64.test
      /nat.test
      /int.test
      /rev.test
      /frac.test
      /ratio.test
      /complex.test
      ))

(def: text
  ($_ _.and
      /text.test
      /text/lexer.test
      /text/regex.test
      ))

(def: format
  ($_ _.and
      /json.test
      /xml.test
      ))

(def: #export test
  Test
  ($_ _.and
      /bit.test
      /color.test
      /error.test
      /identity.test
      /lazy.test
      /maybe.test
      /name.test
      /product.test
      /sum.test
      ..number
      ..text
      ..format
      /collection.test
      ))
