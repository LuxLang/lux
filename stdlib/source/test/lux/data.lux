(.module:
  [library
   [lux #*
    ["_" test (#+ Test)]
    [abstract
     [monad (#+ do)]]
    [math
     ["." random]]]]
  ["." / #_
   ["#." binary]
   ["#." bit]
   ["#." color
    ["#/." named]]
   ["#." identity]
   ["#." lazy]
   ["#." maybe]
   ["#." name]
   ["#." product]
   ["#." sum]
   ["#." text]
   ["#." format #_
    ["#/." binary]
    ["#/." json]
    ["#/." tar]
    ["#/." xml]]
   ["#." collection]])

## TODO: Get rid of this ASAP
(template: (!bundle body)
  (: Test
     (do random.monad
       [_ (in [])]
       body)))

(def: format
  Test
  ($_ _.and
      /format/binary.test
      /format/json.test
      /format/tar.test
      /format/xml.test
      ))

(def: test/0
  Test
  ($_ _.and
      /binary.test
      /bit.test
      /color.test
      /color/named.test))

(def: test/1
  Test
  ($_ _.and
      /identity.test
      /lazy.test
      /maybe.test
      /name.test))

(def: test/2
  Test
  ($_ _.and
      /product.test
      /sum.test
      /text.test))

(def: #export test
  Test
  ## TODO: Inline ASAP
  ($_ _.and
      (!bundle test/0)
      (!bundle test/1)
      (!bundle test/2)
      (!bundle ..format)
      (!bundle /collection.test)
      ))
