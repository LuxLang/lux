(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [math
    ["[0]" random]
    [number
     ["i" integer]]]
   [macro
    ["[0]" template]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the !quadrance/2
  (template.macro (_ m0 m1)
    [(i.+ (i.x m0 m0) (i.x m1 m1))]))

(the .public quadrance/2
  (/.macro (_ m0 m1)
    (-> Integer Integer Integer)
    (!quadrance/2 m0 m1)))

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [.let [measurement (by ! each (i.% +1000) random.integer)]
         m0 measurement
         m1 measurement])
      (all _.and
           (_.coverage [/.macro]
             (i.= (..!quadrance/2 m0 m1)
                  (..quadrance/2 m0 m1)))
           )))
