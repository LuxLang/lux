(.using
 [library
  [lux (.except)
   [abstract
    [equivalence (.only)]
    [functor (.only)]
    [monoid (.only)]
    ["[0]" monad]
    ["[0]" enum]]
   [data
    [collection
     ["[0]" list]]]
   [logic
    ["[0]" bit]]
   [math
    ["[0]" random (.only Random)]
    [number
     [/64
      ["n" natural]]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(/.implicitly n.multiplication)

(the .public test
  Test
  (<| (_.covering /._)
      (monad.let [! random.monad]
        [.let [digit (by ! each (n.% 10) random.natural)]
         left digit
         right digit
         .let [start (n.minor left right)
               end (n.major left right)]

         left random.natural
         right random.natural]
        (all _.and
             ... (_.coverage [/.any]
             ...   (let [first_order!
             ...         (let [(open "list#[0]") (list.equivalence n.equivalence)]
             ...           (and (bit.= (by n.equivalence = left right)
             ...                       (/.any = left right))
             ...                (list#= (by list.functor each ++ (enum.range n.enum start end))
             ...                        (/.any each ++ (enum.range n.enum start end)))))

             ...         second_order!
             ...         (/.any =
             ...                (enum.range n.enum start end)
             ...                (enum.range n.enum start end))

             ...         third_order!
             ...         (let [lln (/.any each (enum.range n.enum start)
             ...                          (enum.range n.enum start end))]
             ...           (/.any = lln lln))]
             ...     (and first_order!
             ...          second_order!
             ...          third_order!)))
             (_.coverage [/.with]
               (/.with [n.addition]
                 (n.= (by n.addition composite left right)
                      (/.any composite left right))))
             (_.coverage [/.implicitly]
               (n.= (by n.multiplication composite left right)
                    (/.any composite left right)))
             ))))
