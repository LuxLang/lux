(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" text (.only)
     ["%" \\injection]]]
   [logic
    ["[0]" bit]]
   [math
    ["[0]" random]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(/.the .public injection
  [it]
  (-> it
      Text)

  (/.method injection
    [Bit]
    bit.as_text)

  (/.method (injection it)
    [Natural]
    (%.natural it))
  )

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [bit random.bit
         natural random.natural])
      (all _.and
           (_.coverage [/.the /.method]
             (and (text.= (bit.as_text bit)
                          (injection bit))
                  (text.= (%.natural natural)
                          (injection natural))))
           )))
