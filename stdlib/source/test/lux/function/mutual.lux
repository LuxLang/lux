(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [logic
    ["[0]" bit]]
   [math
    ["[0]" random (.only Random)]
    [number
     [/64
      ["n" natural]]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the test_let
  Test
  (do [! random.monad]
    [sample (by ! each (n.% 10) random.natural)
     .let [expected (n.even? sample)]]
    (<| (_.coverage [/.let])
        (/.let [(even? number)
                (-> Natural Bit)
                (when number
                  0 true
                  _ (odd? (-- number)))

                (odd? number)
                (-> Natural Bit)
                (when number
                  0 false
                  _ (even? (-- number)))]
          (and (bit.= expected (even? sample))
               (bit.= (not expected) (odd? sample)))))))

(/.the
  [(even? number)
   (-> Natural Bit)
   (when number
     0 true
     _ (odd? (-- number)))]

  [(odd? number)
   (-> Natural Bit)
   (when number
     0 false
     _ (even? (-- number)))])

(the test_def
  Test
  (do [! random.monad]
    [sample (by ! each (n.% 10) random.natural)
     .let [expected (n.even? sample)]]
    (<| (_.coverage [/.the])
        (and (bit.= expected (..even? sample))
             (bit.= (not expected) (..odd? sample))))))

(the .public test
  Test
  (<| (_.covering /._)
      (all _.and
           ..test_let
           ..test_def
           )))
