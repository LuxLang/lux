(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [control
    ["[0]" try]
    ["[0]" exception]]
   [data
    ["[0]" text]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" monad)]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(/.static (random#in true))
(/.static 123,456,789 (random#in true))

(def .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [])
      (all _.and
           (_.coverage [/.Test /.static]
             true)
           (_.coverage [/.dynamic]
             (and (when (try (/.dynamic true))
                    {try.#Success _}
                    true
                    
                    {try.#Failure _}
                    false)
                  (when (try (/.dynamic false))
                    {try.#Success _}
                    false
                    
                    {try.#Failure _}
                    true)))
           (_.coverage [/.failure]
             (when (try (/.dynamic false))
               {try.#Success _}
               false
               
               {try.#Failure error}
               (text.contains? (its exception.#label /.failure)
                               error)))
           )))
