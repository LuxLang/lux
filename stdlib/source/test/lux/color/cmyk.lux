(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [error
    ["[0]" try (.use "[1]#[0]" functor)]
    ["[0]" exception]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" functor)]
    [number
     [/64
      ["d" decimal]]]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   [//
    ["[0]" rgb]]]]
 [//
  ["[0]T" rgb]])

(the .public value
  (Random /.Value)
  (random#each /.value random.unit_decimal))

(the .public random
  (Random /.CMYK)
  (monad.let random.monad
    [cyan ..value
     magenta ..value
     yellow ..value
     key ..value]
    (pure [/.#cyan cyan
           /.#magenta magenta
           /.#yellow yellow
           /.#key key])))

(the .public test
  Test
  (<| (_.covering /._)
      (monad.let [! random.monad]
        [expected_value ..value
         expected_rgb rgbT.random
         expected_cmyk ..random

         possible_value random.unit_decimal
         .let [delta +0.000000001]])
      (all _.and
           (_.for [/.Value]
                  (all _.and
                       (_.coverage [/.value?]
                         (and (/.value? expected_value)
                              (not (/.value? (d.+ delta /.most)))
                              (not (/.value? (d.- delta /.least)))))
                       (_.coverage [/.value]
                         (if (/.value? possible_value)
                             (|> possible_value
                                 /.value
                                 (d.= possible_value))
                             (or (d.= /.least (/.value possible_value))
                                 (d.= /.most (/.value possible_value)))))
                       (_.coverage [/.least]
                         (and (d.< /.most
                                   /.least)
                              (/.value? /.least)
                              (/.value? (d.+ delta /.least))
                              (not (/.value? (d.- delta /.least)))))
                       (_.coverage [/.most]
                         (and (d.> /.least
                                   /.most)
                              (/.value? /.most)
                              (/.value? (d.- delta /.most))
                              (not (/.value? (d.+ delta /.most)))))
                       ))
           (_.for [/.CMYK
                   /.#cyan /.#magenta /.#yellow /.#key]
                  (all _.and
                       (_.for [/.equivalence /.=]
                              (static.when (identical? /.equivalence /.=)
                                (equivalenceT.spec /.equivalence ..random)))

                       (_.coverage [/.of_rgb /.rgb]
                         (|> expected_rgb
                             /.of_rgb
                             /.rgb
                             (by rgb.equivalence = expected_rgb)))
                       ))
           )))
