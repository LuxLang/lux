  (these (the all_colors
           (list#conjoint (`` (list (,, (template.with [<definition> <by_letter>]
                                          [((is (-> Any (List RGB))
                                                (function (_ _)
                                                  (`` (list (,, (template.spliced <by_letter>))))))
                                            123)]
                                          
                                          <colors>))))))
         
         (the unique_colors
           (set.of_list rgb.hash ..all_colors))

         (the .public random
           (Random RGB)
           (do [! random.monad]
             [choice (by ! each (n.% (set.size ..unique_colors))
                         random.natural)]
             (in (maybe.trusted (list.item choice ..all_colors)))))

         (the verdict
           (n.= (list.size ..all_colors)
                (set.size ..unique_colors)))

         (template.with [<definition> <by_letter>]
           [(the <definition>
              Test
              (_.coverage <by_letter>
                ..verdict))]
           
           <colors>)

         (the .public test
           Test
           (<| (_.covering /._)
               (`` (all _.and
                        (,, (template.with [<definition> <by_letter>]
                              [<definition>]
                              
                              <colors>))
                        (_.coverage [/.aqua]
                          (by rgb.equivalence = /.cyan /.aqua))
                        (_.coverage [/.fuchsia]
                          (by rgb.equivalence = /.magenta /.fuchsia))
                        )))))
  )
