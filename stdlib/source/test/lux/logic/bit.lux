(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]
    ["[0]" hash
     ["[1]T" \\test]]
    ["[0]" format
     ["[1]T" \\test]]
    ["[0]" monoid
     ["[1]T" \\test]]]
   [error
    ["[0]" try]]
   ["[0]" function]
   [data
    ["[0]" text (.only)
     ["%" \\injection]]]
   [math
    ["[0]" random]]
   [meta
    ["[0]" static]]
   [test
    ["_" property (.only Test)]]]]
 ["/" \\library]
 ["!" \\theorem])

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [.Bit])
      (all _.and
           (_.for [/.hash]
                  (hashT.spec /.hash random.bit))
           (_.for [/.disjunction]
                  (monoidT.spec /.equivalence /.disjunction random.bit))
           (_.for [/.conjunction]
                  (monoidT.spec /.equivalence /.conjunction random.bit))
           (_.for [/.text]
                  (formatT.spec /.equivalence /.text random.bit))

           (_.by_proof [/.equivalence /.=]
                       (list (_.proposition !.reflexivity_of_=)))
           (_.by_proof [.if]
                       (list (_.proposition !.if_false)
                             (_.proposition !.if_true)
                             (_.proposition !.if_not)))
           (_.by_proof [.false
                        /.no /.off /.falsum]
                       (list (_.proposition !.false_is_not_true)))
           (_.by_proof [.true
                        /.yes /.on /.verum]
                       (list (_.proposition !.true_is_not_false)))
           (_.by_proof [.not]
                       (list (_.proposition !.double_negation)))
           (_.by_proof [.or]
                       (list (_.proposition !.idempotence_of_or)
                             (_.proposition !.complementation_of_or)
                             
                             (_.proposition !.identity_of_or)
                             (_.proposition !.annihilation_of_or)
                             
                             (_.proposition !.commutativity_of_or)
                             (_.proposition !.associativity_of_or)

                             (_.proposition !.distributivity_of_or)
                             (_.proposition !.negation_of_or)

                             (_.proposition !.absorption_of_or)))
           (_.by_proof [.and]
                       (list (_.proposition !.idempotence_of_and)
                             (_.proposition !.complementation_of_and)
                             
                             (_.proposition !.identity_of_and)
                             (_.proposition !.annihilation_of_and)
                             
                             (_.proposition !.commutativity_of_and)
                             (_.proposition !.associativity_of_and)

                             (_.proposition !.distributivity_of_and)
                             (_.proposition !.negation_of_and)

                             (_.proposition !.absorption_of_and)))
           (_.by_proof [/.xor]
                       (list (_.proposition !.identity_of_xor)
                             (_.proposition !.negation_by_xor)

                             (_.proposition !.negation_in_xor)
                             (_.proposition !.xor_is_an_involution)
                             
                             (_.proposition !.non_idempotence_of_xor)
                             (_.proposition !.complementation_of_xor)

                             (_.proposition !.commutativity_of_xor)
                             (_.proposition !.associativity_of_xor)
                             (_.proposition !.distributivity_in_xor)))
           (_.by_proof [/.if]
                       (list (_.proposition !.principle_of_explosion)
                             (_.proposition !.identity_of_if)
                             
                             (_.proposition !.reflexivity_of_if)
                             (_.proposition !.totality_of_if)
                             (_.proposition !.complementation_of_if)

                             (_.proposition !.contraposition)
                             (_.proposition !.import_export)
                             (_.proposition !.negation_of_if)
                             (_.proposition !.or_if)
                             (_.proposition !.necessity)
                             (_.proposition !.commutativity_of_if)
                             (_.proposition !.left_distributivity)))
           
           (monad.let random.monad
             [left random.bit
              right random.bit]
             (_.coverage [/.as_text]
               (/.= (/.= left right)
                    (text.= (/.as_text left) (/.as_text right)))))
           )))
