(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]]
   [math
    ["[0]" random]]
   [test
    ["_" property (.only Test)]]]]
 ["/" \\library]
 ["!" \\theorem])

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Byte
              /.:7 /.:6 /.:5 /.:4 /.:3 /.:2 /.:1 /.:0])
      (all _.and
           (_.by_proof [/.false]
                       (list (_.identity !.false)))
           (_.by_proof [/.true]
                       (list (_.identity !.true)))
           (_.by_proof [/.not]
                       (list (_.identity !.involution_of_not)))
           (_.by_proof [/.xor]
                       (list (_.identity !.identity_of_xor)
                             (_.identity !.commutativity_of_xor)
                             (_.identity !.associativity_of_xor)))
           (_.by_proof [/.or]
                       (list (_.identity !.identity_of_or)
                             (_.identity !.commutativity_of_or)
                             (_.identity !.associativity_of_or)))
           (_.by_proof [/.and]
                       (list (_.identity !.identity_of_and)
                             (_.identity !.commutativity_of_and)
                             (_.identity !.associativity_of_and)))
           )))
