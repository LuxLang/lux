(.module:
  [library
   [lux (#- function)
    ["_" test (#+ Test)]]]
  ["." / #_
   ["#." concatenative]
   ["#." concurrency #_
    ["#/." actor]
    ["#/." atom]
    ["#/." frp]
    ["#/." thread]
    ["#/." async]
    ["#/." semaphore]
    ["#/." stm]]
   ["#." continuation]
   ["#." exception]
   ["#." function]
   ["#." io]
   ["#." parser]
   ["#." pipe]
   ["#." reader]
   ["#." region]
   ["#." remember]
   [security
    ["#." policy]
    ["#." capability]]
   ["#." state]
   ["#." thread]
   ["#." try]
   ["#." writer]])

(def: concurrency
  Test
  ($_ _.and
      /concurrency/actor.test
      /concurrency/atom.test
      /concurrency/frp.test
      /concurrency/thread.test
      /concurrency/async.test
      /concurrency/semaphore.test
      /concurrency/stm.test
      ))

(def: security
  Test
  ($_ _.and
      /policy.test
      /capability.test
      ))

(def: #export test
  Test
  ($_ _.and
      /concatenative.test
      ..concurrency
      /continuation.test
      /exception.test
      /function.test
      /io.test
      /parser.test
      /pipe.test
      /reader.test
      /region.test
      /remember.test
      ..security
      /state.test
      /thread.test
      /try.test
      /writer.test
      ))
