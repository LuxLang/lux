(.module:
  [lux (#- function)
   ["_" test (#+ Test)]]
  ["." / #_
   ["#." concatenative]
   [concurrency
    ["#." actor]
    ["#." atom]
    ["#." frp]
    ["#." process]
    ["#." promise]
    ["#." semaphore]
    ["#." stm]]
   ["#." continuation]
   ["#." exception]
   ["#." function
    ["#/." contract]
    ["#/." memo]
    ["#/." mixin]]
   ["#." try]
   ["#." io]
   ["#." parser
    ["#/." analysis]
    ["#/." text]
    ["#/." cli]]
   ["#." pipe]
   ["#." reader]
   ["#." region]
   ["#." remember]
   [security
    ["#." policy]]
   ["#." state]
   ["#." thread]
