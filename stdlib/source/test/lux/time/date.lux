(.module:
  [lux #*
   ["%" data/text/format (#+ format)]
   ["_" test (#+ Test)]
   [math
    ["." random (#+ Random)]]
   [abstract
    ["." monad (#+ do)]
    {[0 #spec]
     [/
      ["$." equivalence]
      ["$." order]
      ["$." codec]]}]
   [control
    ["." try]]]
  [//
   ["_." instant]]
  {1
   ["." / (#+ Date)
    ["." // #_
     ["#." instant]]]})

(def: #export date
  (Random Date)
  (\ random.monad map //instant.date
     _instant.instant))

(def: #export test
  Test
  (<| (_.context (%.name (name-of /._)))
      ($_ _.and
          ($equivalence.spec /.equivalence ..date)
          ($order.spec /.order ..date)
          ($codec.spec /.equivalence /.codec ..date)
          )))
