(.module:
  [lux #*
   ["%" data/text/format (#+ format)]
   ["r" math/random (#+ Random)]
   ["_" test (#+ Test)]
   [abstract
    ["." monad (#+ do)]
    {[0 #spec]
     [/
      ["$." equivalence]
      ["$." order]
      ["$." codec]]}]]
  [//
   ["_." instant]]
  {1
   ["." / (#+ Date)
    ["." // #_
     ["#." instant]]]})

(def: #export date
  (Random Date)
  (|> _instant.instant (:: r.monad map //instant.date)))

(def: #export test
  Test
  (<| (_.context (%.name (name-of /._)))
      ($_ _.and
          ($equivalence.spec /.equivalence ..date)
          ($order.spec /.order ..date)
          ($codec.spec /.equivalence /.codec ..date)
          )))
