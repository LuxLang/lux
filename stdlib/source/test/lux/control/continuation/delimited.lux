(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    [collection
     ["[0]" list]]
    [text
     ["%" \\format]]]
   [math
    ["[0]" random]
    [number
     ["n" nat]]]
   [meta
    ["[0]" type]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" / (.only)
   ["/[1]" //]]])

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [elems (random.list 3 random.nat)])
      (all _.and
           (_.coverage [/.reset /.context
                        /.shift /.exit]
             (and (let [(open "//#[0]") //.monad
                        (open "list#[0]") (list.equivalence n.equivalence)
                        visit (is (-> (List Nat)
                                      (//.Cont (List Nat) (List Nat)))
                                  (function (visit it)
                                    (when it
                                      {.#End}
                                      (//#in {.#End})

                                      {.#Item head tail}
                                      (do [! //.monad]
                                        [output (/.shift (function (_ after)
                                                           (in {.#Item head (after tail)})))]
                                        (visit output)))))]
                    (//.continued (list#= elems)
                                  (/.reset (visit elems))))
                  (same? /.reset /.context)
                  (same? /.shift /.exit)))
           )))
