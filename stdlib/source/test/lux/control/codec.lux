(.module:
  [lux #*
   ["_" test (#+ Test)]
   [control
    [monad (#+ do)]]
   [data
    text/format
    ["." error]]
   [math
    ["r" random (#+ Random)]]]
  {1
   ["." / (#+ Codec)
    [//
     [equivalence (#+ Equivalence)]]]})

(def: #export (test (^open "/@.") (^open "/@.") generator)
  (All [m a] (-> (Codec m a) (Equivalence a) (Random a) Test))
  (do r.monad
    [expected generator]
    (<| (_.context (%name (name-of /.Codec)))
        (_.test "Reflexivity."
                (case (|> expected /@encode /@decode)
                  (#error.Success actual)
                  (/@= expected actual)
                  
                  (#error.Failure error)
                  false)))))
