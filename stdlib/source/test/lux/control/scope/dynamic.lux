(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    [text
     ["%" \\format]]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" functor)]
    [number
     ["n" nat]]]
   [meta
    ["[0]" static]
    ["[0]" code]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(with_expansions [<it> (static.random code.local
                                      (random#each %.nat random.nat))
                  <before> (static.random_nat)]
  (these (/.def .private <it>
           Nat
           <before>)

         (def .public test
           Test
           (<| (_.covering /._)
               (do [! random.monad]
                 [after (random.only (|>> (n.= <before>) not)
                                     random.nat)])
               (_.for [/.Dynamic])
               (all _.and
                    (_.coverage [/.def /.value]
                      (n.= <before> (/.value <it>)))
                    (_.coverage [/.let]
                      (|> (/.let [<it> after]
                            <it>)
                          /.value
                          (same? after)))
                    )))))
