(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad
     ["[1]T" \\test]]
    ["[0]" functor
     ["[1]T" \\test (.only Injection Comparison)]]
    ["[0]" comonad
     ["[1]T" \\test]]]
   [test
    ["_" property (.only Test)]]]]
 ["/" \\library]
 ["!" \\theorem])

(the injection
  (Injection /.Pure)
  (|>>))

(the comparison
  (Comparison /.Pure)
  (function (_ ==)
    ==))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Pure])
      (all _.and
           (_.by_proof [/.functor]
                       (list (_.model !.functor)))
           (_.for [/.monad]
                  (monadT.spec ..injection ..comparison /.monad))
           (_.for [/.comonad]
                  (comonadT.spec ..injection ..comparison /.comonad))
           )))
