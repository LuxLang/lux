(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" bit]
    ["[0]" text (.only)
     ["%" \\injection]]]
   [math
    ["[0]" random]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(/.the .public injection
  [a]
  (-> a Text)

  (/.method injection
    [Bit]
    bit.as_text)

  (/.method (injection it)
    [Nat]
    (%.nat it))
  )

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [bit random.bit
         nat random.nat])
      (all _.and
           (_.coverage [/.the /.method]
             (and (text.= (bit.as_text bit)
                          (injection bit))
                  (text.= (%.nat nat)
                          (injection nat))))
           )))
