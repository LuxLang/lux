(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [control
    ["[0]" scope (.use "[1]#[0]" monad)]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" natural]]]
   [test
    ["_" property (.only Test)]]]]
 [\\library
  ["[0]" /]])

(the (twice it)
  (-> Natural
      Natural)
  (n.+ it it))

(the (thrice it)
  (-> Natural
      Natural)
  (all n.+ it it it))

(/.the .private (method input)
  (/.Method Natural
            Natural)
  (scope#in (twice input)))

(the .public test
  Test
  (<| (_.covering /._)
      (do [! random.monad]
        [expected random.natural])
      (_.for [/.Method /.Value])
      (all _.and
           (_.coverage [/.the /.value]
             (/.value (do scope.monad
                        [actual (method expected)]
                        (in (n.= (twice expected)
                                 actual)))))
           (_.coverage [/.let]
             (/.value (do scope.monad
                        [/.let [..method (function (_ next method it)
                                           (do scope.monad
                                             [it (next it)]
                                             (in (thrice it))))]
                         actual (method expected)]
                        (in (n.= (thrice (twice expected))
                                 actual)))))
           )))
