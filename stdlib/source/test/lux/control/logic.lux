... https://en.wikipedia.org/wiki/Zebra_Puzzle
(every (Domain it)
  (-> (/.Term it)
      (/.Logic Any)))

(the (one_of values)
  (for_any (_ it)
    (-> (List it)
        (/.Logic it)))
  (function (_ context)
    (list:each (function (_ it)
                 [context it])
               values)))

(the (domain [head tail])
  (for_any (_ it)
    (-> [(/.Term it) (List (/.Term it))]
        (Domain it)))
  (function (_ it)
    (monad.let /.monad
      [reference (one_of (list:composite (list head) tail))]
      (/.= reference it))))

(every Color
  Text)

(template.with [<name>]
  [(the <name>
     (/.Term Color)
     (/.constant /.text (template.text [<name>])))]

  [[yellow]
   [blue]
   [red]
   [ivory]
   [green]])

(the color
  (Domain Color)
  (domain [..yellow
           (list ..blue
                 ..red
