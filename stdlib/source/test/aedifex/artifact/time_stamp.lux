(.module:
  [lux #*
   ["_" test (#+ Test)]
   [abstract
    [monad (#+ do)]]
   [control
    ["." try ("#\." functor)]
    [parser
     ["<.>" text]]]
   [math
    ["." random (#+ Random)]
    [number
     ["n" nat]
     ["i" int]]]
   [time
    ["." instant]]]
  {#program
   ["." /]})

(def: #export test
  Test
  (<| (_.covering /._)
      (_.for [/.Time_Stamp])
      ($_ _.and
          (do random.monad
            [expected random.instant]
            (_.cover [/.format /.parser]
                     (|> expected
                         /.format
                         (<text>.run /.parser)
                         (try\map (\ instant.equivalence = expected))
                         (try.default false))))
          )))
