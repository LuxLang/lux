(.module:
  [library
   [lux #*
    ["_" test (#+ Test)]
    [abstract
     [monad (#+ do)]
     [\\specification
      ["$." equivalence]]]
    [control
     ["." try ("#\." functor)]
     [parser
      ["<.>" text]]]
    [math
     ["." random (#+ Random)]
     [number
      ["i" int]]]]]
  [\\program
   ["." /]]
  ["." / #_
   ["#." date]
   ["#." time]])

(def: #export random
  (Random /.Time)
  (do random.monad
    [date /date.random
     time /time.random]
    (wrap [date time])))

(def: #export test
  Test
  (<| (_.covering /._)
      (_.for [/.Time])
      ($_ _.and
          (_.for [/.equivalence]
                 ($equivalence.spec /.equivalence ..random))

          (do random.monad
            [expected ..random]
            (_.cover [/.format /.parser]
                     (|> expected
                         /.format
                         (<text>.run /.parser)
                         (try\map (\ /.equivalence = expected))
                         (try.default false))))

          /date.test
          /time.test
          )))
