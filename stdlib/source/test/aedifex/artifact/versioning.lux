(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" monad]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [error
    ["[0]" try (.use "[1]#[0]" functor)]]
   [data
    [format
     ["[0]" xml
      ["<[1]>" \\projection]]]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\program
  ["[0]" /]]
 ["$[0]" //
  ["[1][0]" time]
  ["[1][0]" snapshot (.only)
   ["[1]/[0]" version]]])

(the .public random
  (Random /.Versioning)
  (all random.and
       $//snapshot.random
       $//time.random
       (random.list 5 $//snapshot/version.random)
       ))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Versioning
              /.#snapshot /.#last_updated /.#versions])
      (all _.and
           (_.for [/.equivalence]
                  (equivalenceT.spec /.equivalence ..random))
           
           (monad.let random.monad
             [expected ..random]
             (_.coverage [/.as_xml /.of_xml]
               (|> /.of_xml
                   (<xml>.value (list (/.as_xml expected)))
                   (try#each (by /.equivalence = expected))
                   (try.else false))))
           (_.coverage [/.init]
             (|> /.of_xml
                 (<xml>.value (list (/.as_xml /.init)))
                 (try#each (by /.equivalence = /.init))
                 (try.else false)))
           )))
