(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [error
    ["[0]" try (.use "[1]#[0]" functor)]]
   [data
    [format
     ["[0]" xml
      ["<[1]>" \\projection]]]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\program
  ["[0]" /]])

(the .public random
  (Random /.Build)
  random.natural)

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Build]
             (all _.and
                  (_.for [/.equivalence]
                         (equivalenceT.spec /.equivalence ..random))
                  
                  (do random.monad
                    [expected ..random]
                    (_.coverage [/.as_xml /.of_xml]
                      (|> expected
                          /.as_xml
                          stack
                          (<xml>.value /.of_xml)
                          (try#each (by /.equivalence = expected))
                          (try.else false))))
                  ))))
