(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [control
    ["[0]" try (.use "[1]#[0]" functor)]]
   [data
    [format
     ["[0]" xml
      ["<[1]>" \\parser]]]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\program
  ["[0]" /]])

(def .public random
  (Random /.Build)
  random.nat)

(def .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Build]
             (all _.and
                  (_.for [/.equivalence]
                         (equivalenceT.spec /.equivalence ..random))
                  
                  (do random.monad
                    [expected ..random]
                    (_.coverage [/.format /.parser]
                      (|> expected
                          /.format
                          list
                          (<xml>.result /.parser)
                          (try#each (of /.equivalence = expected))
                          (try.else false))))
                  ))))
