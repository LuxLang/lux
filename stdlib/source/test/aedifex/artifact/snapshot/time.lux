(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]
    ["[0]" equivalence
     ["[1]T" \\test]]]
   [control
    ["[0]" try (.use "[1]#[0]" functor)]]
   [data
    ["[0]" text
     ["<[1]>" \\projection]]]
   [math
    ["[0]" random (.only Random)]]
   [test
    ["_" property (.only Test)]]]]
 [\\program
  ["[0]" /]]
 ["$[0]" ///
  ["[1][0]" time]])

(the .public random
  (Random /.Time)
  $///time.random)

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Time])
      (all _.and
           (_.for [/.equivalence]
                  (equivalenceT.spec /.equivalence ..random))

           (do random.monad
             [expected ..random]
             (all _.and
                  (_.coverage [/.as_text /.of_xml]
                    (|> expected
                        /.as_text
                        (<text>.value /.of_xml)
                        (try#each (by /.equivalence = expected))
                        (try.else false)))
                  ))
           )))
