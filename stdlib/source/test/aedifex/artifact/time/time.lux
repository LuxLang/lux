(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [control
    ["[0]" try (.use "[1]#[0]" functor)]]
   [data
    ["[0]" text
     ["<[1]>" \\parser]]]
   [math
    ["[0]" random (.only Random)]
    [number
     ["n" nat]
     ["i" int]]]
   [world
    ["[0]" time]]
   [test
    ["_" property (.only Test)]]]]
 [\\program
  ["[0]" /]])

(the .public random
  (Random /.Time)
  (random.one (|>> time.clock
                   (has time.#milli_second 0)
                   time.time)
              random.time))

(the .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Time])
      (all _.and
           (do random.monad
             [expected ..random]
             (_.coverage [/.format /.parser]
               (|> expected
                   /.format
                   (<text>.value /.parser)
                   (try#each (of time.equivalence = expected))
                   (try.else false))))
           )))
