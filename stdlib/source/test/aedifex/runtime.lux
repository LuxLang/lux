(.module:
  [lux #*
   ["_" test (#+ Test)]
   [abstract
    [monad (#+ do)]]
   [data
    ["." text]]
   [math
    ["." random]]]
  {#program
   ["." /]})

(def: #export test
  Test
  (<| (_.covering /._)
      (do random.monad
        [path (random.ascii/alpha 5)]
        (`` ($_ _.and
                (~~ (template [<command>]
                      [(_.cover [<command>]
                                (let [command (<command> path)]
                                  (and (text.starts-with? (<command> "") command)
                                       (text.ends-with? path command))))]

                      [/.java]
                      [/.node]
                      ))
                )))))
