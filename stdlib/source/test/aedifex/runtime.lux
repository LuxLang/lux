(.module:
  [lux #*
   ["_" test (#+ Test)]
   [abstract
    [monad (#+ do)]]
   [data
    ["." text]]
   [math
    ["." random]]]
  [\\program
   ["." /]])

(def: #export test
  Test
  (<| (_.covering /._)
      (do random.monad
        [path (random.ascii/alpha 5)]
        (`` ($_ _.and
                (~~ (template [<command>]
                      [(_.cover [<command>]
                                (let [command (text.join_with " " (#.Cons (<command> path)))
                                      pure_command (text.join_with " " (#.Cons (<command> "")))]
                                  (and (text.starts_with? pure_command command)
                                       (text.ends_with? path command))))]

                      [/.java]
                      [/.node]
                      ))
                )))))
