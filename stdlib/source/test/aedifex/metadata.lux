(.module:
  [lux #*
   ["_" test (#+ Test)]
   [abstract
    [monad (#+ do)]]
   [data
    ["." text]]
   [math
    ["." random]]]
  ["." / #_
   ["#." artifact]
   ["#." snapshot]
   [//
    ["@." artifact]]]
  {#program
   ["." /]})

(def: #export test
  Test
  (<| (_.covering /._)
      ($_ _.and
          (<| (_.for [/.file])
              (do random.monad
                [sample @artifact.random]
                ($_ _.and
                    (_.cover [/.project]
                             (text.ends_with? /.file (/.project sample)))
                    (_.cover [/.version]
                             (text.ends_with? /.file (/.version sample)))
                    )))

          /artifact.test
          /snapshot.test
          )))
