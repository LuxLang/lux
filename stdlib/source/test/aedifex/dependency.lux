(.module:
  [library
   [lux "*"
    ["_" test {"+" [Test]}]
    [abstract
     [monad {"+" [do]}]
     [\\specification
      ["$." equivalence]
      ["$." order]
      ["$." hash]]]
    [math
     ["." random {"+" [Random]}]]]]
  [//
   ["@." artifact]]
  [\\program
   ["." /]])

(def: .public random
  (Random /.Dependency)
  ($_ random.and
      @artifact.random
      (random.ascii/alpha 1)))

(def: .public test
  Test
  (<| (_.covering /._)
      (_.for [/.Dependency]
             ($_ _.and
                 (_.for [/.equivalence]
                        ($equivalence.spec /.equivalence ..random))
                 (_.for [/.order]
                        ($order.spec /.order ..random))
                 (_.for [/.hash]
                        ($hash.spec /.hash ..random))
                 ))))
