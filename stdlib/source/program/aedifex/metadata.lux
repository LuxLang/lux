(.module:
  [library
   [lux #*
    [data
     ["." text
      ["%" format (#+ format)]]]
    [world
     [file (#+ Path)]
     [net
      ["." uri (#+ URI)]]]]]
  ["." // #_
   ["#." artifact (#+ Artifact)]])

(def: remote_file
  Path
  "maven-metadata.xml")

(def: .public (remote_artifact_uri artifact)
  (-> Artifact URI)
  (let [/ uri.separator]
    (format (//artifact.directory / (get@ #//artifact.group artifact))
            / (get@ #//artifact.name artifact)
            / (get@ #//artifact.version artifact)
            / ..remote_file)))

(def: .public (remote_project_uri artifact)
  (-> Artifact URI)
  (let [/ uri.separator]
    (format (//artifact.directory / (get@ #//artifact.group artifact))
            / (get@ #//artifact.name artifact)
            / ..remote_file)))

(def: local_file
  Path
  "maven-metadata-local.xml")

(def: .public (local_uri remote_uri)
  (-> URI URI)
  (text.replaced/1 ..remote_file ..local_file remote_uri))

(def: .public (remote_uri local_uri)
  (-> URI URI)
  (text.replaced/1 ..local_file ..remote_file local_uri))
