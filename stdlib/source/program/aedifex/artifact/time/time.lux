(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [control
    ["<>" projection (.only)]]
   [data
    ["[0]" text
     ["%" \\format]
     ["<[1]>" \\projection (.only Projection)]]]
   [math
    [number
     ["n" nat]]]
   [world
    ["[0]" time]]]]
 ["[0]" //
  ["[1]" date]])

(every .public Time
  time.Time)

(the .public (format value)
  (%.Format Time)
  (let [(open "_[0]") (time.clock value)]
    (%.format (//.pad _#hour)
              (//.pad _#minute)
              (//.pad _#second))))

(the .public projection
  (<text>.Projection Time)
  (do <>.monad
    [hour (<>.codec n.decimal (<text>.exactly 2 <text>.decimal))
     minute (<>.codec n.decimal (<text>.exactly 2 <text>.decimal))
     second (<>.codec n.decimal (<text>.exactly 2 <text>.decimal))]
    (<>.of_try (time.time
                [time.#hour hour
                 time.#minute minute
                 time.#second second
                 time.#milli_second 0]))))
