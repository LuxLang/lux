(.module:
  [library
   [lux "*"
    [abstract
     [equivalence {"+" [Equivalence]}]
     [monad {"+" [do]}]]
    [control
     ["<>" parser
      ["<[0]>" xml {"+" [Parser]}]
      ["<[0]>" text]]]
    [data
     [text
      ["%" format]]
     [format
      ["[0]" xml {"+" [XML]}]]]
    [math
     [number
      ["[0]" nat]]]]])

(type: .public Build
  Nat)

(def: .public equivalence
  (Equivalence Build)
  nat.equivalence)

(def: tag
  xml.Tag
  ["" "buildNumber"])

(def: .public format
  (-> Build XML)
  (|>> %.nat
       #xml.Text
       list
       {#xml.Node ..tag xml.attributes}))

(def: .public parser
  (Parser Build)
  (<| (<xml>.node ..tag)
      (<text>.then (<>.codec nat.decimal (<text>.many <text>.decimal)))
      <xml>.text))
