(.require
 [library
  [lux (.except)
   [abstract
    [equivalence (.only Equivalence)]
    [monad (.only do)]]
   [control
    ["<>" projection]]
   [data
    ["[0]" text
     ["%" \\injection]
     ["<[1]>" \\projection]]
    [format
     ["[0]" xml (.only XML)
      ["<[1]>" \\projection (.only Projection)]]]]
   [math
    [number
     ["[0]" nat]]]]])

(every .public Build
  Nat)

(the .public equivalence
  (Equivalence Build)
  nat.equivalence)

(the tag
  xml.Tag
  ["" "buildNumber"])

(the .public injection
  (-> Build XML)
  (|>> %.nat
       {xml.#Text}
       list
       {xml.#Node ..tag xml.attributes}))

(the .public projection
  (Projection Build)
  (<| (<xml>.node ..tag)
      (<text>.then (<>.format nat.decimal (<text>.many <text>.decimal)))
      <xml>.text))
