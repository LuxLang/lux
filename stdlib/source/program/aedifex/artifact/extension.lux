(.module:
  [lux #*
   [data
    [text
     ["%" format (#+ format)]]]
   [macro
    ["." template]]]
  ["." // #_
   ["#" type]])

(type: #export Extension
  Text)

(def: separator
  ".")

(def: #export extension
  (-> //.Type Extension)
  (|>> (format ..separator)))

(template [<name>]
  [(def: #export <name>
     Extension
     (..extension (template.identifier [//._] [<name>])))]

  [lux-library]
  [jvm-library]
  [pom]
  [sha1]
  [md5]
  )
