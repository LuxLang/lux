(.module:
  [library
   [lux (#- type)
    [data
     ["." text
      ["%" format (#+ format)]]]
    [macro
     ["." template]]]]
  ["." // #_
   ["#" type]])

(type: .public Extension
  Text)

(def: separator
  ".")

(def: .public extension
  (-> //.Type Extension)
  (|>> (format ..separator)))

(def: .public type
  (-> Extension //.Type)
  (text.replace_all ..separator ""))

(template [<name>]
  [(def: .public <name>
     Extension
     (..extension (template.identifier [//._] [<name>])))]

  [lux_library]
  [jvm_library]
  [pom]
  [sha-1]
  [md5]
  )
