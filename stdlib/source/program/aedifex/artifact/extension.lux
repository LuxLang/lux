(.require
 [library
  [lux (.except type)
   [data
    ["[0]" text (.only)
     ["%" \\format (.only format)]]]
   [macro
    ["[0]" template]]]]
 ["[0]" //
  ["[1]" type]])

(.type .public Extension
  Text)

(def separator
  ".")

(def .public extension
  (-> //.Type Extension)
  (|>> (format ..separator)))

(def .public type
  (-> Extension //.Type)
  (text.replaced ..separator ""))

(with_template [<name>]
  [(def .public <name>
     Extension
     (..extension (template.symbol [//._] [<name>])))]

  [lux_library]
  [jvm_library]
  [js_library]
  [pom]
  [sha-1]
  [md5]
  )
