(.module:
  [lux #*
   [data
    [text
     ["%" format (#+ format)]]]]
  ["." // #_
   ["#" type]])

(type: #export Extension
  Text)

(def: separator
  ".")

(def: #export extension
  (-> //.Type Extension)
  (|>> (format ..separator)))

(def: #export lux-library
  Extension
  (..extension //.lux-library))

(def: #export jvm-library
  Extension
  (..extension //.jvm-library))

(def: #export pom
  Extension
  (..extension //.pom))

(def: #export sha1
  Extension
  (format ..separator "sha1"))

(def: #export md5
  Extension
  (format ..separator "md5"))
