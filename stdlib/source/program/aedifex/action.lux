(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only Monad)]]
   [concurrency
    ["[0]" future (.only Future)]]
   [error
    ["[0]" try (.only Try)]]]])

(every .public (Action of)
  (Future (Try of)))

(the .public monad
  (Monad Action)
  (as_expected (try.with future.monad)))
