(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only Monad)]]
   [control
    ["[0]" try (.only Try)]
    [concurrency
     ["[0]" async (.only Async)]]]]])

(every .public (Action a)
  (Async (Try a)))

(the .public monad
  (Monad Action)
  (as_expected (try.with async.monad)))
