(template [<jvm> <class> <descriptor>]
  [(def: <class> <jvm>)
   (def: <descriptor> (type.signature (type.class <jvm> (list))))]

  ["java.lang.String" string-class string-descriptor]
  [box.boolean boolean-box-class boolean-box-descriptor]
