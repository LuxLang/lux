(.module:
  [lux #*
   [control
    ["<>" parser ("#\." monad)
     ["<.>" code (#+ Parser)]]]])

(def: token
  (' #export))

(def: #export (format exported?)
  (-> Bit (List Code))
  (if exported?
    (list ..token)
    (list)))

(def: #export parser
  (Parser Bit)
  (<>.either (<>.after (<code>.this! ..token)
                       (<>\wrap true))
             (<>\wrap false)))
