(.module:
  {#.doc "Commons syntax writers."}
  [lux #*
   [control
    ["." function]]
   [data
    [collection
     ["." list ("#\." functor)]]
    ["." product]]
   [macro
    ["." code]]]
  ["." //])

(def: #export (typed_input value)
  (-> //.Typed_Input Code)
  (code.record (list [(get@ #//.input_binding value)
                      (get@ #//.input_type value)])))

(def: #export type_variables
  (-> (List //.Type_Var) (List Code))
  (list\map code.local_identifier))
