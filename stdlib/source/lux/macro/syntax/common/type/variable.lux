(.module:
  [lux #*
   [abstract
    [equivalence (#+ Equivalence)]]
   [control
    [parser
     ["<.>" code (#+ Parser)]]]
   [data
    ["." text]]
   [macro
    ["." code]]])

(type: #export Variable
  Text)

(def: #export equivalence
  (Equivalence Variable)
  text.equivalence)

(def: #export format
  (-> Variable Code)
  code.local_identifier)

(def: #export parser
  {#.doc "Parser for the common type variable/parameter used by many macros."}
  (Parser Variable)
  <code>.local_identifier)
