(;module: {#;doc "Functionality for working with tuples (particularly 2-tuples)."}
  lux)

## [Functions]
(do-template [<name> <type> <output>]
  [(def: #export (<name> xy)
     (All [a b] (-> [a b] <type>))
     (let [[x y] xy]
       <output>))]

  [left  a x]
  [right b y])

(def: #export (curry f)
  (All [a b c]
    (-> (-> [a b] c)
        (-> a b c)))
  (function [x y]
    (f [x y])))

(def: #export (uncurry f)
  (All [a b c]
    (-> (-> a b c) (-> [a b] c)))
  (function [xy]
    (let [[x y] xy]
      (f x y))))

(def: #export (swap xy)
  (All [a b] (-> [a b] [b a]))
  (let [[x y] xy]
    [y x]))

(def: #export (both f g)
  (All [a b c d]
    (-> (-> a c) (-> b d)
        (-> [a b] [c d])))
  (function [[x y]]
    [(f x) (g y)]))
