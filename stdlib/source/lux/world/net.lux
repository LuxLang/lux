(.module:
  [lux (#- Location)
   [control
    [try (#+ Try)]
    [security
     ["!" capability (#+ capability:)]]]])

(type: #export Address Text)

(type: #export Port Nat)

(type: #export URL Text)

(type: #export Location
  {#address Address
   #port Port})

(capability: #export (Can-Read ! o)
  (can-read Nat (! (Try o))))

(capability: #export (Can-Write ! i)
  (can-write i (! (Try Any))))

(capability: #export (Can-Close !)
  (can-close [] (! (Try Any))))
