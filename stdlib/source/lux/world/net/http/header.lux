(.module:
  [lux #*
   [data
    [text
     format]
    [collection
     ["." dictionary (#+ Dictionary)]]]]
  [// (#+ Header)
   ["." mime (#+ MIME)]
   [// (#+ URL)]])

(def: #export content-length
  (-> Nat Header)
  (|>> %n (dictionary.put "Content-Length")))

(def: #export content-type
  (-> MIME Header)
  (|>> mime.name (dictionary.put "Content-Type")))

(def: #export location
  (-> URL Header)
  (dictionary.put "Location"))
