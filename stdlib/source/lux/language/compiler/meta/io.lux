(.module:
  [lux (#- Module)]
  (lux (control monad
                ["ex" exception (#+ exception:)])
       (data [error]
             [text]
             (text format
                   [encoding]))
       (world [file (#+ File System)]
              [blob (#+ Blob)])))

(type: #export Context File)

(type: #export Module Text)

(def: #export (sanitize system)
  (All [m] (-> (System m) Text Text))
  (text.replace-all "/" (:: system separator)))
