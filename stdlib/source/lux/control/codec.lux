(;module:
  lux
  (lux control/monad
       data/error))

## [Signatures]
(sig: #export (Codec m a)
  (: (-> a m)
     encode)
  (: (-> m (Error a))
     decode))

## [Values]
(def: #export (<.> (^open "bc:") (^open "ab:"))
  (All [a b c] (-> (Codec c b) (Codec b a) (Codec c a)))
  (struct
    (def: encode (|>. ab:encode bc:encode))

    (def: (decode cy)
      (do Monad<Error>
        [by (bc:decode cy)]
        (ab:decode by)))
    ))
