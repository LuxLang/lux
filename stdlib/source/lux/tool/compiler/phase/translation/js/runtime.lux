(runtime: (text//index text part start)
  (with-vars [idx]
    ($_ _.then
        (_.define idx (|> text (_.do "indexOf" (list part (i64//to-number start)))))
        (_.if (_.= (_.i32 -1) idx)
          (_.return ..none)
          (_.return (..some (i64//from-number idx)))))))

(runtime: (text//clip text start end)
