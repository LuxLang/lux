    (_.if (_.or (out-of-bounds? start)
                (out-of-bounds? end))
      (_.return ..none)
      (_.return (..some (|> text (_.do "substring" (list (_.the ..i64-low-field start)
                                                         (_.the ..i64-low-field end)))))))))

