(.module:
  [lux (#- Code)
   [data
    ["." text]]
   [world
    [file (#+ Path System)]]])

(type: #export Context Path)

(type: #export Code Text)

(def: #export (sanitize system)
  (All [m] (-> (System m) Text Text))
  (text.replace-all "/" (:: system separator)))

(def: #export lux-context "lux")
