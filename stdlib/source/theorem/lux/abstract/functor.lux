(.using
 [library
  [lux (.except)
   ["_" theorem (.only)
    ["?" proposition]
    ["in" substitution]
    ["by" rule]]
   ["[0]" function]]]
 ["/" \\library])

... https://en.wikipedia.org/wiki/Functor_(functional_programming)
(the .public identity
  ?.Axiom
  (?.for [any_context]
         [/:each (/.Functor any_context)]
         (?.= (/:each function.identity)
              function.identity)))

(the .public composition
  ?.Axiom
  (?.for [any_context]
         [/:each (/.Functor any_context)]
         (?.let [any_premise any_lemma any_conclusion]
           [before (-> any_premise any_lemma)
            after (-> any_lemma any_conclusion)]
           (?.= (function.composite (/:each after) (/:each before))
                (/:each (function.composite after before))))))

(the .public system
  ?.System
  (?.for [any_context]
         [/:each (/.Functor any_context)]
         (?.system (list (..identity (list any_context) (list /:each))
                         (..composition (list any_context) (list /:each))))))
