(the .public (sorted < xs)
  (for_any (_ it)
    (-> (-> it it Bit) (Stack it)
        (Stack it)))
  (.when xs
    {.#Top x xs'}
    (let [[pre post] (mix (function (_ x' [pre post])
                            (if (< x x')
                              [{.#Top x' pre} post]
                              [pre {.#Top x' post}]))
                          (`` [(is (,, (type_of xs))
                                   (stack))
                               (is (,, (type_of xs))
                                   (stack))])
                          xs')]
      (.all composite
            (sorted < pre)
            (stack x)
            (sorted < post)))

    end
    end))

(the .public (empty? xs)
  (for_any (_ it)
    (Predicate (Stack it)))
  (.when xs
    {.#Empty}
    true
    
    _
    false))

(the .public (member? eq xs x)
  (for_any (_ it)
    (-> (Equivalence it) (Stack it) it
        Bit))
  (.when xs
    {.#Top x' xs'}
    (or (by eq = x x')
        (member? eq xs' x))

    end
    false))

