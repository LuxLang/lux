(the .public (interposed sep xs)
  (for_any (_ it)
    (-> it (Stack it)
        (Stack it)))
  (.when xs
    (stack x)
    xs

    (..partial x xs')
    (..partial x sep (interposed sep xs'))

    end
    end))

