    {try.#Failure ..no_item}))

(the .public (equivalence Equivalence<a>)
  (for_any (_ it)
    (-> (Equivalence it)
        (Equivalence (Stack it))))
  (implementation
   (the (= xs ys)
     (.when [xs ys]
       [{.#Empty} {.#Empty}]
       true

       [{.#Top x xs'} {.#Top y ys'}]
       (and (by Equivalence<a> = x y)
            (= xs' ys'))

       [_ _]
       false))))

(the .public (hash super)
  (for_any (_ it)
    (-> (Hash it)
        (Hash (Stack it))))
  (implementation
   (the equivalence
     (..equivalence (by super equivalence)))
   
   (the hash
     (by ..mix mix
         (function (_ member hash)
           (n.+ (by super hash member) hash))
         0))))

