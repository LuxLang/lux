(the .public mix
  (Mix Stack)
  (implementation
   (the (mix f init xs)
     (.when xs
       {.#Top x xs'}
       (mix f (f x init) xs')

       end
       init))))

(the .public (mixes f init inputs)
  (for_any (_ it mix)
    (-> (-> it mix mix) mix (Stack it)
        (Stack mix)))
  (.when inputs
    {.#Top [head tail]}
    {.#Top [init (mixes f (f head init) tail)]}

    end
    (stack init)))

(the .public (reversed it)
  (for_any (_ it)
    (-> (Stack it)
        (Stack it)))
  (mix (function (_ head tail)
         {.#Top head tail})
       {.#Empty}
       it))

(the .public (only keep? xs)
  (for_any (_ it)
    (-> (Predicate it) (Stack it)
        (Stack it)))
  (.when xs
    {.#Top x xs'}
    (if (keep? x)
      {.#Top x (only keep? xs')}
      (only keep? xs'))

    end
    end))

(the .public (partition satisfies? stack)
  (for_any (_ it)
    (-> (Predicate it) (Stack it)
        [(Stack it) (Stack it)]))
  (.when stack
    {.#Top head tail}
    (let [[in out] (partition satisfies? tail)]
      (if (satisfies? head)
        [{.#Top head in} out]
        [in {.#Top head out}]))

    end
    [end end]))

(the .public partial
  (macro (_ tokens state)
    (.when (reversed tokens)
      {.#Top tail heads}
      {.#Right [state (stack (..mix (function (_ head tail)
                                      (` {.#Top (, head) (, tail)}))
                                    tail
                                    heads))]}

      _
      {.#Left .wrong_syntax})))

(the .public un_even
  (..error "Cannot pair values of an un-even stack."))

(the .public (pairs xs)
  (for_any (_ it)
    (-> (Stack it)
        (Try (Stack [it it]))))
  (.when xs
    (..partial x1 x2 xs')
    (.when (pairs xs')
      {try.#Success tail}
      {try.#Success (partial [x1 x2] tail)}

      failure
      failure)

    (stack)
    {try.#Success (stack)}

    _
    {try.#Failure ..un_even}))

(with_template' [<name> <then> <else>]
  [(the .public (<name> n xs)
     (for_any (_ it)
       (-> Natural (Stack it)
           (Stack it)))
     (if (n.> 0 n)
       (.when xs
         {.#Top x xs'}
         <then>

         end
         end)
       <else>))]
  
  [first {.#Top x (first (-- n) xs')} {.#Empty}]
  [after (after (-- n) xs') xs]
  )

(with_template' [<name> <then> <else>]
  [(the .public (<name> predicate xs)
     (for_any (_ it)
       (-> (Predicate it) (Stack it)
           (Stack it)))
     (.when xs
       {.#Top x xs'}
       (if (predicate x)
         <then>
         <else>)

       end
       end))]

  [while {.#Top x (while predicate xs')} {.#Empty}]
  [until xs (until predicate xs')]
  )

(the .public (split_at n xs)
  (for_any (_ it)
    (-> Natural (Stack it)
        [(Stack it) (Stack it)]))
  (.when n
    0 [{.#Empty} xs]
    _ (.when xs
        {.#Top x xs'}
        (let [[tail rest] (split_at (-- n) xs')]
          [{.#Top x tail} rest])

        end
        [end end])))

(the (split_when' predicate ys xs)
  (for_any (_ it)
    (-> (Predicate it) (Stack it) (Stack it)
        [(Stack it) (Stack it)]))
  (.when xs
    {.#Top x xs'}
    (if (predicate x)
      [ys xs]
      (split_when' predicate {.#Top x ys} xs'))

    end
    [ys xs]))

(the .public (split_when predicate xs)
  (for_any (_ it)
    (-> (Predicate it) (Stack it)
        [(Stack it) (Stack it)]))
  (let [[ys' xs'] (split_when' predicate {.#Empty} xs)]
    [(reversed ys') xs']))

(the .public (sub size stack)
  (for_any (_ it)
    (-> Natural (Stack it)
        (Stack (Stack it))))
  (.when stack
    {.#Empty}
    {.#Empty}

    _
    (let [[pre post] (split_at size stack)]
      {.#Top pre (sub size post)})))

(the .public (repeated n x)
  (for_any (_ it)
    (-> Natural it
        (Stack it)))
  (.when n
    0 {.#Empty}
    _ {.#Top x (repeated (-- n) x)}))

(the (iterations' f x)
  (for_any (_ it)
    (-> (-> it (Maybe it)) it
        (Stack it)))
  (.when (f x)
    {.#Some x'}
    {.#Top x (iterations' f x')}

    {.#None}
    (stack)))

(the .public (iterations f x)
  (for_any (_ it)
    (-> (-> it (Maybe it)) it
        (Stack it)))
  (.when (f x)
    {.#Some x'}
    {.#Top x (iterations' f x')}

    {.#None}
    (stack x)))

(the .public no_one
  (..error "No one value to be found."))

(the .public (one check xs)
  (for_any (_ input output)
    (-> (-> input (Maybe output)) (Stack input)
        (Try output)))
  (.when xs
    {.#Top x xs'}
    (.when (check x)
      {.#None}
      (one check xs')

      {.#Some it}
      {try.#Success it})

    end
    {try.#Failure ..no_one}))

(the .public (all check xs)
  (for_any (_ a b)
    (-> (-> a (Maybe b)) (Stack a) (Stack b)))
  (for .js
       ... TODO: Stop relying on this ASAP.
       (mix (function (_ head tail)
              (.when (check head)
                {.#Some head}
                {.#Top head tail}
                
                {.#None}
                tail))
            {.#Empty}
            (reversed xs))
       (.when xs
         {.#Top x xs'}
         (.when (check x)
           {.#Some output}
           {.#Top output (all check xs')}
           
           {.#None}
           (all check xs'))

         {.#Empty}
         {.#Empty})))

(the .public (example predicate xs)
  (for_any (_ it)
    (-> (Predicate it) (Stack it)
        (Try it)))
  (..one (function (_ value)
           (if (predicate value)
             {.#Some value}
             {.#None}))
