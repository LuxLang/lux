(the .public (remove zipper)
  (All (_ a) (-> (Zipper a) (Maybe (Zipper a))))
  (do maybe.monad
    [family (its #family zipper)]
    (when (its #lefts family)
      {.#End}
      (in (has [#node //.#children]
               (its #rights family)
               (its #parent family)))

      {.#Item next side}
      (in (|> zipper
              (has #family (|> family
                               (has #lefts side)
                               {.#Some}))
              (has #node next))))))

(with_template [<name> <side>]
