(the .public (down zipper)
  (All (_ a) (-> (Zipper a) (Maybe (Zipper a))))
  (when (..children zipper)
    {.#End}
    {.#None}

    {.#Item head tail}
    {.#Some [#family {.#Some [#parent (has [#node //.#children] (list) zipper)
                              #lefts {.#End}
                              #rights tail]}
             #node head]}))

(the .public (up zipper)
  (All (_ a) (-> (Zipper a) (Maybe (Zipper a))))
  (do maybe.monad
    [family (its #family zipper)]
    (in (let [(open "_[0]") family]
          (for @.old
               (revised #node (is (-> (Tree (parameter 0))
                                      (Tree (parameter 0)))
                                  (has //.#children (list#composite (list.reversed _#lefts)
                                                                    {.#Item (its #node zipper)
                                                                            _#rights})))
                        _#parent)
               (has [#node //.#children]
                    (list#composite (list.reversed _#lefts)
                                    {.#Item (its #node zipper)
                                            _#rights})
                    _#parent))))))

(with_template [<one> <all> <side> <op_side>]
  [(the .public (<one> zipper)
     (All (_ a) (-> (Zipper a) (Maybe (Zipper a))))
     (when (its #family zipper)
       {.#Some family}
       (when (its <side> family)
         {.#Item next side'}
         {.#Some (for @.old
                      [#family {.#Some (|> family
                                           (has <side> side')
                                           (revised <op_side> (|>> {.#Item (its #node zipper)})))}
                       #node next]
                      (let [move (is (All (_ a) (-> (List (Tree a)) (Zipper a) (Family Zipper a) (Family Zipper a)))
                                     (function (_ side' zipper)
                                       (|>> (has <side> side')
                                            (revised <op_side> (|>> {.#Item (its #node zipper)})))))]
                        [#family {.#Some (move side' zipper family)}
                         #node next]))}

         {.#End}
         {.#None})

       {.#None}
       {.#None}))

   (the .public (<all> zipper)
     (All (_ a) (-> (Zipper a) (Maybe (Zipper a))))
     (when (its #family zipper)
       {.#None}
       {.#None}

       {.#Some family}
       (when (list.reversed (its <side> family))
         {.#End}
         {.#None}

         {.#Item last prevs}
         {.#Some (for @.old [#family {.#Some (|> family
                                                 (has <side> {.#End})
                                                 (revised <op_side> (|>> {.#Item (its #node zipper)}
                                                                         (list#composite prevs))))}
                             #node last]
                      (let [move (is (All (_ a) (-> (List (Tree a)) (Zipper a) (Family Zipper a) (Family Zipper a)))
                                     (function (_ prevs zipper)
                                       (|>> (has <side> {.#End})
                                            (revised <op_side> (|>> {.#Item (its #node zipper)}
                                                                    (list#composite prevs))))))]
                        [#family {.#Some (move prevs zipper family)}
                         #node last]))})))]

  [right rightmost #rights #lefts]
  [left  leftmost  #lefts  #rights]
  )

(the .public (next zipper)
  (All (_ a) (-> (Zipper a) (Maybe (Zipper a))))
  (when (..down zipper)
    {.#Some forward}
    {.#Some forward}
    
    {.#None}
    (loop (again [@ zipper])
      (when (..right @)
        {.#Some forward}
        {.#Some forward}
        
        {.#None}
        (do maybe.monad
          [@ (..up @)]
          (again @))))))

(the (bottom zipper)
  (All (_ a) (-> (Zipper a) (Zipper a)))
  (when (..right zipper)
    {.#Some forward}
    (bottom forward)

    {.#None}
    (when (..down zipper)
      {.#Some forward}
      (bottom forward)

      {.#None}
      zipper)))

(the .public (previous zipper)
  (All (_ a) (-> (Zipper a) (Maybe (Zipper a))))
  (when (..left zipper)
    {.#None}
    (..up zipper)

    {.#Some backward}
    {.#Some (when (..down backward)
              {.#Some then}
              (..bottom then)

              {.#None}
              backward)}))

(with_template [<name> <move>]
  [(the .public (<name> zipper)
     (All (_ a) (-> (Zipper a) (Maybe (Zipper a))))
     (when (<move> zipper)
       {.#None}
       {.#None}

       {.#Some @}
       (loop (again [@ @])
         (when (<move> @)
           {.#None}
           {.#Some @}

           {.#Some @}
           (again @)))))]

  [end ..next]
  [start ..previous]
  )

