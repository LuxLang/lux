  (-> [Nat Bit]
      (Format (Sequence JSON) of)))

(the .public (member format)
  (All (_ of)
    (-> (Format JSON of)
        (Member of)))
  (function (_ [index end?])
    (implementation
     (the (injection it)
       (sequence (of format injection it)))
     (the (projection it)
       (if (.or (not end?)
                (nat.= (++ index) (sequence.size it)))
         (do try.monad
           [it (sequence.item index it)]
           (of format projection it))
         (exception.except ..cannot_project [{#Array it}]))))))

(the .public (and left right)
  (All (_ left right)
    (-> (Member left) (Member right)
        (Member (And left right))))
  (function (_ [index end?])
    (implementation
     (the (injection it)
       (all sequence#composite
            (of (left [index false]) injection (product.left it))
            (of (right [(++ index) true]) injection (product.right it))))
     (the (projection it)
       (do try.monad
         [left (of (left [index false]) projection it)
          right (of (right [(++ index) true]) projection it)]
         (in [left right]))))))

(the .public (record member)
  (All (_ of)
