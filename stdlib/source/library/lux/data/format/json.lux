(the (null_injection _)
  (-> Null
      Text)
  "null")

(the boolean_injection
  (-> Boolean
      Text)
  (|>> (pipe.when
         .false
         "false"
         
         .true
         "true")))

(the number_injection
  (-> Number
      Text)
  (|>> (pipe.when
         +0.0 ... OR -0.0
         "0.0"

         value
         (let [raw (of dec.decimal injection value)]
           (if (dec.< +0.0 value)
             raw
             (|> raw (text.split_at 1) maybe.trusted product.right))))))

(the escape "\")
(the escaped_dq (text#composite ..escape text.double_quote))

(the string_injection
