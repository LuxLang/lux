(the .public (sum left right)
  (for_any (_ left right)
    (-> (Format JSON left) (Format JSON right)
        (Format JSON (Or left right))))
  (implementation
   (the (injection it)
     {#Array (sequence (when it
                         {#0 it}
                         (with left (injection it))
                         
                         {#1 it}
                         (with right (injection it))))})
   (the (projection it)
     (when it
       {#Array it'}
       (`` (when (sequence.list it')
             (,, (template.with [,flag ,format]
                   [(.list {#Boolean ,flag} it)
                    (try#each (|>> {,flag}) (with ,format (projection it)))]

                   [#0 left]
                   [#1 right]
                   ))

             _
             (exception.except ..cannot_project [it])))
       
       _
       (exception.except ..cannot_project [it])))))

(the .public (product left right)
  (for_any (_ left right)
    (-> (Format JSON left) (Format JSON right)
        (Format JSON (And left right))))
  (implementation
   (the (injection [itL itR])
     {#Array (sequence (with left (injection itL))
                       (with right (injection itR)))})
   (the (projection it)
     (when it
       {#Array it'}
       (when (sequence.list it')
         (.list itL itR)
         (do try.monad
           [itL (with left (projection itL))
            itR (with right (projection itR))]
           (in [itL itR]))

         _
         (exception.except ..cannot_project [it]))
       
       _
       (exception.except ..cannot_project [it])))))

(the .public (recursive context)
  (for_any (_ of)
    (-> (-> (Format JSON of)
            (Format JSON of))
        (Format JSON of)))
  (implementation
   (the (injection it)
     (with (context [injection
                     (function (_ _) {try.#Failure ""})])
       (injection it)))
   (the (projection it)
     (with (context [(|>> {#Null})
                     projection])
