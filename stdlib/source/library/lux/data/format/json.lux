(the .public (list item)
  (for_any (_ of)
    (-> (Format JSON of)
        (Format JSON (List of))))
  (implementation
   (the injection
     (|>> (list#each (with item injection))
          sequence.of_list
          {#Array}))
   (the (projection it)
     (when it
       {#Array it}
       (|> it
           sequence.list
           (monad.each try.monad (with item projection)))
       
       _
       (exception.except ..cannot_project [it])))))

(the .public (dictionary value)
  (for_any (_ of)
    (-> (Format JSON of)
        (Format JSON (Dictionary Text of))))
  (implementation
   (the injection
     (|>> (dictionary#each (of value injection))
          {#Object}))
   (the (projection it)
     (when it
       {#Object it}
       (|> it
           dictionary.entries
           (monad.each try.monad (function (_ [key it])
                                   (do try.monad
                                     [it (with value (projection it))]
                                     (in [key it]))))
           (try#each (dictionary.of_list text.hash)))
       
       _
       (exception.except ..cannot_project [it])))))

(every .public (Case of)
  (-> Nat
      (Format JSON of)))

(the .public (case format)
  (All (_ of)
    (-> (Format JSON of)
        (Case of)))
  (function (_ expected)
    (let [expected (nat.dec expected)]
      (implementation
       (the (injection it)
         {#Array (sequence {#Number expected}
                           (of format injection it))})
       (the (projection it)
         (when it
           {#Array case}
           (when (sequence.list case)
             (.list {#Number actual} case)
             (if (dec.= expected actual)
               (of format projection case)
               (exception.except ..cannot_project [it]))

             _
             (exception.except ..cannot_project [it]))
           
           _
           (exception.except ..cannot_project [it])))))))

(the .public (or left right)
  (All (_ left right)
    (-> (Case left) (Case right)
        (Case (Or left right))))
  (function (_ expected)
    (implementation
     (the (injection it)
       (when it
         {#0 it} (of (left expected) injection it)
         {#1 it} (of (right (++ expected)) injection it)))
     (the (projection it)
       (when (of (left expected) projection it)
         {try.#Success it}
         {try.#Success {#0 it}}
         
         {try.#Failure _}
         (when (of (right (++ expected)) projection it)
           {try.#Success it}
           {try.#Success {#1 it}}
           
           {try.#Failure error}
           {try.#Failure error}))))))

