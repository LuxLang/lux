(the space_projection
  (Projection Text)
  (<text>.some <text>.space))

(the value_separator_projection
  (Projection [Text Any Text])
  (all <>.and
       ..space_projection
       (<text>.this ..value_separator)
       ..space_projection))

(the null_projection
  (Projection Null)
  (do <>.monad
    [_ (<text>.this "null")]
    (in [])))

(template.with [<name> <token> <value>]
  [(the <name>
     (Projection Boolean)
     (do <>.monad
       [_ (<text>.this <token>)]
       (in <value>)))]

  [false_projection "false" #0]
  [true_projection  "true"  #1]
  )

(the boolean_projection
  (Projection Boolean)
  (all <>.either
       ..true_projection
       ..false_projection))

(the number_projection
  (Projection Number)
  (do [! <>.monad]
    [signed? (<>.parses? (<text>.this "-"))
     digits (<text>.many <text>.decimal)
     decimals (<>.else "0"
                       (do !
                         [_ (<text>.this ".")]
                         (<text>.many <text>.decimal)))
     exp (<>.else ""
                  (do !
                    [mark (<text>.one_of "eE")
                     signed?' (<>.parses? (<text>.this "-"))
                     offset (<text>.many <text>.decimal)]
                    (in (all text#composite mark (if signed?' "-" "") offset))))]
    (when (dec#projection (all text#composite (if signed? "-" "") digits "." decimals exp))
      {try.#Success value}
      (in value)

      {try.#Failure message}
      (<>.failure message))))

(the escaped_projection
  (Projection Text)
  (`` (all <>.either
           (,, (template.with [<when> <then>]
                 [(<>.after (<text>.this <when>)
                            (<>#in <then>))]

                 ["\t" text.tab]
                 ["\b" text.back_space]
                 ["\n" text.new_line]
                 ["\r" text.carriage_return]
                 ["\f" text.form_feed]
                 [(text#composite "\" text.double_quote) text.double_quote]
                 ["\\" "\"]
                 ))
           (<>.after (<text>.this "\u")
                     (|> <text>.hexadecimal!
                         (<text>.exactly! 4)
                         <text>.slice
                         (<>.format nat.hex)
                         (<>#each text.of_char)))
           )))

(the string_projection
  (Projection String)
  (<| (<text>.enclosed [text.double_quote text.double_quote])
      (loop (again [_ []]))
      (do [! <>.monad]
        [chars (<text>.some (<text>.none_of (text#composite "\" text.double_quote)))
         stop <text>.next])
      (if (text#= "\" stop)
        (do !
          [escaped escaped_projection
           next_chars (again [])]
          (in (all text#composite chars escaped next_chars)))
        (in chars))))

(the (kv_projection json_projection)
  (-> (Projection JSON)
      (Projection [String JSON]))
  (do <>.monad
    [key ..string_projection
     _ ..space_projection
     _ (<text>.this ..entry_separator)
     _ ..space_projection
     value json_projection]
    (in [key value])))

(template.with [<name> <type> <open> <close> <elem_projection> <prep>]
  [(the (<name> json_projection)
     (-> (Projection JSON)
         (Projection <type>))
     (do <>.monad
       [_ (<text>.this <open>)
        _ space_projection
        elems (<>.separated_by ..value_separator_projection <elem_projection>)
        _ space_projection
        _ (<text>.this <close>)]
       (in (<prep> elems))))]

  [array_projection  Array  ..array_start ..array_end json_projection sequence.of_list]
  [object_projection Object ..object_start ..object_end (kv_projection json_projection) (dictionary.of_list text.hash)]
  )

(the json_projection
  (Projection JSON)
  (<| (<>.after ..space_projection)
      (<>.before ..space_projection)
      (<>.rec
       (function (_ json_projection)
         (all <>.or
              null_projection
              boolean_projection
              number_projection
              string_projection
              (array_projection json_projection)
              (object_projection json_projection))))))

(the .public format
  (Format Text JSON)
  (implementation
   (the injection ..injection)
   (the projection (<text>.value json_projection))))

(exception.the (cannot_project [it])
  (Exception JSON)
  (exception.report
   (.list ["JSON" (with ..format
                    (injection it))])))

