(.using
 [library
  [lux (.except)
   [macro
    ["[0]" template]]]])

... https://developer.mozilla.org/en-US/docs/Web/HTML/Global_attributes/dir
(every .public Text_Direction
  Text)

(template.with [<name> <value>]
  [(the .public <name>
     Text_Direction
     <value>)]

  [left_to_right "ltr"]
  [right_to_left "rtl"]
  [automatic "auto"]
  )
