(.require
 [library
  [lux (.except Source)
   [data
    ["[0]" text (.only)
     ["%" \\injection]]]
   [meta
    [type
     ["[0]" nominal]]]
   [world
    [net (.only URL)]]]])

... https://developer.mozilla.org/en-US/docs/Learn/HTML/Multimedia_and_embedding/Responsive_images
(nominal.every .public Source
  Text

  (with_template [<suffix> <name> <type> <injection>]
    [(the .public (<name> parameter url)
       (-> <type> URL
           Source)
       (nominal.abstraction
        (%.message url " " (<injection> parameter) <suffix>)))]

    ["w" by_width Nat %.nat]
    ["x" by_density Dec %.dec]
    )

  (the .public source
    (-> Source
        Text)
    (|>> nominal.representation))
  )
