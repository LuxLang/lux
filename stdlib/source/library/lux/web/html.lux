  [lux (.except Tag Meta Source comment and template open parameter quote)
   [control
    ["[0]" function]
    ["[0]" maybe (.use "[1]#[0]" functor)]]
   [data
    ["[0]" product]
    ["[0]" text (.only)
     ["%" \\format (.only Format format)]]
    [collection
     ["[0]" list (.use "[1]#[0]" functor mix)]]
    [format
     ["[0]" xml (.only XML)]]]
   [meta
    [macro
     ["[0]" template]]
    [compiler
     [target
      ["[0]" js]]]
    [type
