      )

    (with_template [<name> <function>]
      [(the .public (<name> angle start next)
         (-> Angle Stop (List/1 [(Maybe Hint) Stop])
             (Value Image))
         (let [[now after] next]
           (..apply <function> (list.partial (nominal.representation Angle angle)
                                             (with_hint now)
                                             (list#each with_hint after)))))]

