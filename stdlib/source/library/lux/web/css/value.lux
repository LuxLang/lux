(the text_symbol
  (syntax (_ [symbol <code>.text])
    (in (list (code.local (text.replaced "-" "_" symbol))))))

(the enumeration
  (template (_ <abstraction> <representation> <out> <sample>+ <definition>+)
    [(nominal.every .public <abstraction>
       <representation>

       (the .public <out>
         (-> <abstraction> <representation>)
         (|>> nominal.representation))

       (`` (with_template [<name> <value>]
             [(the .public <name> <abstraction> (nominal.abstraction <value>))]

             (,, (template.spliced <sample>+))
             ))

       (template.spliced <definition>+))]))

(the (%number value)
  (Injection Dec)
  (let [raw (%.dec value)]
    (if (d.< +0.0 value)
      raw
      (|> raw (text.split_at 1) maybe.trusted product.right))))

(nominal.every .public (Value brand)
  Text

  (the .public value
    (-> (Value Any)
        Text)
    (|>> nominal.representation))

  (with_template [<name> <value>]
    [(the .public <name>
       Value
       (nominal.abstraction <value>))]

    [initial "initial"]
    [inherit "inherit"]
    [unset "unset"]
    )

  (nominal.every .public (Numeric kind) Any)

  (with_template [<name>]
    [(with_expansions [<name>' (template.symbol [<name> "'"])]
       (these (nominal.every .public <name>' Any)
              (every .public <name>
                (Numeric <name>'))))]

    [Number]
    [Length]
    [Time]
    [Percentage]
    )

  (with_template [<brand> <alias>+ <value>+]
    [(nominal.every .public <brand> Any)

     (`` (with_template [<name> <value>]
           [(the .public <name>
              (Value <brand>)
              (nominal.abstraction <value>))]
           
           (,, (template.spliced <alias>+))))

     (with_expansions [<rows> (template.spliced <value>+)]
       (with_template [<value>]
         [(`` (the .public (,, (..text_symbol <value>))
                (Value <brand>)
                (nominal.abstraction <value>)))]
         
         <rows>))]

