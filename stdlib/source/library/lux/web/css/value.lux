          Angle)
      (nominal.abstraction
       (%.message (%.rev value) "turn")))

    (the degree_limit
      Nat
      360)
    
    (the .public (degree value)
      (-> Nat
          Angle)
      (nominal.abstraction
       (%.message (%.nat (n.% ..degree_limit value)) "deg")))

    (with_template [<degree> <name>]
