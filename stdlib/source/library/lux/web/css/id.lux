(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" text (.use "[1]#[0]" hash)
     ["%" \\injection]]]
   [macro
    ["[0]" syntax]]
   [type
    ["[0]" nominal]]
   ["[0]" meta (.only)
    ["[0]" module]
    ["[0]" code]]]])

(nominal.every .public ID
  Text

  (the .public id
    (-> ID Text)
    (|>> nominal.reification))

  (the .public custom
    (-> Text ID)
    (|>> nominal.abstraction))

  (the .public generic
    (syntax.macro (_ [])
      (do meta.monad
        [[module _] module.current
         id meta.seed]
        (in (list (` (..custom (, (code.text (text "i" (%.natural_16 id)
                                                   "_" (%.natural_16 (text#hash module))))))))))))
  )
