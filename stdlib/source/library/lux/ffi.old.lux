    (#VariableField sm class)
    (with_parens
      (spaced (list "variable" name
                    (privacy_modifier$ pm)
                    (state_modifier$ sm)
                    (with_brackets (spaced (list\each annotation$ anns)))
                    (generic_type$ class))
