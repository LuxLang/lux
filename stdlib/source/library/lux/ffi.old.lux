    #FinalS    "final"
    #DefaultS  "default"))

(def: (field_decl$ [[name pm anns] field])
  (-> [Member_Declaration FieldDecl] JVM_Code)
  (case field
    (#ConstantField class value)
    (with_parens
      (spaced (list "constant" name
                    (with_brackets (spaced (list\each annotation$ anns)))
                    (generic_type$ class)
                    (code.format value))
