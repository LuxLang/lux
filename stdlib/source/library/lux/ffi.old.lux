  [(def .public <forward>
     (template (<forward> it)
       [(|> it (.is <from>) (.as (Primitive <mid>)) <$> (.is (Primitive <to>)))]))

   (def .public <backward>
     (template (<backward> it)
       [(|> it (.is (Primitive <to>)) <$'> (.is (Primitive <mid>)) (.as <from>))]))]

