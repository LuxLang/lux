(.module:
  [library
   [lux #*
    [control
     [try (#+ Try)]]
    [data
     [binary (#+ Binary)]
     [collection
      [dictionary (#+ Dictionary)]
      ["." row]
      ["." list ("#\." functor)]]]
    [world
     ["." file]]]]
  [//
   [cache
    ["." dependency]]
   ["." archive (#+ Archive)
    ["." descriptor]
    ["." artifact]]
   [//
    [language
     [lux
      [generation (#+ Context)]]]]])

(type: #export Packager
  (-> (Dictionary file.Path Binary)
      Archive
      Context
      (Try Binary)))

(type: #export Order
  (List [archive.ID (List artifact.ID)]))

(def: #export order
  (-> dependency.Order Order)
  (list\map (function (_ [module [module_id [descriptor document]]])
              (|> descriptor
                  (get@ #descriptor.registry)
                  artifact.artifacts
                  row.to_list
                  (list\map (|>> (get@ #artifact.id)))
                  [module_id]))))
