(.using
 [library
  [lux (.except Code)
   [data
    ["[0]" text]]
   [world
    [file (.only Path System)]]]])

(type: .public Context
  Path)

(type: .public Code
  Text)

(def .public (safe system)
  (All (_ m) (-> (System m) Text Text))
  (text.replaced "/" (at system separator)))

(def .public lux_context
  Context
  "lux")
