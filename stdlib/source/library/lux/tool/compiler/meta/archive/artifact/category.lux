(.using
 [library
  [lux "*"
   [abstract
    [equivalence {"+" Equivalence}]]
   [data
    ["[0]" text ("[1]#[0]" equivalence)]]]])

(type: .public Category
  (Variant
   {#Anonymous}
   {#Definition Text}
   {#Analyser Text}
   {#Synthesizer Text}
   {#Generator Text}
   {#Directive Text}
   {#Custom Text}))

(implementation: .public equivalence
  (Equivalence Category)
  
  (def: (= left right)
    (case [left right]
      [{#Anonymous} {#Anonymous}]
      true
      
      (^template [<tag>]
        [[{<tag> left} {<tag> right}]
         (text#= left right)])
      ([#Definition]
       [#Analyser]
       [#Synthesizer]
       [#Generator]
       [#Directive]
       [#Custom])

      _
      false)))
