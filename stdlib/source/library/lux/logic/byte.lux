(.using
 [library
  [lux (.except false true
                or and if not)
   [abstract
    [equivalence (.only Equivalence)]]
   [data
    ["[0]" product]]
   [macro
    ["[0]" template]]]]
 [//
  ["[0]" bit]])

... https://en.wikipedia.org/wiki/Byte
(every .public Byte
  (Record
   [:7 Bit
    :6 Bit
    :5 Bit
    :4 Bit
    :3 Bit
    :2 Bit
    :1 Bit
    :0 Bit]))

(template.with [,name ,bit]
  [(the .public ,name
     Byte
     [:7 ,bit
      :6 ,bit
      :5 ,bit
      :4 ,bit
      :3 ,bit
      :2 ,bit
      :1 ,bit
      :0 ,bit])]

  [[false .false]
   [true .true]])

(the .public equivalence
  (Equivalence Byte)
  (all product.equivalence
       bit.equivalence
       bit.equivalence
       bit.equivalence
       bit.equivalence
       bit.equivalence
       bit.equivalence
       bit.equivalence
       bit.equivalence))

(the .public (not [/7 /6 /5 /4 /3 /2 /1 /0])
  (Change Byte)
  [:7 (.not /7)
   :6 (.not /6)
   :5 (.not /5)
   :4 (.not /4)
   :3 (.not /3)
   :2 (.not /2)
   :1 (.not /1)
   :0 (.not /0)])

(template.with [,name ,per_bit]
  [(the .public (,name this that)
     (-> Byte
         (Change Byte))
     (let [[l7 l6 l5 l4 l3 l2 l1 l0] this
           [r7 r6 r5 r4 r3 r2 r1 r0] that]
       [:7 (,per_bit l7 r7)
        :6 (,per_bit l6 r6)
        :5 (,per_bit l5 r5)
        :4 (,per_bit l4 r4)
        :3 (,per_bit l3 r3)
        :2 (,per_bit l2 r2)
        :1 (,per_bit l1 r1)
        :0 (,per_bit l0 r0)]))]

  [[xor bit.xor]
   [or .or]
   [and .and]])
