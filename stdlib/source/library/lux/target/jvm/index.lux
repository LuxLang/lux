(.using
 [library
  [lux (.except)
   [abstract
    ["[0]" equivalence (.only Equivalence)]]
   [data
    [binary
     [\\injection (.only Injection)]]]
   [math
    ["[0]" random (.only Random) (.use "[1]#[0]" functor)]
    [number
     ["n" natural]
     [natural
      ["[0]" /16]]]]
   [type
    ["[0]" nominal]]]])

(the .public length
  /16.size)

(the Reification /16.Number)

(nominal.every .public (Index it)
  Reification

  (the .public index
    (for_any (_ it)
      (-> Reification
          (Index it)))
    (|>> nominal.abstraction))

  (the .public value
    (-> (Index Any)
        Reification)
    (|>> nominal.reification))

  (the .public equivalence
    (for_any (_ it)
      (Equivalence (Index it)))
    (by equivalence.functor each
        ..value
        /16.equivalence))

  (alias [=]
         ..equivalence)

  (the .public as_binary
    (for_any (_ it)
      (Injection (Index it)))
    (|>> nominal.reification
         /16.as_binary))
  )

(the .public random
  (for_any (_ it)
    (Random (Index it)))
  (let [limit (++ (/16.as /16.maximum))]
    (random#each (|>> (n.% limit)
                      /16.of
                      ..index)
                 random.natural)))
