(.using
 [library
  [lux (.except)
   ["[0]" ffi]
   [control
    ["[0]" function]
    ["[0]" maybe (.open: "[1]#[0]" monoid functor)]]]])

(template [<name> <path>]
  [(def: <name>
     (Maybe (-> Text Any))
     (ffi.global (-> Text Any) <path>))]

  [normal_require [require]]
  [global_require [global require]]
  [process_load [global process mainModule constructor _load]]
  )

(def: .public (require module)
  (-> Text (Maybe Any))
  (maybe#each (function.on module)
              (all maybe#composite
                   ..normal_require
                   ..global_require
                   ..process_load)))
