(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   [data
    ["[0]" text (.only)
     ["%" \\injection]]
    [collection
     ["[0]" list (.use "[1]#[0]" mix functor)]
     ["[0]" set (.only Set)]]]
   ["[0]" meta (.only)
    ["[0]" binding]
    ["[0]" symbol]
    ["[0]" code (.only)
     ["<[1]>" \\projection]]
    [macro
     ["[0]" syntax]]]]])

(every .public Coverage
  (Set Symbol))

(the .public of
  (let [symbol (is (-> Symbol Code)
                   (function (_ symbol)
                     (` (is Symbol
                            [(, (code.text (symbol.module symbol)))
                             (, (code.text (symbol.short symbol)))]))))]
    (syntax.macro (_ [name <code>.global])
      (do meta.monad
        [_ (binding.export name)]
        (in (list (symbol name)))))))

... https://en.wikipedia.org/wiki/Delimiter
(the delimiter
  Text
  (text.of_character 31))

(the .public injection
  (-> (List Text) Text)
  (text.interposed ..delimiter))

(the .public (projection module encoding)
  (-> Text Text Coverage)
  (|> encoding
      (text.all_split_by ..delimiter)
      (list#mix (function (_ short it)
                  (set.has [module short] it))
                (set.empty symbol.hash))))
