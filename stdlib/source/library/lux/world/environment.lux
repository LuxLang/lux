(the .public default
  (Environment IO)
  (implementation
   (the (available_variables _)
     (for .jvm (|> (java/lang/System::getenv [])
                   (java/util/Map::keySet [])
                   (java/util/Set::iterator [])
                   (..jvm::consume list.empty)
                   (list:each (|>> ffi.of_string))
                   io.io)
          .js (io.io (if ffi.on_node_js?
                         (when (ffi.global Object [process env])
                           {.#Some process/env}
                           (|> (Object::entries [process/env])
                               (list.of_array {.#None})
                               (list:each (|>> (array.item 0) maybe.trusted)))

                           {.#None}
                           (list))
                         (list)))
          .python (monad.let [! io.monad]
                    [it (os::environ)]
                    (by ! each
                        (list.of_array {.#None})
                        (os/environ::keys [] it)))
          ... Lua offers no way to get all the environment variables available.
          .lua (io.io (list))
          .ruby (io.io (list.of_array {.#None} (Env::keys [])))
          ... .php (monad.let io.monad
          ...         [environment (..getenv/0 [])]
          ...         (pure (|> environment
          ...                   ..array_keys
          ...                   (array.list {.#None})
          ...                   (list:each (function (_ variable)
          ...                               [variable ("php array read" (as Natural variable) environment)]))
          ...                   (dictionary.of_list text.hash))))
          ))

   (the (variable name)
     (template.let [(!fetch <method> <post>)
                    [(monad.let io.monad
                       [value (|> name
                                  <method>)]
                       (pure (when value
                               {.#Some value}
                               {try.#Success (<post> value)}

                               {.#None}
                               (exception.except ..unknown_environment_variable [name]))))]]
       (for .jvm (!fetch (<| java/lang/System::resolveEnv [] ffi.as_string) ffi.of_string)
            .js (io.io (if ffi.on_node_js?
                           (when (monad.let maybe.monad
                                   [process/env (ffi.global (Array Text) [process env])]
                                   (array.item (as (-> Text Natural) name)
                                               process/env))
                             {.#Some value}
                             {try.#Success value}

                             {.#None}
                             (exception.except ..unknown_environment_variable [name]))
                           (exception.except ..unknown_environment_variable [name])))
            .python (monad.let io.monad
                      [it (os::environ)
                       value (os/environ::get [name] it)]
                      (pure (when value
                              {.#Some value}
                              {try.#Success value}

                              {.#None}
                              (exception.except ..unknown_environment_variable [name]))))
            .lua (!fetch os/getenv |>)
            .ruby (!fetch Env::fetch |>)
            )))
   
