(.using
 [library
  [lux (.except)
   [abstract
    [equivalence (.only Equivalence)]
    [hash (.only Hash)]]
   [data
    ["[0]" text (.use "[1]#[0]" hash)]]
   [macro
    ["[0]" template]]
   [type
    ["[0]" nominal (.only)]]]])

(nominal.every .public Version
  Text

  (the .public equivalence
    (Equivalence Version)
    (implementation
     (the (= reference it)
       (text.= (nominal.reification reference)
               (nominal.reification it)))))

  (alias [=]
         ..equivalence)

  (the .public hash
    (Hash Version)
    (implementation
     (the equivalence ..equivalence)
     (the hash (|>> nominal.reification text#hash))))

  (template.with [<name> <version>]
    [(the .public <name>
       Version
       (nominal.abstraction <version>))]

    [v0_9 "0.9"]
    [v1_0 "1.0"]
    [v1_1 "1.1"]
    [v2_0 "2.0"]
    )
  )
