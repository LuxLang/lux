(.using
 [library
  [lux (.except scheme)
   [abstract
    ["[0]" equivalence (.only Equivalence)]
    ["[0]" hash (.only Hash)]]
   [data
    ["[0]" text]]
   [meta
    [type
     ["[0]" nominal (.only)]]
    [macro
     ["[0]" template]]]]])

... https://en.wikipedia.org/wiki/List_of_URI_schemes
(nominal.every .public Scheme
  Text

  (template.with [<scheme> <name>]
    [(the .public <name>
       Scheme
       (nominal.abstraction <scheme>))]

    ["about" about]
    ["acap" acap]
