  (the .public scheme
    (-> Text Scheme)
    (|>> nominal.abstraction))

  (the .public name
    (-> Scheme Text)
    (|>> nominal.representation))

  (the .public equivalence
    (Equivalence Scheme)
    (of equivalence.functor each ..name text.equivalence))

  (alias [=]
         ..equivalence)

  (the .public hash
    (Hash Scheme)
    (of hash.functor each ..name text.hash))
  )
