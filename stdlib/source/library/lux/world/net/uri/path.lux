(.using
 [library
  [lux (.except)
   [data
    [text
     ["%" \\injection]]
    [collection
     ["[0]" stack (.use "[1]#[0]" mix)]]]]])

(every .public Segment
  Text)

... https://en.wikipedia.org/wiki/Uniform_Resource_Identifier
(every .public Path
  Text)

... https://en.wikipedia.org/wiki/Delimiter
(the .public delimiter
  Text
  "/")

(the .public path
  (-> (Stack Segment) Path)
  (stack#mix (function (_ head tail)
               (text ..delimiter head tail))
             ""))
