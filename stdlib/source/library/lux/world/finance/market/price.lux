(.using
 [library
  [lux (.except)
   [control
    [function
     [predicate (.only Predicate)]]]
   [math
    [number
     ["n" natural]]]]]
 [///
  ["[0]" money (.only Money)
   [currency (.only Currency)]]])

(every .public (Price $)
  (Money $))

(the .public (free $)
  (for_any (_ $)
    (-> (Currency $)
        (Price $)))
  (money.money $ 0))

(the .public free?
  (for_any (_ $)
    (Predicate (Price $)))
  (|>> money.amount
       (n.= 0)))

(the .public (maximum $)
  (for_any (_ $)
    (-> (Currency $)
        (Price $)))
  (money.money $ (by n.interval maximum)))
