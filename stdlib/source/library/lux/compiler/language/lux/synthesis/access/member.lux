(.using
 [library
  [lux (.except)
   [abstract
    [equivalence (.only Equivalence)]
    [hash (.only Hash)]]
   [data
    ["[0]" product]
    ["[0]" text (.only)
     ["%" \\injection]]]
   [logic
    ["[0]" bit]]
   [math
    ["[0]" random (.only Random)]
    [number
     [/64
      ["[0]" natural]]]]]])

(every .public Member
  (Record
   [:lefts Natural
    :right? Bit]))

(the .public (as_text it)
  (text.Injection Member)
  (text "[" (%.natural (its :lefts it)) " " (bit.as_text (its :right? it)) "]"))

(the .public hash
  (Hash Member)
  (all product.hash
       natural.hash
       bit.hash
       ))

(the .public equivalence
  (Equivalence Member)
  (by ..hash equivalence))

(alias [=]
       ..equivalence)

(the .public random
  (Random Member)
  (all random.and
       random.natural
       random.bit
       ))
