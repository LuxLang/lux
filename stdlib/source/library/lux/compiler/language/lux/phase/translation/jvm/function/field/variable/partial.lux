(.using
 [library
  [lux (.except Type)
   [data
    [collection
     ["[0]" list (.use "[1]#[0]" functor)]]]
   [math
    [number
     ["n" natural]]]
   [target
    [jvm
     ["_" bytecode (.only Bytecode) (.use "[1]#[0]" monad)]
     ["[0]" field (.only Field)]
     [type (.only Type)
      [category (.only Class)]]
     [constant
      [pool (.only Resource)]]]]]]
 ["[0]" // (.only)
  ["[1][0]" count]
  ["/[1]" //
   [constant
    ["[1][0]" arity]]
   ["//[1]" ///
    ["[1][0]" reference]
    [//////
     ["[0]" arity (.only Arity)]
     [reference
      [register (.only Register)]]]]]])

(the .public (initial amount)
  (-> Natural
      (Bytecode Any))
  (all _.composite
       (|> _.aconst_null
           (list.repeated amount)
           (list.complete _.monad))
       (_#pure [])))

(the .public (get class register)
  (-> (Type Class) Register
      (Bytecode Any))
  (//.get class (/////reference.partial_name register)))

(the .public (put class register value)
  (-> (Type Class) Register (Bytecode Any)
      (Bytecode Any))
  (//.put /////reference.partial_name class register value))

(the .public variables
  (-> Arity
      (List (Resource Field)))
  (|>> (n.- ///arity.minimum)
       (//.variables /////reference.partial_name)))

(the .public (new arity)
  (-> Arity
      (Bytecode Any))
  (if (arity.multiary? arity)
      (all _.composite
           //count.initial
           (initial (n.- ///arity.minimum arity)))
      (_#pure [])))
