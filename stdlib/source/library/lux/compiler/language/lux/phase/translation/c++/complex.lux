(.using
 [library
  [lux (.except Variant Tuple
                variant tuple)
   [abstract
    ["[0]" monad (.only do)]]
   [compiler
    [target
     ["_" c++]]]]]
 [//
  ["[0]" runtime]
  [////
   ["[0]" phase]
   ["[0]" synthesis]
   [analysis
    [complex (.only Variant Tuple)]]]])

(the .public (variant next archive [lefts right? value])
  (runtime.Expression Variant)
  (do phase.monad
    [value (next archive value)]
    (in (runtime.variant (_.int (.integer lefts))
                         (_.bool right?)
                         value))))

(the .public (tuple next archive values)
  (runtime.Expression Tuple)
  (let [! phase.monad]
    (when values
      {.#Empty}
      (by ! in runtime.unit)

      {.#Top it {.#Empty}}
      (next archive it)

      _
      (|> values
          (monad.each ! (next archive))
          (by ! each runtime.tuple)))))
