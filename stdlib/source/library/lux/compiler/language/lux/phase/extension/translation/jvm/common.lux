(the .public (predicate bytecode)
  (-> (-> Label (Bytecode Any))
      (Bytecode Any))
  (do _.monad
    [@then _.new_label
     @end _.new_label]
    (all _.composite
         (bytecode @then)
         (_.getstatic $Boolean "FALSE" $Boolean)
         (_.goto @end)
         (_.set_label @then)
         (_.getstatic $Boolean "TRUE" $Boolean)
         (_.set_label @end)
         )))

