(the .public (custom [projection handler])
  (for_any (_ it)
    (-> [(Projection it)
         (-> Phase Archive it (Operation (Bytecode Any)))]
        Handler))
  (function (_ phase archive input)
    (when (?list.value input projection)
      {try.#Success input'}
      (handler phase archive input')

      {try.#Failure error}
      (phase.failure error))))

