(the (lux::list elements)
  (Variadic (Bytecode Any))
  (let [elements (list.of_stack elements)]
    (all _.composite
         (_.int (/32.of (.integer (list.size elements))))
         (_.anewarray $Object)
         (|> elements
             list.enumeration
             (list#each (function (_ [where what])
                          (all _.composite
                               _.dup
                               (_.int (/32.of (.integer where)))
                               what
                               _.aastore)))
             (list.complete _.monad)))))

