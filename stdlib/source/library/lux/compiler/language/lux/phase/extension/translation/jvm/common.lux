(the (lux::list_composite [prefix suffix])
  (Binary (Bytecode Any))
  (let [swap2
        (all _.composite
             ... a b c d
             _.dup2_x2 _.pop2
             ... c d a b
             )

        swap_2,1
        (all _.composite
             ... a b c
             _.dup2_x1
             _.pop2
             ... b c a
             )

        swap_1,2
        (all _.composite
             ... a b c
             _.dup_x2
             _.pop
             ... c a b
             )

        as_list (function (_ it)
                  (all _.composite
                       it
                       (_.checkcast ///type.list)
                       ))

        with_size
        (all _.composite
             ... it
             _.dup
             _.arraylength
             ... it (size it)
             )
        
        empty_composite
        (all _.composite
             ... (size prefix) (size suffix)
             _.iadd (_.anewarray $Object)
             ... composite
             )

        beginning
        (_.int (/32.of +0))

        copy_of_prefix
        (all _.composite
             ... P (# P) P+S
             _.dup2_x1
             ... {(# P) P+S} P (# P) P+S
             _.swap beginning _.dup_x2 _.swap
             ... {(# P) P+S} P 0 P+S 0 (# P)
             system::arraycopy
             ... {(# P) P+S}
             )

        copy_of_suffix
        (all _.composite
             ... S (# S) (# P) P+S
             swap_1,2
             ... S P+S (# S) (# P)
             swap2 _.swap _.dup2_x2 _.pop
             ... {P+S} S (# S) (# P) P+S
             beginning _.swap swap2 _.swap
             ... {P+S} S 0 P+S (# P) (# S)
             system::arraycopy
             ... {P+S}
             )]
    (all _.composite
         (as_list suffix) with_size
         ... [S (# S)]
         _.dup
         (as_list prefix) with_size
         swap_2,1
         ... [S (# S)] [P (# P)] (# S)
         _.swap _.dup_x1 empty_composite
         ... ... [S (# S)] [P (# P)] P+S
         copy_of_prefix
         ... S (# S) (# P) P+S
         copy_of_suffix
         ... P+S
         )))

