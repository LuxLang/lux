  (|>> (dictionary.has (extension.translation extension/lux.list)
                       (variadic ..list))
       (dictionary.has (extension.translation extension/lux.list_size)
                       (unary ..list_size))
       (dictionary.has (extension.translation extension/lux.list_item)
