   [data
    ["[0]" product]
    [collection
     ["[0]" list (.use "[1]#[0]" functor mix)
      ["?[1]" \\projection]]
     ["[0]" dictionary]]]
   [macro
    ["[0]" template]]
   [target
    ["_" js (.only Literal)]]
   [compiler
    [meta
     [archive (.only Archive)]]
    ["[0]" extension (.only)
     ["[1]/[0]" lux]]]]]
