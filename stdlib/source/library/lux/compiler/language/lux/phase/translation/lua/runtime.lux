(the (lux//try risky)
  (let [closure (|> risky
                    (_.apply (stack ..unit))
                    _.return
                    (_.closure (stack)))
        $debug (_.var "debug")
        $xpcall (_.var "xpcall")]
    (with_vars [success value]
      (_.if (_.and $debug $xpcall)
        (all _.then
             (_.let (stack success value) (_.apply (stack closure (_.its "traceback" $debug))
                                                   $xpcall))
             (_.if success
               (_.return (..right value))
               (_.return (..left value))))
        (all _.then
             (_.let (stack success value) (_.apply (stack closure)
                                                   (_.var "pcall")))
             (_.if success
               (_.return (..right value))
               (_.return (..left value))))))))

(the (lux//program_args raw)
  (with_vars [tail head idx]
    (all _.then
         (_.let (stack tail) ..none)
         (<| (_.for_step idx (_.length raw) (_.int +1) (_.int -1))
             (_.set (stack tail) (..some (_.array (stack (_.item idx raw)
                                                         tail)))))
         (_.return tail))))

