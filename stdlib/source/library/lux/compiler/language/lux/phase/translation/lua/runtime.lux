(.the full
  _.Statement
  (all _.then
       ..runtime//adt
       ..runtime//lux
       ..runtime//i64
       ..runtime//text
       ..runtime//array
       ))

(.the .public translate
  (Operation [Registry Output])
  (do phase.monad
    [_ (translation.execute! ..full)
     _ (translation.save! ..module_id {.#None} ..full)]
    (in [(|> registry.empty
             (registry.resource true unit.none)
             product.right)
         (sequence.sequence [..module_id
                             {.#None}
                             (|> ..full
                                 _.code
                                 (by utf8.binary as))])])))
