(the .public (its [source pattern_matching])
  (-> (When Term)
      (Maybe Its))
  (loop (its [path (is (List Member)
                       (list))
              pattern_matching pattern_matching])
    (.when pattern_matching
      (<| {#Seq {#Access {/access.#Member member}}}
          {#Seq {#Pop}}
          tail)
      (its path tail)

      (<| {#Seq {#Access {/access.#Member member}}}
          {#Seq {#Bind expected}}
          {#Then (..local @ actual)})
      (.if (n.= expected actual)
