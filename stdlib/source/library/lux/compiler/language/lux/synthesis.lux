(the .public (multi_let [input output])
  (-> (When Term)
      (Maybe Multi_Let))
  (loop (next [bindings (is (List Projection)
                            (list))
               output output])
    (.when output
      {#Seq {#Access {/access.#Member member}}
            {#Seq {#Bind register}
                  then}}
      (.let [bindings (list#composite bindings (list [register member]))]
        (.when then
          {#Seq {#Pop} then}
          (next bindings then)

          {#Then body}
          {.#Some [input bindings body]}

          _
          {.#None}))

      _
      {.#None})))

