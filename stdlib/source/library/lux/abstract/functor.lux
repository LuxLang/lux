(.using
 [library
  [lux (.except function)
   ["//" algorithm]]])

(every .public (Functor !)
  (Interface
   (is (for_any (_ input output)
         (-> (-> input
                 output)
             (-> (! input)
                 (! output))))
       each)))

(the .public constant
  (for_any (_ it _)
    (Functor (//.Constant it)))
  (implementation
   (the (each value it)
     it)))

(the .public variable
  (Functor //.Variable)
  (implementation
   (the (each value it)
     (value it))))

(the .public (sum left right)
  (for_any (_ left right)
    (-> (Functor left) (Functor right)
        (Functor (//.Sum left right))))
  (implementation
   (the (each value it)
     (when it
       {.#Left it}
       {.#Left (left value it)}
       
       {.#Right it}
       {.#Right (right value it)}))))

(the .public (product left right)
  (for_any (_ left right)
    (-> (Functor left) (Functor right)
        (Functor (//.Product left right))))
  (implementation
   (the (each value [left_it right_it])
     [(left value left_it)
      (right value right_it)])))

(every .public (Function input output)
  (for_any (_ it)
    (-> input
        (output it))))

(the .public (function output)
  (for_any (_ input output)
    (-> (Functor output)
        (Functor (Function input output))))
  (implementation
   (the (each value it)
     (|>> it
          ((output value))))))

(the .public (recursive body)
  (for_any (_ it)
    (-> (-> (Functor it)
            (Functor it))
        (Functor it)))
  (implementation
   (the (each value it)
     ((body each) value it))))

(every .public (Then outer inner)
  (for_any (_ it)
    (outer (inner it))))

(the .public (composite outer inner)
  (for_any (_ outer inner)
    (-> (Functor outer) (Functor inner)
        (Functor (Then outer inner))))
  (implementation
   (the (each value it)
     (outer (inner value) it))))
