(.using
 [library
  [lux (.except and)]])

(every .public (Monoid of)
  (Interface
   (is of
       identity)
   (is (-> of of
           of)
       composite)))

(the .public (and left right)
  (for_any (_ left right)
    (-> (Monoid left) (Monoid right)
        (Monoid [left right])))
  (implementation
   (the identity
     [(of left identity)
      (of right identity)])
   
   (the (composite [lL rL] [lR rR])
     [(of left composite lL lR)
      (of right composite rL rR)])))
