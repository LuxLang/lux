... https://en.wikipedia.org/wiki/Content_format
(.using
 [library
  [lux (.except)
   [control
    ["[0]" try (.only Try)]]]]
 [//
  [monad (.only do)]
  ["[0]" functor]])

(every .public (Format super sub)
  (Interface
   (is (-> sub
           super)
       injection)
   (is (-> super
           (Try sub))
       projection)))

(the .public (composite format_21 format_10)
  (for_any (_ @0 @1 @2)
    (-> (Format @2 @1) (Format @1 @0)
        (Format @2 @0)))
  (implementation
   (the injection
     (|>> (by format_10 injection)
          (by format_21 injection)))

   (the (projection it)
     (do try.monad
       [it (by format_21 projection it)]
       (by format_10 projection it)))))
