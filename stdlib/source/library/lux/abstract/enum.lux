(.using
 [library
  [lux (.except)]]
 [//
  ["[0]" order (.only Order)]])

(every .public (Enum it)
  (Interface
   (is (Order it)
       order)
   (is (-> it it)
       succ)
   (is (-> it it)
       pred)))

(the .public (range enum from to)
  (for_any (_ it)
    (-> (Enum it) it it
        (Stack it)))
  (let [(open "/#[0]") enum]
    (loop (again [end to
                  output (`` (is (Stack (,, (type_of from)))
                                 {.#Empty}))])
      (if (/#< end from)
          (again (/#pred end) {.#Top end output})

          (/#< from end)
          (again (/#succ end) {.#Top end output})

          ... (= end from)
          {.#Top end output}))))
