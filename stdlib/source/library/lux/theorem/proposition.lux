(every .public Model
  (List Proposition))

(the (model' reality expectation
             context analysis archive)
  (-> (List Proposition)
      (Change (Proposition' Model)))
  (monad.let phase.monad
    [expectation (expectation context analysis archive)]
    (.if (by (list.equivalence ..equivalence) = expectation reality)
         (pure reality)
         (phase.failure error.not_valid))))

(the (code_of_identity [this that])
  (code.Injection Identity)
  (` [(, (code_of_analysis this))
      (, (code_of_analysis that))]))

(the (code_of_pair code_of_proposition [premise conclusion])
  (-> (code.Injection Proposition)
      (code.Injection Entailment))
  (` [(, (code_of_proposition premise))
      (, (code_of_proposition conclusion))]))

(the (code_of_proposition it)
  (code.Injection Proposition)
  (`` (when it
        (,, (template.with [,tag ,as_code]
              [{,tag it}
               (` {,tag (, (,as_code it))})]

              [[:Identity code_of_identity]
               [:Entailment (code_of_pair code_of_proposition)]
               [:Disjunction (code_of_pair code_of_proposition)]])))))

(the .public model
  (extension.analysis (_ analysis archive
                         ['system ?list.any
                          'model ?list.any])
    (monad.let phase.monad
      [model (meta.eval (.type (Proposition' Model))
                        (` (..model' (, 'model) (, 'system))))
       model ((as (-> Any (Proposition' Model)) model) ..empty analysis archive)
       _ (analysis/type.inference ..Model)]
      (analysis archive (` (list (,* (list:each code_of_proposition model))))))))

(the .public (as_code it)
  (code.Injection Proposition)
  (`` (when it
        (,, (template.with [,tag ,as_code]
              [{,tag [left right]}
               (` {,tag [(, (,as_code left))
                         (, (,as_code right))]})]

              [[:Identity code_of_analysis]
               [:Entailment as_code]
               [:Disjunction as_code]])))))

(template.with [,check ,tag ,type ,exception]
  [(exception.the .public (,exception [it])
     (Exception [Proposition])
     (exception.report
      (list ["Proposition" (code.as_text (as_code it))])))

   (the .public (,check it)
     (-> Proposition
         (Try ,type))
     (when it
       {,tag it}
       {try.:Success it}

       else
       (exception.except ,exception [it])))]

  [[identity :Identity Identity not_identity]
   [entailment :Entailment Entailment not_entailment]
   [disjunction :Disjunction Disjunction not_disjunction]])
