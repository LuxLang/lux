(the (for' name_of_each_type expectation_of_each_term body
           value_of_each_type reality_of_each_term
           context analysis archive)
  (for_any (_ it)
    (-> (List Text) (List [Text Code])
        (Change (Template it))))
  (.if (and (n.= (list.size name_of_each_type)
                 (list.size value_of_each_type))
            (n.= (list.size expectation_of_each_term)
                 (list.size reality_of_each_term)))
       (monad.let [! phase.monad]
         [.let [each_type (list.zipped_2 name_of_each_type
                                         value_of_each_type)
                [_ each_term each_substitution] context
                type_context (|> each_type
                                 (list:each (function (_ [name value])
                                              (list (code.local name)
                                                    (type_in_context context value))))
                                 list:conjoint)
                each_term (|> each_term
                              (list:each (function (_ [name type])
                                           (list (code.local name)
                                                 (` (.as (.let [(,* type_context)]
                                                           (.-> .Any (, type)))
                                                         [])))))
                              list:conjoint)]
          each_term (list.each' ! (function (_ [[name type] value])
                                    (monad.let !
                                      [type (meta.eval Type (` (.let [(,* type_context)]
                                                                 (.type (, type)))))
                                       _ (analysis/type.with (as (-> Any Type) type)
                                           (analysis archive (` (.let [(,* each_term)]
                                                                  (, value)))))]
                                      (pure [name value])))
                                (list.zipped_2 expectation_of_each_term
                                               reality_of_each_term))]
         ((body value_of_each_type reality_of_each_term)
          (composite [:each_type each_type
                      :each_term (list)
                      :each_substitution each_term]
                     context)
          analysis
          archive))
       (phase.failure error.not_valid)))

(syntax.the .public (for [[each_type each_term 'body] ..complex_let])
  (macro.with_names ['_ 'each_type 'each_term]
    (monad.let [! meta.monad]
      [each_type' (list.each' ! name.new each_type)]
      (pure (list (` (expansion.let [(,* (|> (list.zipped_2 each_type each_type')
                                             (list:each (function (_ [local_name global_name])
                                                          (list (code.local local_name)
                                                                (` (these (, global_name))))))
                                             list:conjoint))]
                       (..for' (list (,* (list:each (|>> code.as_text code.text) each_type')))
                               (list (,* (list:each (function (_ [name type])
                                                      (` [(, (code.text name))
                                                          (, (..quote type))]))
                                                    each_term)))
                               (function ((, '_) (, 'each_type) (, 'each_term))
                                 (when [(, 'each_type) (, 'each_term)]
                                   [(list (,* (list:each code.local each_type)))
                                    (list (,* (list:each (|>> product.left code.local) each_term)))]
                                   (, 'body)

                                   (, '_)
                                   (undefined)))))))))))

