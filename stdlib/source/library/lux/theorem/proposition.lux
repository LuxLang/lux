(the .public (if every_premise conclusion
                 context analysis archive)
  (-> (List (Proposition Identity)) (Proposition Identity)
      (Proposition Entailment))
  (monad.let [! phase.monad]
    [every_premise (list.each' ! (function (_ premise)
