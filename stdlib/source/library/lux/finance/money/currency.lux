(template.with [<proper> <type> <alphabetic_code> <numeric_code> <decimals> <long>]
  [(the .public <proper>
     (..currency [<alphabetic_code>
                  <numeric_code>
                  (power <decimals> 10)]))

   (the .public <type>
     Type
     (let [[module proper] (name .._)]
       {.#Named [module <alphabetic_code>]
                (..type <proper>)}))

   (the .public <long>
     (Currency <type>)
     <proper>)]

