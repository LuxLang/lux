  [lux (.except type all try php)
   [abstract
    [monad (.only do)]
    ["?" projection]
    ["[0]" equivalence (.only Equivalence)]]
   [data
    ["[0]" product]
    ["[0]" text]
    [collection
     ["[0]" list
      ["?[1]" \\projection]]]]
   [math
    [number
     [/64
      ["n" natural]]]]
   ["[0]" macro (.only)
    ["[0]" syntax]
    ["[0]" template]]
   ["[0]" type (.only)
    ["?[1]" \\projection]
    ["[0]" nominal]]
   ["[0]" meta (.only)
    ["[0]" code
     ["?[1]" \\projection]]]]])

(nominal.every .public (Currency it)
  (Record
   [#alphabetic_code Text
    #numeric_code Natural
    #sub_divisions Natural])

  (the .public (currency [alphabetic_code numeric_code sub_divisions])
    (for_some (_ it)
      (-> [Text Natural Natural]
          (Currency it)))
    (nominal.of
     [#alphabetic_code alphabetic_code
      #numeric_code numeric_code
      #sub_divisions sub_divisions]))

  (template.with [<name> <slot> <type>]
    [(the .public <name>
       (for_any (_ it)
         (-> (Currency it)
             <type>))
       (|>> nominal.as
            (its <slot>)))]

    [alphabetic_code #alphabetic_code Text]
    [numeric_code #numeric_code Natural]
    [sub_divisions #sub_divisions Natural]
    )

  (the .public equivalence
    (Equivalence (Currency Any))
    (by equivalence.functor each
        (|>> nominal.as)
        (.all product.equivalence
              text.equivalence
              n.equivalence
              n.equivalence
              )))

  (alias [=]
         ..equivalence)
  )

(the .public type
  (syntax.macro (_ [it ?list.any])
    (macro.with_names ['_ 'it]
      (do meta.monad
        [it (meta.eval Type (` (.type_of ((is (for_any ((, '_) (, 'it))
                                                (-> (..Currency (, 'it))
                                                    (..Currency (, 'it))))
                                              (|>>))
                                          (, it)))))
         it (|> (as (-> Any Type) it)
                (?type.value (?type.reified (?.after (?type.exactly ..Currency)
                                                     ?type.any)))
                meta.of_try)]
        (pure (list (type.code it)))))))

(the (power parameter subject)
  (-> Natural Natural
      Natural)
  (when parameter
    0 1
    _ (|> subject
          (power (-- parameter))
          (n.x subject))))

