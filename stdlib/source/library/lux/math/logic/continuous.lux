... https://en.wikipedia.org/wiki/Many-valued_logic
(.module:
  {#.doc (.example "Continuous logic using Rev values."
                   "Continuous logic is logic in the interval [0,1] instead of just the binary #0 and #1 options."
                   "Because Rev is being used, the interval is actual [0,1).")}
  [library
   [lux (#- false true or and not)
    [abstract
     [monoid (#+ Monoid)]]
    [math
     [number
      ["/" rev ("#\." interval)]]]]])

(def: .public false Rev /\bottom)
(def: .public true  Rev /\top)

(template [<name> <chooser> <monoid> <identity>]
  [(def: .public <name>
     (-> Rev Rev Rev)
     <chooser>)

   (implementation: .public <monoid>
     (Monoid Rev)

     (def: identity <identity>)
     (def: compose <name>))]

  [or  /.max disjunction ..false]
  [and /.min conjunction ..true]
  )

(def: .public (not input)
  (-> Rev Rev)
  (/.- input ..true))

(def: .public (implies consequent antecedent)
  (-> Rev Rev Rev)
  (or (not antecedent)
      consequent))

(def: .public (= left right)
  (-> Rev Rev Rev)
  (and (or (not left) right)
       (or left (not right))))
