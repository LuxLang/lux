(.using
 [library
  [lux (.except i64)
   [abstract
    [equivalence (.only Equivalence)]]
   [control
    ["?" projection]
    ["[0]" maybe]
    ["[0]" try]]
   [math
    ["[0]" random (.only Random)]]
   [meta
    ["[0]" static]
    ["[0]" type (.only)
     ["?[1]" \\projection]]]]]
 [//
  ["[0]" i64]])

(the sub
  (maybe.trusted (i64.sub 32)))

(`` (every .public I32
      (I64 (,, (|> (type_of ..sub)
                   (?type.value (<| ?type.applied
                                    (?.after ?type.any)
                                    ?type.applied
                                    (?.after (?type.exactly i64.Sub))
                                    ?type.any))
                   try.trusted
                   (static.literal type.code))))))

(the .public Number
  ..I32)

(the .public equivalence (Equivalence I32) (by ..sub sub_equivalence))

(alias [=]
       ..equivalence)

(the .public width Natural (by ..sub bits))
(the .public i32 (-> I64 I32) (by ..sub narrow))
(the .public i64 (-> I32 I64) (by ..sub wide))

(the .public random
  (Random I32)
  (by random.functor each
      ..i32
      random.i64))
