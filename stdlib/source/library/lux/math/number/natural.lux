(the .public (padded expected_size format)
  (-> Natural (Format Text Natural)
      (Format Text Natural))
  (implementation
   (the (injection it)
     (loop (next [it (of format injection it)])
       (if (< expected_size (.text_size# it))
         (next (.text_composite# "0" it))
         it)))

   (the projection
     (of format projection))))

