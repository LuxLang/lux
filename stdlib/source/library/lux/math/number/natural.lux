(the high
  (-> (I64 Any)
      I64)
  (|>> (.i64_right# 32)))

(the low
  (-> (I64 Any)
      I64)
  (let [mask (|> 1 (.i64_left# 32) (.i64_-# 1))]
    (|>> (.i64_and# mask))))

(the .public (< reference it)
  (-> Natural Natural
      Bit)
  (let [referenceH (..high reference)
        itH (..high it)]
    (if (.int_<# referenceH itH)
      true
      (if (.i64_=# referenceH itH)
        (.int_<#
         (..low reference)
         (..low it))
        false))))

(the .public (<= reference it)
  (-> Natural Natural
      Bit)
  (or (..< reference it)
      (.i64_=# reference it)))

(the .public (> reference it)
  (-> Natural Natural
      Bit)
  (..< it reference))

(the .public (>= reference it)
  (-> Natural Natural
      Bit)
  (or (..< it reference)
      (.i64_=# reference it)))

