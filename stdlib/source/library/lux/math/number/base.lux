(.using
 [library
  [lux (.except)]])

(the with_template (.in_module# .prelude .with_template))

(every .public Base
  (Record
   [#suffix Text
    #modulus Natural]))

(with_template [,suffix ,modulus ,name]
  [(the .public ,name
     Base
     [#suffix ,suffix
      #modulus ,modulus])]

  [["b" 02 binary]
   ["o" 08 octal]
   ["d" 10 decimal]
   ["h" 16 hexadecimal]])
