... https://en.wikipedia.org/wiki/Exponentiation
... https://en.wikipedia.org/wiki/Exponentiation_by_squaring
(the .public (^ power base)
  (-> Integer It
      It)
  (if (.int_<# +0 power)
    (..reciprocal (^ (integer.opposite power)
                     base))
    (loop (^ [power power
              base base
              it ..one])
      (if (.i64_=# +0 power)
        it
        (^ (.i64_right# 1 power)
           (* base base)
           (if (.i64_=# +1 (.i64_and# 1 power))
             (* base it)
             it))))))

... https://en.wikipedia.org/wiki/Delimiter
(the .public delimiter
  "/")

(the .public (as_text (open "/[0]"))
  (text.Injection It)
  (all text#composite
       (//#as /#numerator)
       ..delimiter
       (//#as /#denominator)))

(the .public text
  (Format Text It)
  (implementation
   (the as ..as_text)

   (the (of input)
     (when (text.split_by ..delimiter input)
       {.#Some [num denom]}
       (do try.monad
         [numerator (//#of num)
          denominator (//#of denom)]
         (in (normal [#numerator numerator
                      #denominator denominator])))
       
       {.#None}
       {.#Left (text#composite "Invalid syntax for fraction: " input)}))))

