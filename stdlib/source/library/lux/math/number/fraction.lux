(template.with [<format> <as> <of> ,unit]
  [(the .public <as>
     (-> It
         It)
     (* (..fraction (its unit.#factor ,unit))))
   
   (the .public <of>
     (-> It
         It)
     (/ (..fraction (its unit.#factor ,unit))))
   
   (the .public <format>
     (Format Text It)
     (let [suffix (its unit.#suffix ,unit)]
       (implementation
        (the as
          (|>> <as>
               ..whole
               ..natural
               (try.else 0)
               (by //.base_10 as)
               (text.suffix suffix)))

        (the (of it)
          (when (text.split_by suffix it)
            {.#Some [it ""]}
            (|> it
                (by //.base_10 of)
                (try#each (|>> ..fraction <of>)))
            
            _
            {try.#Failure format.not_valid})))))]

