(.using
 [library
  [lux (.except static)
   [abstract
    ["[0]" monad (.only do)]]
   [data
    [collection
     ["[0]" stack]]]
   ["[0]" macro (.only)
    ["[0]" syntax]]
   ["[0]" meta (.only)
    ["[0]" code
     ["?[1]" \\projection]]]]])

(the .public dynamic
  (syntax.macro (_ [arity ?code.natural])
    (do [! meta.monad]
      [macro.with_names ['_ '0]
       'parameters (|> (macro.name "parameter_")
                       (stack.repeated arity)
                       (monad.all !))]
      (in (stack (` (is (for_some ((, '_) (, '0))
                          (-> Any
                              (for_any ((, '_) (,* 'parameters))
                                ((, '0) (,* 'parameters)))))
                        (function ((, '_) (, '_))
                          (as_expected [])))))))))

(the .public static
  (syntax.macro (_ [arity ?code.any])
    (in (stack (` (is .Type
                      (type_of ((..dynamic (, arity)) []))))))))
