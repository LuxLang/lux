(.using
 [library
  [lux (.except static)
   [abstract
    ["[0]" monad]]
   [data
    [collection
     ["[0]" list (.only)
      ["?[1]" \\projection]]]]
   ["[0]" macro (.only)
    ["[0]" syntax]]
   ["[0]" meta (.only)
    ["[0]" code
     ["?[1]" \\projection]]]]])

(the .public dynamic
  (syntax.macro (_ [arity ?code.natural])
    (monad.let [! meta.monad]
      [macro.with_names ['_ '0]
       'parameters (|> (macro.name "parameter_")
                       (list.repeated arity)
                       (list.complete !))]
      (pure (list (` (is (for_some ((, '_) (, '0))
                           (-> Any
                               (for_any ((, '_) (,* 'parameters))
                                 ((, '0) (,* 'parameters)))))
                         (function ((, '_) (, '_))
                           (as_expected [])))))))))

(the .public static
  (syntax.macro (_ [arity ?list.any])
    (pure (list (` (is .Type
                       (type_of ((..dynamic (, arity)) []))))))))
