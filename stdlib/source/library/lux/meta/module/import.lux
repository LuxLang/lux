(.require
 [library
  [lux (.except all)
   [data
    ["[0]" product]
    ["[0]" text (.use "[1]#[0]" equivalence)]
    [collection
     ["[0]" list]]]]]
 ["[0]" /// (.use "[1]#[0]" monad)
  ["[0]" module]])

(the .public (all module)
  (-> Text
      (Meta (List Text)))
  (///#each (its .#imports)
            (module.by_name module)))

(the .public (by? import module)
  (-> Text Text
      (Meta Bit))
  (///#each (|>> (its .#imports)
                 (list.any? (text#= import)))
            (module.by_name module)))

(the .public (current? import)
  (-> Text
      (Meta Bit))
  (|> module.current
      (///#each (|>> product.left (by? import)))
      ///#conjoint))
