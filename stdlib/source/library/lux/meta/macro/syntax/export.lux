(.require
 [library
  [lux (.except with)
   [abstract
    [monad (.only do)]]
   [control
    ["<>" parser]]
   [meta
    ["[0]" code
     ["<[1]>" \\parser (.only Parser)]]]]])

(every .public Policy
  Code)

(the .public default
  Policy
  (` .private))

(`` (the policy
      (Parser Policy)
      (do [! <>.monad]
        [candidate <code>.next]
        (when candidate
          [_ {.#Symbol ["" _]}]
          (in default)

          (,, (with_template [<tag>]
                [[_ {<tag> _}]
                 (do !
                   [_ <code>.any]
                   (in candidate))]

                [.#Bit]
                [.#Symbol]
                ))
          
          _
          (in default)))))

(the .public with
  (All (_ of)
    (-> (Parser of)
        (Parser [Policy of])))
  (<>.and ..policy))
