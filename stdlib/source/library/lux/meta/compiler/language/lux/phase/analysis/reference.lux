(.using
 [library
  [lux (.except)
   [abstract
    [monad (.only do)]]
   ["[0]" meta (.only)
    ["[0]" module]
    ["[0]" code]]]]
 [////
  ["[0]" phase]
  ["/" analysis (.only Operation Phase Extender)
   ["[0]" scope]]
  [///
   [meta
    [archive (.only Archive)]]]])

(the .public (reference extender analysis archive quoted_module it)
  (-> Extender Phase Archive Text Name
      (Operation /.Term))
  (when it
    ["" proper]
    (do [! phase.monad]
      [?var (scope.variable proper)]
      (when ?var
        {.#Some _}
        (/.delegated extender analysis archive (name .local#) (list (code.name it)))

        {.#None}
        (do !
          [[this_module _] module.current]
          (/.delegated extender analysis archive (name .global#) (list (code.text quoted_module) (code.name [this_module proper]))))))

    _
    (/.delegated extender analysis archive (name .global#) (list (code.text quoted_module) (code.name it)))))
