(.require
 [library
  [lux (.except #Bit #Text)
   [abstract
    [equivalence (.only Equivalence)]
    [hash (.only Hash)]]
   [control
    ["[0]" pipe]]
   [data
    ["[0]" bit]
    ["[0]" text (.only)
     ["%" \\injection]]]
   [math
    [number
     ["n" natural]
     ["i" integer]
     ["d" decimal]
     ["[0]" i64]]]
   [meta
    [macro
     ["[0]" template]]]]])

(every .public Simple
  (Variant
   {#Bit Bit}
   {#I64 I64}
   {#F64 Decimal}
   {#Text Text}))

(the .public (injection it)
  (text.Injection Simple)
  (`` (when it
        (,, (template.with [<pattern> <injection>]
              [{<pattern> value}
               (<injection> value)]

              [#Bit  bit.as_text]
              [#F64  %.decimal]
              [#Text %.text]))
        
        {#I64 value}
        (%.integer (.integer value)))))

(the .public equivalence
  (Equivalence Simple)
  (implementation
   (the (= expected actual)
     (`` (when [expected actual]
           (,, (template.with [<tag> <eq> <injection>]
                 [[{<tag> expected'} {<tag> actual'}]
                  (<eq> expected' actual')]

                 [#Bit  bit.=  bit.as_text]
                 [#F64  d.=    %.decimal]
                 [#Text text.= %.text]))

           [{#I64 expected'} {#I64 actual'}]
           (i64.= expected' actual')

           _
           false)))))

(alias [=]
       ..equivalence)

(the .public hash
  (Hash Simple)
  (implementation
   (the equivalence ..equivalence)

   (the hash
     (`` (|>> (pipe.when
                (,, (template.with [<factor> <tag> <hash>]
                      [{<tag> value'}
                       (n.* <factor>  (of <hash> hash value'))]

                      [2 #Bit  bit.hash]
                      [3 #F64  d.hash]
                      [5 #Text text.hash]
                      [7 #I64  i64.hash]))))))))
