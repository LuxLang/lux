(the .public (custom [projection handler])
  (for_any (_ of)
    (-> [(Projection of)
         (-> Phase Archive of (Operation (Bytecode Any)))]
        Handler))
  (function (_ phase archive input)
    (when (<synthesis>.value projection input)
      {try.#Success input'}
      (handler phase archive input')

      {try.#Failure error}
      (phase.failure error))))

