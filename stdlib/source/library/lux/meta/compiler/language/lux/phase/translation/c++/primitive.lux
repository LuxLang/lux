(.require
 [library
  [lux (.except i64)
   [data
    ["[0]" text]]
   [meta
    [compiler
     [target
      ["_" c++]]]]]]
 [//
  ["[0]" runtime]
  ["[0]" type]])

(def .public bit
  (-> Bit
      _.Expression)
  (|>> _.bool
       (runtime.simple runtime.Bit)))

(def .public i64
  (-> (I64 Any)
      _.Expression)
  (|>> .int
       _.int
       _.int64_t
       (runtime.simple runtime.I64)))

(def .public f64
  (-> Frac
      _.Expression)
  (|>> _.double
       (runtime.simple runtime.F64)))

(def .public (text it)
  (-> Text
      _.Expression)
  (let [size (|> it text.size .int _.int _.int64_t)]
    (|> it
        _.u32_string
        (runtime.static_text size)
        (runtime.simple runtime.Text))))
