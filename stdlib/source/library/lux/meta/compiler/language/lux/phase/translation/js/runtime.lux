(the .public with_vars
  (syntax.macro (_ [vars (<code>.tuple (<>.some <code>.local))
                    body <code>.any])
    (do [! meta.monad]
      [ids (monad.all ! (list.repeated (list.size vars) meta.seed))]
      (in (list (` (let [(,* (|> vars
                                 (list.zipped_2 ids)
                                 (list#each (function (_ [id var])
                                              (list (code.local var)
                                                    (` (_.var (, (code.text (%.message "v" (%.natural id)))))))))
                                 list.together))]
                     (, body))))))))

(the runtime
  (syntax.macro (_ [declaration (<>.or <code>.local
                                       (<code>.form (<>.and <code>.local
                                                            (<>.some <code>.local))))
                    code <code>.any])
    (macro.with_symbols [g!_ runtime]
      (let [runtime_name (` (_.var (, (code.text (code.as_text runtime)))))]
        (when declaration
          {.#Left name}
          (let [g!name (code.local name)]
            (in (list (` (the .public (, g!name)
                           Var
                           (, runtime_name)))
                      
                      (` (the (, (code.local (%.message "@" name)))
                           Statement
                           (..feature (, runtime_name)
                                      (function ((, g!_) (, g!name))
                                        (, code))))))))
          
          {.#Right [name inputs]}
          (let [g!name (code.local name)
                inputsC (list#each code.local inputs)
                inputs_typesC (list#each (function.constant (` _.Expression)) inputs)]
            (in (list (` (the .public ((, g!name) (,* inputsC))
                           (-> (,* inputs_typesC)
                               Computation)
                           (_.apply (, runtime_name) (list (,* inputsC)))))
                      
                      (` (the (, (code.local (%.message "@" name)))
                           Statement
                           (..feature (, runtime_name)
                                      (function ((, g!_) (, g!_))
                                        (..with_vars [(,* inputsC)]
                                          (_.function (, g!_) (list (,* inputsC))
                                            (, code)))))))))))))))

