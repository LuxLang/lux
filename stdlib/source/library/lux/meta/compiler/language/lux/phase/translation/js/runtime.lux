       high_16 (_.logic_right_shift (_.i32 +16))
       low_16 (_.bit_and (_.i32 (.integer (hex "FFFF"))))
       hh (|>> (_.its ..i64_high_field) high_16)
       hl (|>> (_.its ..i64_high_field) low_16)
       lh (|>> (_.its ..i64_low_field) high_16)
