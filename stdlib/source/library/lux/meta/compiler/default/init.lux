(def (get_current_payload _)
  (All (_ declaration)
    (-> (Payload declaration)
        (All (_ anchor expression)
          (///declaration.Operation anchor expression declaration
                                    (Payload declaration)))))
  (do ///phase.monad
    [buffer (///declaration.lifted_generation
             ///generation.buffer)
     registry (///declaration.lifted_generation
               ///generation.get_registry)]
    (in [buffer registry])))

