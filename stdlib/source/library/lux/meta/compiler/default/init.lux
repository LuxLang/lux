   ["[0]" meta (.only)
    ["@" target (.only Target)]
    ["[0]" configuration (.only Configuration)]
    ["[0]" version]]
   [world
    ["[0]" file]]]]
 ["[0]" //
  ["/[1]" // (.only Instancer)
   ["[1][0]" phase]
   [language
    [lux
     ["[1][0]" program (.only Program)]
     ["[1][0]" syntax (.only Aliases)]
