(.require
 [library
  [lux (.except)
   [abstract
    [monad (.only Monad do)]]
   [control
    ["[0]" try (.only Try)]]
   [world
    ["[0]" file]]]])

(def .public path
  file.Path
  "cache")

(def .public (enabled? fs)
  (All (_ !)
    (-> (file.System !)
        (! Bit)))
  (of fs directory? ..path))

(def .public (enable! ! fs)
  (All (_ !)
    (-> (Monad !) (file.System !)
        (! (Try Any))))
  (do !
    [? (..enabled? fs)]
    (if ?
      (in {try.#Success []})
      (file.make_directories ! fs ..path))))
