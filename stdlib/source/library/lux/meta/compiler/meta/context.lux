(.require
 [library
  [lux (.except #host #target
                jvm js lua python ruby c++)
   [meta
    [macro
     ["[0]" template]]]
   [world
    [file (.only Path)]]]])

(every .public Extension
  Text)

(every .public Context
  (Record
   [#host Target
    #host_module_extension Extension
    #target Path
    #artifact_extension Extension]))

(with_template [<name> <host_module_extension> <artifact_extension>]
  [(the .public (<name> target)
     (-> Path Context)
     [#host (template.symbol [._] [<name>])
      #host_module_extension <host_module_extension>
      #target target
      #artifact_extension <artifact_extension>])]

  [jvm ".jvm" ".class"]
  [js ".js" ".js"]
  [lua ".lua" ".lua"]
  [python ".py" ".py"]
  [ruby ".rb" ".rb"]
  [c++ ".cpp" ".cpp"]
  )
