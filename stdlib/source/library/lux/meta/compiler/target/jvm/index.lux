(.require
 [library
  [lux (.except)
   [abstract
    ["[0]" equivalence (.only Equivalence)]]
   [data
    [binary
     [\\injection (.only Injection)]]]
   [meta
    [type
     ["[0]" nominal]]]]]
 ["[0]" //
  [encoding
   ["[1][0]" unsigned (.only U2)]]])

(the .public length
  //unsigned.bytes/2)

(nominal.every .public (Index kind)
  U2

  (the .public index
    (All (_ kind) (-> U2 (Index kind)))
    (|>> nominal.abstraction))

  (the .public value
    (-> (Index Any) U2)
    (|>> nominal.representation))

  (the .public equivalence
    (All (_ kind) (Equivalence (Index kind)))
    (of equivalence.functor each
        ..value
        //unsigned.equivalence))

  (the .public format
    (All (_ kind) (Injection (Index kind)))
    (|>> nominal.representation
         //unsigned.format/2))
  )
