(.using
 [library
  [lux (.except)
   [abstract
    [equivalence (.only Equivalence)]
    [hash (.only Hash)]]
   [error
    ["[0]" try (.only Try)]
    ["[0]" exception (.only Exception)]]
   [function
    [predicate (.only Predicate)]]
   [data
    [text
     ["%" \\injection]]
    [collection
     ["[0]" stack (.use "[1]#[0]" mix)]
     ["[0]" array
      ["[1]" \\unsafe (.only Array)]]]]
   [math
    [number
     ["n" natural]
     ["[0]" integer]]]
   [macro
    ["[0]" template]]
   [type
    ["[0]" nominal]]]]
 [//
  ["[0]" interval (.only Interval)]])

(exception.the .public (not_an_octave [it])
  (Exception (Stack Interval))
  (exception.report
   (stack ["Intervals" (exception.listing %.natural it)])))

(exception.the .public (has_perfect_unison [it])
  (Exception (Stack Interval))
  (exception.report
   (stack ["Intervals" (exception.listing %.natural it)])))

... https://en.wikipedia.org/wiki/Scale_(music)
(nominal.every .public Scale
  (Array Interval)

  (the .public (scale intervals)
    (-> (Stack Interval)
        (Try Scale))
    (if (|> intervals
            (stack#mix n.+ interval.perfect_unison)
            (n.= interval.octave))
      (if (stack.every? (n.> interval.perfect_unison) intervals)
        {try.#Success (nominal.abstraction (array.of_stack intervals))}
        (exception.except ..has_perfect_unison [intervals]))
      (exception.except ..not_an_octave [intervals])))

  (the .public intervals
    (-> Scale
        (Stack Interval))
    (|>> nominal.representation
         (array.stack {.#None})))

  (the .public degrees
    (-> Scale
        Natural)
    (|>> nominal.representation
         array.size))

  (the .public equivalence
    (Equivalence Scale)
    (implementation
     (the (= reference it)
       (array.= n.equivalence
                (nominal.representation reference)
                (nominal.representation it)))))

  (alias [=]
         ..equivalence)

  (the .public hash
    (Hash Scale)
    (implementation
     (the equivalence ..equivalence)
     
     (the hash
       (|>> nominal.representation
            (array.stack {.#None})
            (by (stack.hash n.hash) hash)))))
  )

(template.with [<intervals> <name>]
  [(the .public <name>
     Scale
     (|> (`` (stack (,, (template.spliced <intervals>))))
         ..scale
         try.trusted))]

