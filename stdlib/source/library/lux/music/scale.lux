... https://en.wikipedia.org/wiki/Degree_(music)
(every .public Degree
  Natural)

(template.with [<step> <name>]
  [(the .public <name>
     Degree
     <step>)]

  [0 tonic]
  [1 super_tonic]
  [2 mediant]
  [3 sub_dominant]
  [4 dominant]
  [5 sub_mediant]
  [6 leading]
  )

(alias [sub_tonic]
       ..leading)

... https://en.wikipedia.org/wiki/Steps_and_skips
(every .public Motion
  Integer)

(template.with [<order> <name>]
  [(the .public <name>
     (Predicate Motion)
     (|>> integer.abs
          (<order> +1)))]

  [integer.< null?]
  [integer.= step?]
  [integer.> skip?]
  )

(alias [conjunct?]
       ..step?)

(alias [leap? disjunct?]
       ..skip?)
