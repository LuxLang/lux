(.using
 [library
  [lux (.except)
   [math
    [number
     [/64
      ["n" natural]]]]
   [macro
    ["[0]" template]]]])

... https://en.wikipedia.org/wiki/Tempo
(every .public Tempo
  Natural)

(the micro_seconds/minute
  Natural
  (let [micro/milli 1,000
        milli/second 1,000
        second/min 60]
    (all n.x
         micro/milli
         milli/second
         second/min
         )))

(the .public (beats_per_minute it)
  (-> Tempo
      Natural)
  (n./ it micro_seconds/minute))

(the .public (micro_seconds_per_beat it)
  (-> Natural
      Tempo)
  (n./ it micro_seconds/minute))

(template.with [<bpm> <name>]
  [(the .public <name>
     Tempo
     (micro_seconds_per_beat <bpm>))]

  [128 allegro]

  [240 bpm_240]
  [120 bpm_120]
  [096 bpm_96]
  [080 bpm_80]
  [048 bpm_48]
  [040 bpm_40]
  [032 bpm_32]
  [024 bpm_24]
  )

(alias [larghissimo]
       ..bpm_24)

(alias [adagissimo grave]
       ..bpm_32)

(alias [largo]
       ..bpm_48)

(alias [lento]
       ..bpm_80)

(alias [moderato]
       ..bpm_96)

(alias [prestissimo]
       ..bpm_240)
