(.require
 [library
  [lux (.except)
   [math
    ["[0]" number]]]])

... https://en.wikipedia.org/wiki/Interval_(music)
(type .public Interval
  Nat)

(with_template [<steps> <name>]
  [(def .public <name>
     Interval
     (number.hex <steps>))]

  ["0" perfect_unison]
  ["1" minor_2nd]
  ["2" major_2nd]
  ["3" minor_3rd]
  ["4" major_3rd]
  ["5" perfect_4th]
  ["6" tritone] ... https://en.wikipedia.org/wiki/Tritone
  ["7" perfect_5th]
  ["8" minor_6th]
  ["9" major_6th]
  ["A" minor_7th]
  ["B" major_7th]
  ["C" perfect_8ve]
  )

... https://en.wikipedia.org/wiki/Semitone
(alias [semi_tone half_tone step]
       ..minor_2nd)

(alias [tone whole_tone]
       ..major_2nd)

(alias [octave]
       ..perfect_8ve)
