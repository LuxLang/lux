(.require
 [library
  [lux (.except)
   [math
    ["[0]" number]]
   [meta
    [macro
     ["[0]" template]]]]])

... https://en.wikipedia.org/wiki/Dynamics_(music)
(every .public Velocity
  Natural)

(the .public mute
  Velocity
  (number.octal "000"))

(template.with [<code> <short> <long>]
  [(the .public <short>
     Velocity
     (number.octal <code>))

   (alias [<long>]
          <short>)]

  ["020" ppp pianississimo]
  ["040" pp pianissimo]
  ["060" p piano]
  ["100" mp mezzo_piano]
  
  ["120" mf mezzo_forte]
  ["140" f forte]
  ["160" ff fortissimo]
  ["177" fff fortississimo]
  )
