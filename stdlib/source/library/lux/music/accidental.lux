(.require
 [library
  [lux (.except)]]
 [//
  [pitch (.only Pitch)]])

... https://en.wikipedia.org/wiki/Accidental_(music)
(every .public Accidental
  (-> Pitch
      Pitch))

... https://en.wikipedia.org/wiki/Sharp_(music)
(def .public sharp
  Accidental
  ++)

(def .public double_sharp
  Accidental
  (|>> ..sharp
       ..sharp))

... https://en.wikipedia.org/wiki/Flat_(music)
(def .public flat
  Accidental
  --)

(def .public double_flat
  Accidental
  (|>> ..flat
       ..flat))

... https://en.wikipedia.org/wiki/Natural_(music)
(def .public natural
  Accidental
  (|>>))
