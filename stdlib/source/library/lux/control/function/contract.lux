(.using
 [library
  [lux (.except)
   [control
    ["[0]" exception (.only Exception)]]
   [data
    [text
     ["%" \\injection]]]
   [math
    [number
     ["i" integer]]]
   [meta
    ["[0]" code (.only)
     ["<[1]>" \\projection]]
    [macro (.only with_symbols)
     ["[0]" syntax]
     ["[0]" template]]]]])

(template.with [<name>]
  [(exception.the .public (<name> condition)
     (Exception Code)
     (exception.report
      (list ["Condition" (code.as_text condition)])))]

  [pre_condition_failed]
  [post_condition_failed]
  )

(the .public (assert! message test)
  (-> Text Bit [])
  (if test
    []
    (halt! message)))

(the .public pre
  (syntax.macro (_ [test <code>.any
                    expr <code>.any])
    (in (list (` (exec
                   (..assert! (, (code.text (exception.error ..pre_condition_failed test)))
                              (, test))
                   (, expr)))))))

(the .public post
  (syntax.macro (_ [test <code>.any
                    expr <code>.any])
    (with_symbols [g!output]
      (in (list (` (let [(, g!output) (, expr)]
                     (exec
                       (..assert! (, (code.text (exception.error ..post_condition_failed test)))
                                  ((, test) (, g!output)))
                       (, g!output)))))))))
