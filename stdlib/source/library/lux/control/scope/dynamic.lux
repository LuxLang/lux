(.using
 [library
  [lux (.except Bindings Scope
                let the)
   ["[0]" debug]
   [abstract
    [monad (.only do)]
    ["?" projection]]
   [control
    [scope (.only Scope)]
    ["[0]" maybe]]
   ["[0]" function]
   [data
    [collection
     ["[0]" dictionary (.only Dictionary)]
     ["[0]" list (.use "[1]#[0]" mix)]]]
   ["[0]" macro (.only)
    ["[0]" syntax (.only)
     ["[0]" export]]]
   [type
    ["[0]" nominal]]
   ["[0]" meta (.only)
    ["[0]" module]
    ["[0]" binding]
    ["[0]" name]
    ["[0]" code (.only)
     ["?[1]" \\projection]]]]])

(nominal.every Bindings
  (Dictionary Name Any)

  ... https://en.wikipedia.org/wiki/Scope_(computer_science)#Dynamic_scope
  (every .public Dynamic
    (Scope Bindings))

  (.the .public value
    (for_any (_ it)
      (-> (Dynamic it)
          it))
    (function.on (<| nominal.abstraction
                     (dictionary.empty name.hash))))

  (.the of_bindings
    (-> Bindings
        (Dictionary Name Any))
    (|>> nominal.reification))

  (.the .public the
    (syntax.macro (_ [[policy name] (export.with ?code.local)
                      type ?code.any
                      term ?code.any])
      (do meta.monad
        [[here _] module.current
         macro.with_names ['default 'token]]
        (in (list (` (.the (, policy) (, (code.local name))
                       (Dynamic (, type))
                       (.let [(, 'default) (, term)
                              (, 'token) (is Name
                                             [(, (code.text here)) (, (code.text name))])]
                         (|>> ((debug.private ..of_bindings))
                              (dictionary.value (, 'token))
                              (as (Maybe (, type)))
                              (maybe.else (, 'default)))))))))))
  
  (.the (let' name value _ term)
    (for_any (_ it term)
      (-> Name it (Dynamic it) (Dynamic term)
          (Dynamic term)))
    (|>> nominal.reification
         (dictionary.has name value)
         nominal.abstraction
         term))

  (.the .public let
    (syntax.macro (_ [bindings (?code.tuple (?.some (?.and ?code.name ?code.any)))
                      term ?code.any])
      (do [! meta.monad]
        [bindings (list.each' ! (function (_ [name value])
                                  (do !
                                    [name (binding.normal name)]
                                    (in [name value])))
                              bindings)]
        (in (list (list#mix (function (_ [name value] term)
                              (.let ['name (code.name name)]
                                (` ((debug.private ..let')
                                    (name (, 'name))
                                    (, value)
                                    (, 'name)
                                    (, term)))))
                            term
                            (list.reversed bindings)))))))
  )
