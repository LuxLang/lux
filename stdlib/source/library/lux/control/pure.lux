(.require
 [library
  [lux (.except)
   [abstract
    [functor (.only Functor)]
    [apply (.only Apply)]
    [monad (.only Monad)]
    [comonad (.only CoMonad)]]
   [control
    ["[0]" function]]]])

(every .public (Pure of)
  of)

(the .public functor
  (Functor Pure)
  (implementation
   (the each function.identity)))

(the .public apply
  (Apply Pure)
  (implementation
   (the functor ..functor)
   (the (on fa ff)
     (ff fa))))

(the .public monad
  (Monad Pure)
  (implementation
   (the functor ..functor)
   (the in function.identity)
   (the conjoint function.identity)))

(the .public comonad
  (CoMonad Pure)
  (implementation
   (the functor ..functor)
   (the out function.identity)
   (the disjoint function.identity)))
