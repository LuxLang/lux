(.using
 [library
  [lux (.except)
   [abstract
    [equivalence (.only Equivalence)]
    ["<>" projection]]
   [data
    ["[0]" product]
    [collection
     ["[0]" list
      ["?[1]" \\projection]]]]
   [meta
    ["[0]" code (.only)
     ["<[1]>" \\projection (.only Projection)]]]]])

(the extension
  "lux check")

(every .public Check
  (Record
   [:type Code
    :value Code]))

(the .public equivalence
  (Equivalence Check)
  (all product.equivalence
       code.equivalence
       code.equivalence
       ))

(alias [=]
       ..equivalence)

(the .public (as_code (open "_[0]"))
  (-> Check
      Code)
  (` ((, (code.text ..extension))
      (, _:type)
      (, _:value))))

(the .public of_code
  (Projection Check)
  (<| <code>.form
      (<>.after (<code>.this_text ..extension))
      (<>.and ?list.any
              ?list.any)))
