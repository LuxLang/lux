(.using
 [library
  [lux (.except)
   [abstract
    [equivalence (.only Equivalence)]
    ["<>" projection]]
   [data
    ["[0]" product]
    [collection
     ["[0]" list (.use "[1]:[0]" monad)
      ["?[1]" \\projection]]]]
   [meta
    ["[0]" code (.only)
     ["<[1]>" \\projection (.only Projection)]]]]])

(every .public Input
  (Record
   [:binding Code
    :type Code]))

(the .public equivalence
  (Equivalence Input)
  (all product.equivalence
       code.equivalence
       code.equivalence
       ))

(alias [=]
       ..equivalence)

(the .public as_code
  (-> (List Input)
      Code)
  (|>> (list:each (function (_ value)
                    (list (its :binding value)
                          (its :type value))))
       list:conjoint
       code.tuple))

(the .public of_code
  (Projection (List Input))
  (<| <code>.tuple
      <>.some
      (all <>.and
           ?list.any
           ?list.any
           )))
