(def: (resolve_struct_type type)
  (-> Type (Maybe (List Type)))
  (case type
    (#Product _)
    (#Some (flat_tuple type))

    (#Apply arg func)
    (do maybe_monad
      [output (apply_type func arg)]
      (resolve_struct_type output))

    (#UnivQ _ body)
    (resolve_struct_type body)

    (#ExQ _ body)
    (resolve_struct_type body)

    (#Named name type)
    (resolve_struct_type type)

    (#Sum _)
    #None
    
    _
    (#Some (list type))))

