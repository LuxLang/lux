    ["[0]" rgb]]]])

(the description
  (template (_ <name>)
    [($.definition <name>
       (let [[red green blue] <name>
             [_ name] (symbol <name>)]
         (format "R:" (hex#encoded red)
                 " G:" (hex#encoded green)
                 " B:" (hex#encoded blue)
                 " | " (text.replaced "_" " " name))))]))

