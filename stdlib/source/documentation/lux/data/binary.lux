                       ($.definition \\format.binary_64)
                       ($.definition \\format.utf8_8)
                       ($.definition \\format.utf8_16)
                       ($.definition \\format.utf8_32)
                       ($.definition \\format.utf8_64)
                       ($.definition \\format.text)
