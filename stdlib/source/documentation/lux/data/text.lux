(`` (def \\parser
      (List $.Documentation)
      (let [exception (list ($.definition \\parser.unconsumed_input)
                            ($.definition \\parser.expected_to_fail)
                            ($.definition \\parser.cannot_parse)
                            ($.definition \\parser.cannot_slice)
