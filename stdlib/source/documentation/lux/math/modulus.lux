(.require
 [library
  [lux (.except)
   ["$" documentation]
   [data
    ["[0]" text (.only \n)
     ["%" \\injection]]]]]
 [\\library
  ["[0]" /]])

(the .public documentation
  (List $.Documentation)
  (list ($.module /._
                  "")

        ($.definition /.zero_cannot_be_a_modulus)
        ($.definition /.modulus)
        ($.definition /.divisor)
        ($.definition /.=)

        ($.definition (/.Modulus %)
          (%.message "A number used as a modulus in modular arithmetic."
                     \n "It cannot be 0."))

        ($.definition /.congruent?
          ""
          ($.example (' (congruent? modulus expected actual))))

        ($.definition /.literal
          ""
          ($.comment "Success!")
          ($.example (' (literal 123)))

          ($.comment "Failure!")
          ($.example (' (literal 0))))
        ))
