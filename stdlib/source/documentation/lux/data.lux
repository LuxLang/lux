(.module:
  [library
   [lux #*
    ["$" documentation (#+ documentation:)]
    [data
     [text (#+ \n)
      ["%" format (#+ format)]]
     [collection
      ["." list]]]]]
  ["." / #_
   ["#." binary]
   ["#." bit]
   ["#." collection]
   ["#." color]
   ... ["#." identity]
   ... ["#." name]
   ... ["#." product]
   ... ["#." sum]
   ... ["#." text]
   ... ["#." format #_
   ...  ["#/." binary]
   ...  ["#/." json]
   ...  ["#/." tar]
   ...  ["#/." xml]]
   ])

(.def: .public documentation
  (.List $.Module)
  (list.together
   (list /binary.documentation
         /bit.documentation
         /collection.documentation
         /color.documentation
         ... /identity.documentation
         ... /name.documentation
         ... /product.documentation
         ... /sum.documentation
         ... /text.documentation
         ... /format.documentation
         )))
