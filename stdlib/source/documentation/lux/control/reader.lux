(.using
 [library
  [lux (.except local)
   ["$" documentation (.only documentation:)]
   [data
    [text (.only \n)
     ["%" format (.only format)]]]
   [macro
    ["[0]" template]]]]
 [\\library
  ["[0]" /]])

(documentation: (/.Reader environment it)
  "Computations that have access to some environmental value.")

(documentation: /.read
  "Get the environment.")

(documentation: /.local
  "Run computation with a locally-modified environment."
  [(local change proc)])

(documentation: /.result
  "Executes the reader against the given environment."
  [(result env proc)])

(documentation: /.with
  "Monad transformer for Reader."
  [(with monad)])

(documentation: /.lifted
  "Lift monadic values to the Reader wrapper.")

(.def: .public documentation
  (.List $.Module)
  ($.module /._
            ""
            [..Reader
             ..read
             ..local
             ..result
             ..with
             ..lifted
             ($.default /.functor)
             ($.default /.apply)
             ($.default /.monad)]
            []))
