(;module:
  lux
  (lux (codata [io])
       (control monad)
       (data text/format
             [error #- fail])
       (math ["R" random])
       pipe
       [compiler]
       (macro ["s" syntax]
              ["&" template #+ template:]))
  lux/test)

(template: (hypotenuse x y)
  (i.+ (i.* x x) (i.* y y)))

(test: "Templates"
  [x R;int
   y R;int]
  (assert "Template application is a stand-in for the templated code."
          (i.= (i.+ (i.* x x) (i.* y y))
               (hypotenuse x y))))
