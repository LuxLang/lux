(;module:
  lux
  (lux (codata [io])
       (control monad
                [eq])
       (data [text "Text/" Monoid<Text>]
             text/format
             [number]
             [bool "B/" Eq<Bool>]
             maybe
             (struct [list]))
       (math ["R" random])
       pipe
       [type]
       type/auto)
  lux/test)

(test: "Automatic structure selection"
  [x R;nat
   y R;nat]
  (assert "Can automatically select first-order structures."
          (B/= (:: number;Eq<Nat> = x y)
               (::: = x y))))
