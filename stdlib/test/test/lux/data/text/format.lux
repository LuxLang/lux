(.module:
  [lux #*
   [control
    [monad (#+ do Monad)]]
   [data
    ["." text
     format]]]
  lux/test)

(context: "Formatters"
  (let [(^open "&/.") text.Equivalence<Text>]
    ($_ seq
        (test "Can format common values simply."
              (and (&/= "#1" (%b #1))
                   (&/= "+123" (%n +123))
                   (&/= "123" (%i 123))
                   (&/= "123.456" (%f 123.456))
                   (&/= ".5" (%r .5))
                   (&/= "\"YOLO\"" (%t "YOLO"))
                   (&/= "User-id: 123 -- Active: #1" (format "User-id: " (%i 123) " -- Active: " (%b #1)))))
        )))
