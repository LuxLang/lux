(;module:
  lux
  (lux (codata [io])
       (control monad)
       (data text/format
             [number])
       (codata function))
  lux/test)

(test: "Formatters"
  (all (match "true" (%b true))
       (match "123" (%i 123))
       (match "123.456" (%r 123.456))
       (match "#\"t\"" (%c #"t"))
       (match "\"YOLO\"" (%t "YOLO"))
       (match "User-id: 123 -- Active: true" (format "User-id: " (%i 123) " -- Active: " (%b true)))
       ))
