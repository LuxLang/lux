(;module:
  lux
  (lux [io]
       (control monad)
       (data text/format
             [text]
             [number])
       (codata function))
  lux/test)

(test: "Formatters"
  (let [(^open "&/") text;Eq<Text>]
    ($_ seq
        (assert "Can format common values simply."
                (and (&/= "true" (%b true))
                     (&/= "123" (%i 123))
                     (&/= "123.456" (%r 123.456))
                     (&/= "#\"t\"" (%c #"t"))
                     (&/= "\"YOLO\"" (%t "YOLO"))
                     (&/= "User-id: 123 -- Active: true" (format "User-id: " (%i 123) " -- Active: " (%b true)))))
        )))
