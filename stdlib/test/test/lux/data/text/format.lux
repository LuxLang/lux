(;module:
  lux
  (lux [io]
       (control [monad #+ do Monad])
       (data text/format
             [text]
             [number]))
  lux/test)

(context: "Formatters"
  (let [(^open "&/") text;Eq<Text>]
    ($_ seq
        (test "Can format common values simply."
              (and (&/= "true" (%b true))
                   (&/= "123" (%i 123))
                   (&/= "123.456" (%r 123.456))
                   (&/= "\"YOLO\"" (%t "YOLO"))
                   (&/= "User-id: 123 -- Active: true" (format "User-id: " (%i 123) " -- Active: " (%b true)))))
        )))
