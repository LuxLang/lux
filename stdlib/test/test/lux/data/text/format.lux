(.module:
  lux
  (lux [io]
       (control [monad (#+ do Monad)])
       (data text/format
             [text]
             [number]))
  lux/test)

(context: "Formatters"
  (let [(^open "&/") text.Equivalence<Text>]
    ($_ seq
        (test "Can format common values simply."
              (and (&/= "true" (%b true))
                   (&/= "+123" (%n +123))
                   (&/= "123" (%i 123))
                   (&/= "123.456" (%f 123.456))
                   (&/= ".5" (%r .5))
                   (&/= "\"YOLO\"" (%t "YOLO"))
                   (&/= "User-id: 123 -- Active: true" (format "User-id: " (%i 123) " -- Active: " (%b true)))))
        )))
