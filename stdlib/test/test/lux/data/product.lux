(;module:
  lux
  (lux [io]
       (control monad)
       (data product
             [text "Text/" Monoid<Text>]
             [number])
       (codata function))
  lux/test)

(test: "Products"
  ($_ seq
      (assert "Can access the sides of a pair."
              (and (i.= 1 (left [1 2]))
                   (i.= 2 (right [1 2]))))
      
      (assert "Can swap the sides of a pair."
              (let [[_left _right] (swap [1 2])]
                (and (i.= 2 _left)
                     (i.= 1 _right))))
      ))
