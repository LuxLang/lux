(;module:
  lux
  (lux (control [monad])
       (codata [io])
       (data char
             [text])
       (math ["R" random])
       pipe
       [host #- try])
  lux/test)

(test: "Char operations"
  [value R;char]
  (assert "" (and (:: Eq<Char> = value value)
                  (|> value code char (:: Eq<Char> = value))
                  (|> value
                      (:: Codec<Text,Char> encode)
                      (:: Codec<Text,Char> decode)
                      (case> (#;Right dec-value)
                             (:: Eq<Char> = value dec-value)

                             (#;Left _)
                             false))
                  (|> value as-text
                      (text;at +0) (default (undefined))
                      (:: Eq<Char> = value))
                  (|> value as-text text;upper-case
                      (text;at +0) (default (undefined))
                      (:: Ord<Char> <= value))
                  (|> value as-text text;lower-case
                      (text;at +0) (default (undefined))
                      (:: Ord<Char> >= value))
                  )))

(test: "Special cases"
  (all (assert "" (space? #" "))
       (assert "" (space? #"\n"))
       (assert "" (space? #"\t"))
       (assert "" (space? #"\r"))
       (assert "" (space? #"\f"))
       (assert "" (not (space? #"a")))
       ))
