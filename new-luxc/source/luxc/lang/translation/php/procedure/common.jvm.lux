(def: int-procs
  Bundle
  (<| (prefix "int")
      (|> (dict.new text.Hash<Text>)
          (install "+" (binary int//+))
          (install "-" (binary int//-))
          (install "*" (binary int//*))
          (install "/" (binary int///))
          (install "%" (binary int//%))
          (install "=" (binary int//=))
          (install "<" (binary int//<))
          (install "min" (nullary int//min))
          (install "max" (nullary int//max))
          (install "to-frac" (unary _.floatval/1)))))

