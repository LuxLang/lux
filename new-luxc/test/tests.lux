(;module:
  lux
  (lux (control monad)
       [io]
       (concurrency [promise])
       [cli #+ program:]
       [test])
  (test (luxc ["_;P" parser]
              (analyser ["_;A" primitive]
                        ["_;A" structure]
                        ["_;A" reference]
                        ["_;A" case]
                        ["_;A" function]
                        (procedure ["_;A" common]))
              (synthesizer ["_;S" primitive]
                           ["_;S" structure]
                           ["_;S" function]
                           ["_;S" procedure]))))

## [Program]
(program: args
  (test;run))
