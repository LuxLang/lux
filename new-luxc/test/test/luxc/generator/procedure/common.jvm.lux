(def: (above-threshold value)
  (-> Deg Deg)
  (let [threshold .000000001 #( 1/(2^30) )#]
    (if (d.< threshold value)
      (d.+ threshold value)
      value)))

(context: "Deg procedures"
  (<| (times +100)
