        [param (|> r;deg (:: @ map above-threshold))
         special r;nat
         subject (|> r;deg (:: @ map above-threshold))]
        (`` ($_ seq
                (~~ (do-template [<name> <reference>]
                      [(test <name>
                             (|> (do meta;Monad<Meta>
